<script type="text/javascript">

    $(document).ready(function () {
        var areaParentId = $('.areaParentId');
        var areaChilId = $('.areaChilId');
        areaParentId.change(function () {
                var ftyId = $(this).val();
                if (!ftyId) {
                    areaChilId.html('- 暂无结果 -');
                    return
                }
                if($(this).is(":checked")){
                    $("#areaChilId"+ftyId).show();
                }else{
                    $("#areaChilId"+ftyId).hide();
                    $("#areaChilId"+ftyId).find("input[type=checkbox]").prop("checked",false);
                }
        })


    })
</script>