<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>货位查看</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>订单搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">工厂:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="ftyId">
                                                <option value="">- 请选择 -</option>
                                                <% addrTypesList.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.ftyId == element.id )?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">仓库:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="whseId">
                                                <option value="">- 请选择 -</option>
                                                <% storeTypes.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.whseId == element.id )?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">仓库区域:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="regionId">
                                                <option value="">- 请选择 -</option>
                                                <% storeTypes.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.regionId == element.id )?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>


                            </div>

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">货位号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  type="text"
                                                   value="<%= DWYRequest.query.spaceId %>"
                                                   name="spaceId">
                                        </div>
                                    </div>
                                </div>

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">显示部分:</label>
                                        <div class="col-xs-8">
                                            <div class="col-xs-3">
                                                <div class="form-group">
                                                    <div class="col-xs-8 tight-right">
                                                        <input class="form-control validate[custom[onlyNumberSp]]" placeholder="行" type="text"
                                                               name="spaceRow" value="<%= DWYRequest.query.spaceRow %>">
                                                    </div>
                                                    <label class="col-xs-4 control-label ">行 </label>
                                                </div>
                                            </div>
                                            <div class="col-xs-3">
                                                <div class="form-group">
                                                    <div class="col-xs-8 tight-right">
                                                        <input class="form-control validate[custom[onlyNumberSp]]" placeholder="列" type="text"
                                                               name="spaceColumn" value="<%= DWYRequest.query.spaceColumn %>">
                                                    </div>
                                                    <label class="col-xs-4 control-label ">列 </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">显示方式:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="isAll">
                                                <option value="">- 请选择 -</option>
                                                <option value="2">不显示已排满</option>
                                                <option value="1">显示所有</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-xs-12">
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">统计:</label>
                                        <div class="col-xs-8">
                                            <strong>不明确3个；空156个；未排满110个；释放中；8个；已排满1000个；合计1290个</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <a class="btn btn-primary margin-right-5" href="/storesManage/create">
                                        <i class="fa fa-save"></i>
                                        新建货位
                                    </a>
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>货位列表</h6>

                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>货位号</th>
                                <th>所在行/列/层</th>
                                <th>最大承重</th>
                                <th>最大存货数量</th>
                                <th>货架长宽高</th>
                                <th>货位状态</th>
                                <th>新建时间</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(storeList.totalItems != 0  ){
                            storeList.result.forEach(function (element, index) { %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td><a href="/storesManage/detail/<%= element.bid %>"><%= element.bid %></a></td>
                                <td><%= element.storeName %></td>
                                <td><%= element.storeGid %></td>
                                <td><%= element.mobile %></td>
                                <td><%= element.address %></td>
                                <td><%= DWY_Helper.getAssistVal(element.addrType, addrTypesList) %></td>
                                <td><%= DWY_Helper.getAssistVal(element.storeType, storeTypes) %></td>
                                <td><%= DWY_Helper.getWhether(element.isWarehouse) %></td>
                                <td><%= DWY_Helper.getLocalDate(element.addTime) %></td>
                                <td><%= element.minFunds %></td>
                                <td>
                                    <a href="/department/stores/<%= element.bid %>">部门信息</a>
                                    <a href="/roles/<%= element.bid %>/1" class="margin-left-20">角色信息</a>
                                </td>
                            </tr>
                            <%  })
                            }else{ %>
                            <tr>
                                <td colspan="12" align="center">暂无结果</td>
                            </tr>
                            <% } %>

                            </tbody>
                        </table>
                        <%- pagination %>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {


        pageSetUp();

        $(".fg-date-time-picker").flatpickr(data_time_picker.data_picker); // jQuery
    })

</script>


<%- include('../layouts/foot'); %>