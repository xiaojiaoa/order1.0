<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>
<!-- MAIN PANEL -->
<div id="main" role="main" class="mainFlex">
    <!-- RIBBON -->
    <div id="ribbon">
        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a href="/message" class="back-url">短信管理</a></li>
            <li>短信设置</li>
        </ol>
        <!-- end breadcrumb -->
    </div>
    <!-- END RIBBON -->
    <!-- MAIN CONTENT -->
    <div id="content">
        <div class="well col-xs-6">
            <div class="row">
                <div class="col-xs-12">
                    <legend>短信设置</legend>
                </div>
            </div>

            <div class="col-xs-12">
                    <form class="form-horizontal col-xs-12" method="post" action="/msg/selectRoles" id="select-role">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                    <thead>
                                        <th>
                                            <button class="btn btn-primary " type="submit" id="role-submit">
                                                保存
                                            </button>
                                        </th>
                                    </thead>
                                    <tbody>
                                        <% if(DWY_Helper.isCanLoop(roleList)){
                                        roleList.forEach(function(element){
                                        %>
                                        <tr data-id="<%= element.id %>">
                                            <td>
                                                <label class="checkbox-inline" >
                                                    <input type="checkbox" class="checkbox" name="types" value="<%= element.id %>" <%= (roleState.indexOf((element.id).toString())>-1?'checked':'')%> />
                                                    <span><%= element.name %></span>
                                                </label>
                                            </td>
                                        </tr>
                                        <%})}%>
                                        <input type="hidden" name="messageId" value="<%= messageId %>">
                                    </tbody>
                            </table>
                        </div>
                    </form>
            </div>

        </div>
    </div>
</div>





<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>
<script type="text/javascript">
    $(document).ready(function () {
        pageSetUp();
        $(".fg-date-picker").flatpickr(data_time_picker.data_picker); // jQuery
    })
</script>
<%- include('../layouts/foot'); %>