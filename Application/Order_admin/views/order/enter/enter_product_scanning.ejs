<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a class="back-url" href="/enterProduct"><i class="fa fa-chevron-left"></i> 成品入库</a></li>
            <li>入库</li>
        </ol>


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>客户搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get" id="search-customer">
                            <div class="col-xs-12">
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">订单号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" value="<%= DWYRequest.query. tid %>" type="text"
                                                   name="tid">
                                        </div>
                                    </div>
                                    <input name="type" type="hidden" value="<%= DWYRequest.query.type %>">
                                </div>
                                <div class="col-xs-3">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>


                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>


        <div class="well">

            <div class="row">
                <div class="col-xs-12">
                    <div class="orderItemLayerTit">
                        <ul class="orderItemMenu">
                            <a href="/enterProduct/notin?type=1001">
                                <li class="padding-10 <%= DWYRequest.query.type ==1001 ?'materielBak':'' %>">配件</li>
                            </a>
                            <a href="/enterProduct/notin?type=1002">
                                <li class="padding-10 <%= DWYRequest.query.type ==1002 ?'materielBak':'' %>">工件</li>
                            </a>
                        </ul>

                    </div>

                </div>

                    <div class="col-xs-12">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover" id="contentArea">
                                <thead>
                                <tr>
                                    <th>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" class="checkbox"
                                                   id="checkAll">
                                            <span>&nbsp;</span>
                                        </label>序号
                                    </th>
                                    <th>包装流水号</th>
                                    <th>包装名</th>
                                    <th>包装类型</th>
                                    <th>包装产品</th>
                                    <th>包装产品材料</th>
                                    <th>订单号</th>
                                    <th>包装状态</th>
                                    <!--<th>操作</th>-->
                                </tr>
                                </thead>
                                <tbody id="moreAddTR">
                                <% if(DWY_Helper.isCanLoop(cargoinList.result)){
                               cargoinList.result.forEach(function(element,index){%>
                                <tr>
                                    <td>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" class="checkbox"
                                                   name="pakgs" value="<%= element.packageLid %>">
                                            <span><%= index+1 %></span>
                                        </label>
                                    </td>
                                    <td><%=element.packageLid %></td>
                                    <td><%=element.packageName%></td>
                                    <td><%=element.packageTypeName%></td>
                                    <td><%=element.packageProduct%></td>
                                    <td><%=element.packageProductMaterial%></td>
                                    <td><%=element.tid %></td>
                                    <td><%= DWY_Helper.getPackageType(element.stcode) %></td>
                                    <!--<td><a class="label label-primary" id="toEnter">入库</a></td>-->
                                </tr>
                                <%
                                })}else{ %>
                                <tr>
                                    <td colspan="9" class="text-align-center">暂无数据</td>
                                </tr>
                                <% }
                                %>
                                </tbody>
                            </table>
                        </div>
                    </div>

            </div>
        </div>
        <div class="well" >
                <form class="search-form form-horizontal target" id="opretion">
                    <div class="col-xs-3">
                        <div class="form-group">
                            <label class="col-xs-3 control-label"><span class="requird"></span> 工厂:</label>
                            <div class="col-xs-9">
                                <select class="form-control ftyId validate[required]" name="ftyId" id="ftyId" hidden
                                        <% if( !DWY_Helper.hasPermission(Permission.storage.queryAll.id, permission) ){ %> disabled<% } %>
                                >
                                    <option value="">- 工厂 -</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <div class="form-group">
                            <label class="col-xs-3 control-label"><span class="requird"></span> 仓库:</label>
                            <div class="col-xs-9">
                                <select class="form-control whseId validate[required]" name="whseId" id="whseId">
                                    <option value="">- 仓库 -</option>

                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <div class="form-group">
                            <label class="col-xs-3 control-label"><span class="requird"></span> 区域:</label>
                            <div class="col-xs-9">
                                <select class="form-control regionId validate[required]" name="regionId" id="regionId">
                                    <option value="">- 区域 -</option>
                                </select>
                            </div>
                        </div>
                    </div>


                    <div class="col-xs-2">
                        <input class="form-control validate[required,custom[number],minSize[6],maxSize[6]]"
                               name="spaceId" placeholder="行列层，6位数字" id="spaceId">
                    </div>
                    <div class="col-xs-1">
                        <input type="hidden" class="" id="checkedValue">
                        <a class="btn btn-primary" id="toEnter">确定入库</a>
                    </div>
                    <div class="dwy-clear"></div>
                </form>

        </div>

    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">
    $(document).ready(function () {

        $("#search-customer").validationEngine();
        $("#opretion").validationEngine();

        DWY_fty_region.init({
            target: '.target',
//                factory: '.ftyId',
//                warehouse: '.whseId',
//                region: '.regionId',
            factoryValue: '<%= user.ftyId %>',

            cargoId:2,  //类型，1物料，2包装
            type:'<%= DWYRequest.query.type %>' ,     //物料时传物料编号， 包装时传工件、配件 id
        });

        var checkedValue = $('#checkedValue');

        $("#checkAll").change(function () {
            if($(this).is(":checked")){
                $(":checkbox:not(:disabled)").prop('checked',true);
                $("input[name='pakgs']:checked").each(function (i) {
                    checkedValue.addClass(this.value+',')
                });
            }else{
                $(":checkbox").prop('checked',false);
                checkedValue.removeClass()
            }
        })
        $("input[name='pakgs']").change(function () {
            if($(this).is(':checked')){
                checkedValue.addClass(this.value+',')
            }else{
                checkedValue.removeClass(this.value+',')
            }
        });

        $('#ftyId,#whseId,#regionId').change(function () {
            $('#spaceId').val('');

        })

        $('#toEnter').click(function () {
            var packageList = checkedValue.attr('class');
            if(!packageList){
                layer.msg('请先选择订单', {icon: 2, time: 2000});
                return;
            }
            if($("#opretion").validationEngine('validate')){
                var regionId=$("#regionId").val();
                var spaceId=$("#spaceId").val();

                packageList = packageList.substring(0,packageList.length-1);
                packageList = packageList.replace(/\s/g,"")
                $.ajax({
                    url: '/app/doCargoin',
                    data:{
                        regionId:regionId,
                        spaceId:spaceId,
                        packageList:packageList,
                    },
                    method: 'post',
                    success: function (data) {
                        console.log(data)
                        if(data.code == 1001){
                            successLayout.hrefTo("/enterProduct");
                        }else{
                            var response = {
                                responseText:JSON.stringify(data)
                            };
                            errorLayout.normal(response);
                        }

                    },
                    error: function (response) {
                        layer.close(index)
                        var status = response.status;
                        if(status == 201){
                            location.href="/enterProduct";
                            return;
                        }
                        errorLayout.normal(response);

                    }
                });


            }




        })

        pageSetUp();


    })

</script>

<%- include('../layouts/foot'); %>