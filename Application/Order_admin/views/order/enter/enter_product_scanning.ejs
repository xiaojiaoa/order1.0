<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a class="back-url" href="/enterProduct"><i class="fa fa-chevron-left"></i> 成品入库</a></li>
            <li>入库</li>
        </ol>


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!-- well -->


        <div class="well">

            <div class="row">
                <form class="form-horizontal" id="search-customer">

                    <div class="col-xs-12 search-form">
                        <div class="col-xs-3">
                            <div class="form-group">
                                <label class="col-xs-3 control-label"><span class="requird"></span> 工厂:</label>
                                <div class="col-xs-9">
                                    <select class="form-control validate[required]" name="ftyId" id="ftyId">
                                        <option value="">- 请选择 -</option>
                                        <% factoryList.forEach(function (element) { %>
                                        <option value="<%= element.ftyId %>"  >
                                            <%= element.name %>
                                        </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-3">
                            <div class="form-group">
                                <label class="col-xs-3 control-label"><span class="requird"></span> 仓库:</label>
                                <div class="col-xs-9">
                                    <select class="form-control validate[required]" name="whseId" id="whseId">
                                        <option value="">- 请选择 -</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-3">
                            <div class="form-group">
                                <label class="col-xs-3 control-label"><span class="requird"></span> 区域:</label>
                                <div class="col-xs-9">
                                    <select class="form-control validate[required]" name="regionId" id="regionId">
                                        <option value="">- 请选择 -</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-3" id="waningArea">
                            <input class="form-control validate[required,custom[number],minSize[6],maxSize[6]]"
                                   name="spaceId" placeholder="行列层，6位数字" id="spaceId">
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover table-editinput" id="contentArea">
                                <thead>
                                <tr>
                                    <th>序号</th>
                                    <th>包装流水号</th>
                                    <th>包装名</th>
                                    <th>包装类型</th>
                                    <th>包装产品</th>
                                    <th>包装产品材料</th>
                                    <th>订单号</th>
                                    <th>包装状态</th>
                                </tr>
                                </thead>
                                <tbody id="moreAddTR">
                                <% if(DWY_Helper.isCanLoop(packageList.list)){
                                var packageLidAll = '' %>
                                <% packageList.list.forEach(function(element,index){
                                element.packageList.forEach(function (elementlist,index) {
                                    packageLidAll += elementlist.packageLid +',' %>
                                <tr>
                                    <td><%= index+1 %></td>
                                    <td><%=elementlist.packageLid%></td>
                                    <td><%=elementlist.packageName%></td>
                                    <td><%=elementlist.packageTypeName%></td>
                                    <td><%=elementlist.packageProduct%></td>
                                    <td><%=elementlist.packageProductMaterial%></td>
                                    <td><%=elementlist.tid%></td>
                                    <td><%= DWY_Helper.getPackageType(elementlist.stcode) %></td>
                                </tr>
                                <%   })
                                })}
                                packageLidAll = packageLidAll.substring(0,packageLidAll.length-1);
                                %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <input id="packageList" value="<%= packageLidAll %>" type="hidden">
                    <div class="col-xs-12">
                        <hr class="simple">
                        <div class="col-xs-12 text-center">
                            <a class="btn btn-primary" id="toEnter">确认入库</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">
    $(document).ready(function () {

        $("#search-customer").validationEngine();


        $('#ftyId,#whseId,#regionId').change(function () {
            $('#spaceId').val('');

        })

        $('#toEnter').click(function () {
            if($("#search-customer").validationEngine('validate')){
                var regionId=$("#regionId").val();
                var spaceId=$("#spaceId").val();
                var packageList=$("#packageList").val();
                $.ajax({
                    url: '/app/doCargoin',
                    data:{
                        regionId:regionId,
                        spaceId:spaceId,
                        packageList:packageList,
                    },
                    method: 'post',
                    success: function (data) {
                        console.log(data)
                        if(data.code == 1001){
                            successLayout.hrefTo("/enterProduct");
                        }else{
                            var response = {
                                responseText:JSON.stringify(data)
                            };
//                            data.responseText = data;
//                            var data = JSON.parse(data.responseText);
                            errorLayout.normal(response);
                        }

                    },
                    error: function (response) {
                        layer.close(index)
                        var status = response.status;
                        if(status == 201){
                            location.href="/enterProduct";
                            return;
                        }
                        errorLayout.normal(response);

                    }
                });


            }




        })

        pageSetUp();


    })

</script>

<%- include('../cargospace/js_function'); %>
