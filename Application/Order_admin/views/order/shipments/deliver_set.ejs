<div id="enter_pass" class="initdisplay-none">
    <div class="col-xs-12 padding-10">
        <!--<legend>客户搜索</legend>-->
        <!-- row -->
        <div class="form-horizontal">
            <div class="col-xs-12">

                <div class="col-xs-4">
                    <div class="form-group">
                        <label class="col-xs-4 control-label">流水号:</label>
                        <div class="col-xs-8">
                            <label class="control-label"><strong id="lay-id"></strong></label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <label class="col-xs-4 control-label">合同号:</label>
                        <div class="col-xs-8">
                            <label class="control-label"><strong id="lay-contNo"></strong></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12">

                <div class="col-xs-4">
                    <div class="form-group">
                        <label class="col-xs-4 control-label">客户姓名:</label>
                        <div class="col-xs-8">
                            <label class="control-label"><strong id="lay-cName"></strong></label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <label class="col-xs-4 control-label">客户电话:</label>
                        <div class="col-xs-8">
                            <label class="control-label"><strong id="lay-mobile"></strong></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12">

                <div class="col-xs-8">
                    <div class="form-group">
                        <label class="col-xs-2 control-label">收货地址:</label>
                        <div class="col-xs-8">
                            <label class="control-label"><strong id="lay-address"></strong></label>
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <div class="col-xs-12">
            <form class="form-horizontal" method="post" id="check_pass" action="/doDelivery" >
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" class="checkbox"
                                               id="checkAll">
                                        <span>&nbsp;</span>
                                    </label>序号
                                </th>
                                <th>订单号</th>
                                <th>产品信息</th>
                                <th>建单人</th>
                                <th>状态</th>
                            </tr>
                            </thead>
                            <tbody id="layer-form-wrapper">



                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-xs-12">

                    <div class="col-xs-4">
                        <div class="form-group">
                            <label class="col-xs-4 control-label">司机姓名:</label>
                            <div class="col-xs-8">
                                <input class="form-control" value="" name="driverName">
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <div class="form-group">
                            <label class="col-xs-4 control-label">物流车牌号:</label>
                            <div class="col-xs-8">
                                <input class="form-control" value="" name="licensePlate">
                            </div>
                        </div>
                    </div>
                    <input name="contNo" value="" id="input-contNo"  type="hidden">
                    <input name="deliveryTime" value="" id="input-deliveryTime"  type="hidden">
                    <input name="custName" value="" id="input-cName"  type="hidden">
                    <input name="mobile" value="" id="input-mobile"  type="hidden">
                    <input name="address" value="" id="input-address"  type="hidden">
                </div>

                <div class="col-xs-12">
                    <hr class="simple">
                    <div class="col-xs-12 text-center">
                        <button class="btn btn-primary margin-bottom-10" id="confirm">提交</button>
                    </div>
                </div>
                <div class="dwy-clear"></div>

            </form>
        </div>
        <!-- end row -->
    </div>
</div>

<script src="/js/layout-open-initValue.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $("#check_pass").validationEngine();
        //弹出类
        $('.deliverThis').on({
            click: function (e) {
                var id = $(this).attr('data-lid');
                var contNo = $(this).attr('data-contNo');
                var deliveryTime = $(this).attr('data-deliveryTime');
                var cName = $(this).attr('data-cName');
                var mobile = $(this).attr('data-mobile');
                var address = $(this).attr('data-address');

                $('#lay-id').text(id);
                $('#lay-contNo').text(contNo);
                $('#lay-cName').text(cName);
                $('#lay-mobile').text(mobile);
                $('#lay-address').text(address);

                $('#input-contNo').val(contNo);
                $('#input-deliveryTime').val(deliveryTime);
                $('#input-cName').val(cName);
                $('#input-mobile').val(mobile);
                $('#input-address').val(address);

                layer.open({
                    title: '发货单',
                    type: 1,
                    area: ['1000px', '80%'],
                    content: $('#enter_pass'),
                    cancel: function () {
                        $(':input').val('');
                        //右上角关闭回调
                    },
                    success:function(){
                        DWY_Layout_initValue.initValue({
                            dataContainer:'#layer-form-wrapper',
                            method:'GET',
                            url:'/delivery/tidList/'+id,
                        })
                    }

                });
            }
        })

        $("#checkAll").change(function () {
            if ($(this).is(":checked")) {
                $(":checkbox").prop('checked', true);
            } else {
                $(":checkbox").prop('checked', false);
            }
        })



    })

</script>