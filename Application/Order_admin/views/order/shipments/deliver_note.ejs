<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main" class="mainFlex">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <!--<li><a class="back-url" href="/waitSend"> 待发货流水</a></li>-->
            <li>发货管理</li>
        </ol>


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content" class="dis-flex">
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>客户搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get" id="search-customer">
                            <div class="col-xs-12">
                                <div class="col-xs-2">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">客户名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  placeholder="请输入客户名称" value="<%= DWYRequest.query.custName %>"
                                                   name="custName">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-2">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">门店名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  placeholder="请输入门店名称" value="<%= DWYRequest.query.storeName %>"
                                                   name="storeName">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-2">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">流水号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  placeholder="请输入流水号" value="<%= DWYRequest.query.lid %>"
                                                   name="lid">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-2">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">订单号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  placeholder="请输入订单号" value="<%= DWYRequest.query.tid %>"
                                                   name="tid">
                                        </div>
                                    </div>
                                </div>

                                <% if(DWY_GLOBAL.ButtonOpen!=1){ %>
                                <div class="col-xs-3 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                    <% if ( DWY_Helper.hasPermission(Permission.cargoManages.deliveryList.id, permission) ){ %>
                                    <a class="btn btn-primary " href="/waitSend">
                                        查看流水号发货信息
                                    </a>
                                    <% } %>
                                    <label class="btn btn-default reset margin-left-20">
                                        重置
                                    </label>
                                    <label class="search margin-left-20">
                                        高级查询
                                        <i class="fa fa-chevron-down"></i>
                                    </label>
                                </div>
                                <%}%>
                                <% if(DWY_GLOBAL.ButtonOpen!=1){ %>
                                <div class="slideToggle display-none">
                                <%}%>
                                    <div class="col-xs-2">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label">发货通知单号:</label>
                                            <div class="col-xs-8">
                                                <input class="form-control" value="<%= DWYRequest.query.diId %>" type="text"
                                                       name="diId">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-2">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label">合同号:</label>
                                            <div class="col-xs-8">
                                                <input class="form-control" value="<%= DWYRequest.query.contNo %>" type="text"
                                                       name="contNo">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-2">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label">状态:</label>
                                            <div class="col-xs-8">
                                                <select class="form-control" name="type">
                                                    <option value="">- 请选择 -</option>
                                                    <option value="2" <%= (DWYRequest.query.type == 2 )?"selected":"" %> >未审核</option>
                                                    <option value="4" <%= (DWYRequest.query.type == 4 )?"selected":"" %> >已审核</option>
                                                    <option value="6" <%= (DWYRequest.query.type == 6 )?"selected":"" %> >已备货</option>
                                                    <option value="8" <%= (DWYRequest.query.type == 8 )?"selected":"" %> >已发货</option>
                                                    <option value="9" <%= (DWYRequest.query.type == 9 )?"selected":"" %> >作废</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-3">
                                        <div class="form-group">
                                            <label class="col-xs-2 control-label">日期:</label>
                                            <div class="col-xs-4">
                                                <input class="form-control fg-date-time-picker"
                                                       value="<%= DWYRequest.query.startDate %>"
                                                       name="startDate">
                                            </div>
                                            <label class="control-label " style="float: left"> 至 </label>
                                            <div class="col-xs-4">
                                                <input class="form-control fg-date-time-picker"
                                                       value="<%= DWYRequest.query.endDate %>"
                                                       name="endDate">
                                            </div>
                                        </div>
                                    </div>
                                <% if(DWY_GLOBAL.ButtonOpen!=1){ %>
                                </div>
                                <%}%>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well dis-flex">
            <div class="row dis-flex">
                <div class="col-xs-12 dis-flex">
                    <div class="table-responsive dis-flex">
                        <table class="table table-bordered table-striped table-hover table-scroll2">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>门店名称</th>
                                <th>发货通知单号</th>
                                <th>合同号</th>
                                <th>客户姓名</th>
                                <th>客户电话</th>
                                <th>收货地址</th>
                                <th>经销商</th>
                                <th>状态</th>
                                <th>审核人</th>
                                <th>审核时间</th>
                                <th>司机姓名</th>
                                <th>物流车牌号</th>
                                <th>入库包数/总包数</th>
                                <th width="200px">操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if(DWY_Helper.isCanLoop(deliveryNotice.result)){
                            deliveryNotice.result.forEach(function (element, index) {%>
                            <tr>
                                <td><%= DWY_Helper.incrementNum(DWYRequest.query.pageNo,index)%></td>
                                <td><%=element.storeName %></td>
                                <td><a href="/deliveryNote/deatil/<%=element.diId %>"><%=element.diId %></a></td>
                                <td><%=element.contNo %></td>
                                <td><%=element.cName %></td>
                                <td><%=element.mobile %></td>
                                <td><%=element.address %></td>
                                <td><%=element.stoName %></td>
                                <td><%=element.typeName%></td>
                                <td><%=element.reviewName %></td>
                                <td><%= DWY_Helper.getLocalDate(element.reviewDate) %></td>
                                <td><%=element.driverName %></td>
                                <td><%=element.licensePlate %></td>
                                <td><%= element.packageIsIn? element.packageIsIn: 0 %>/<%=element.packageTotal %></td>
                                <td>
                                    <% if(element.type == 2 && DWY_Helper.hasPermission(Permission.cargoManages.deliveryReview.id, permission)){ %>
                                    <a class="label label-primary checkThis" data-id="<%=element.diId %>" data-type="1">审核</a>
                                    <a class="label label-danger checkThis" data-id="<%=element.diId %>" data-type="2">审核驳回</a>
                                    <% }%>
                                    <% if(element.type == 4 && DWY_Helper.hasPermission(Permission.cargoManages.deliveryReview.id, permission)){ %>
                                    <a class="label label-danger checkThis" data-id="<%=element.diId %>" data-type="4">作废</a>
                                    <% }%>
                                    <% if(element.type > 3){ %>
                                    <a class="label label-success" href="/system/delivery/<%=element.diId %>" >发货清单</a>
                                    <% }%>

                                </td>
                            </tr>
                            <%})%>
                            <% } else {%>
                            <tr>
                                <td colspan="14" class="text-align-center">暂无数据</td>
                            </tr>
                            <% }%>
                            </tbody>
                        </table>
                    </div>
                    <%- pagination %>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

        $("#search-customer").validationEngine();
        $(".fg-date-time-picker").flatpickr(data_time_picker.data_picker); // jQuery
        pageSetUp();

        $(".checkThis").click(function () {
            var id = $(this).attr('data-id');
            var type = $(this).attr('data-type');
            var text = '';
            switch (type){
                case '1':
                    text =  '确定审核通过?';
                    break;
                case '2':
                    text =  '确定审核退回?';
                    break;
                case '4':
                    text =  '确定作废?';
                    break;
            }

            layer.confirm(text, {icon: 3, title: '提示'}, function (index) {
                if(type == 4){
                    $.ajax({
                        url: '/deliveryNote/cancel/'+id,
                        method: 'put',
                        success: function (data) {
                            successLayout.reload();
                        },
                        error: function (response) {
                            layer.close(index)
                            errorLayout.normal(response);
                        }
                    });
                }else{
                    $.ajax({
                        url: '/deliveryNote/doChecked/'+id+'/'+type,
                        method: 'put',
                        success: function (data) {
                            successLayout.reload();
                        },
                        error: function (response) {
                            layer.close(index)
                            errorLayout.normal(response);
                        }
                    });
                }

            }, function (index) { layer.close(index) })
        })

    })

</script>


<%- include('../layouts/foot'); %>