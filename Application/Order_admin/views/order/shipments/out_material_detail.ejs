<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a class="back-url" href="/outMaterial"><i class="fa fa-chevron-left"></i> 原料出库</a></li>
            <li>原料出库信息</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <legend>原料出库信息</legend>

                    <!-- row -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-information">
                            <tbody>
                            <tr>
                                <td width="12%">出库单号</td>
                                <td><%= matesInfo.id %></td>
                                <td width="12%">出库人</td>
                                <td><%= matesInfo.outEmp %></td>
                                <td width="12%">出库日期</td>
                                <td><%= matesInfo.outTime %></td>
                            </tr>
                            <tr>
                                <td>订单号</td>
                                <td><a href="/order/detail/<%= matesInfo.tid %>"><%= matesInfo.tid %></a></td>
                                <td>出库类型</td>
                                <td><%= matesInfo.outType %></td>
                                <td>仓库</td>
                                <td><%= matesInfo.whse %></td>
                            </tr>
                            <tr>
                                <td>状态</td>
                                <td><%= DWY_Helper.geOutStatus(matesInfo.stcode) %></td>
                                <td>审核人</td>
                                <td><%= matesInfo.reviewEmp %></td>
                                <td>审核时间</td>
                                <td><%= matesInfo.reviewTime %></td>
                            </tr>
                            <tr>
                                <td>备注</td>
                                <td colspan="5"><%= matesInfo.remark %></td>
                            </tr>
                            </tbody>
                        </table>

                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->
        <div class="well">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>
                        原料出库清单
                        <a class="label label-primary" id="checkThis">审核</a>
                    </h6>

                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>货位号</th>
                                <th>批号</th>
                                <th>物料编号</th>
                                <th>物料名称</th>
                                <th>颜色</th>
                                <th>规格</th>
                                <th>单价</th>
                                <th>数量</th>
                                <th>金额</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if(DWY_Helper.isCanLoop(matesInfo.mateItems)){
                                matesInfo.mateItems.forEach(function (element, index) {  %>
                            <tr>
                                <td><%= ++index %></td>
                                <td><a href="/cargospace/cargospace/detail/<%= element.spaceId %>"><%= element.spaceId %></a></td>
                                <td><%= element.batchId %></td>
                                <td><a href="/materialManage/detail/<%= element.cargoId %>"><%= element.cargoId %></a></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><%= element.unitPrice %></td>
                                <td></td>
                                <td><%= element.totalPrice %></td>
                            </tr>
                            <%   })
                            }else{  %>
                            <tr>
                                <td colspan="10" class="text-align-center">暂无数据</td>
                            </tr>
                            <% } %>

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>


    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

        $("#checkThis").click(function () {
            layer.confirm('确定提交审核?', {icon: 3, title: '提示'}, function (index) {
                $.ajax({
                    url: '/outMaterial/doChecked/<%= outId %>',
                    method: 'put',
                    success: function (data) {
//                        window.location.reload();
                        location.href='/canSend';
                    },
                    error: function (response) {
                        layer.close(index)
                        var data = JSON.parse(response.responseText);
                        $.smallBox({
                            title: "操作失败",
                            content: data.msg,
                            color: "#C46A69",
                            iconSmall: "fa fa-times fa-2x fadeInRight animated",
                            timeout: 3000
                        });
                    }
                });
            }, function (index) { layer.close(index) })
        })

    })

</script>

<%- include('../layouts/foot'); %>
