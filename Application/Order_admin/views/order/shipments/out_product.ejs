<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main" class="mainFlex">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>成品出库</li>
        </ol>


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content" class="dis-flex">

        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>客户搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get" id="search-customer">

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">出库单号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" value="<%= DWYRequest.query.outId %>" type="text"
                                                   name="outId">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">订单号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" value="<%= DWYRequest.query.tid %>" type="text"
                                                   name="tid">
                                        </div>
                                    </div>
                                </div>


                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">日期:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker"
                                                   value="<%= DWYRequest.query.startDate %>"
                                                   name="startDate">
                                        </div>
                                        <label class="control-label " style="float: left"> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker"
                                                   value="<%= DWYRequest.query.endDate %>"
                                                   name="endDate">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12">
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">客户名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" value="<%= DWYRequest.query.cName %>" type="text"
                                                   name="cName">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">工厂:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control"  name="ftyId" id="ftyId" >
                                                <option value="">- 请选择 -</option>
                                                <% factoryList.forEach(function (element) { %>
                                                <option value="<%= element.ftyId %>" <%= userFtyId == element.ftyId? 'selected':'' %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">仓库:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="whseId" id="whseId">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                if(DWY_Helper.isCanLoop(warehouseList)){
                                                warehouseList.forEach(function (element) { %>
                                                <option value="<%= element.whseId %>" <%= (DWYRequest.query.whseId == element.whseId )?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% })
                                                } %>
                                            </select>

                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">

                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                    <a class="btn btn-primary " href="/outProduct/canSend">
                                        可发货订单
                                    </a>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well dis-flex">
            <div class="row dis-flex">
                <div class="col-xs-12 dis-flex">
                    <div class="table-responsive dis-flex">
                        <table class="table table-bordered table-striped table-hover table-scroll dis-flex">
                            <thead>
                            <tr>
                                <th width="4%">序号</th>
                                <th>出库单号</th>
                                <th width="12%">订单号</th>
                                <th>出库日期</th>
                                <th width="12%">仓库</th>
                                <th>出库人</th>
                                <th>交货日期</th>
                                <th>客户姓名</th>
                                <th>出厂价</th>
                                <th>经销商</th>
                                <th>状态</th>
                                <th>操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%  if(DWY_Helper.isCanLoop(prodsList.result) ){
                            prodsList.result.forEach(function (element, index) { %>
                            <tr>
                                <td width="4%"><%= ++index %></td>
                                <td><a href="/outProduct/deatil/<%= element.outId %>"><%= element.outId %></a></td>
                                <td width="12%"><a href="/order/detail/<%= element.tid %>"><%= element.tid %></a></td>
                                <td><%= DWY_Helper.getLocalDate(element.outTime) %></td>
                                <td width="12%"><%= element.whseName %></td>
                                <td><%= element.outEmp %></td>
                                <td><%= DWY_Helper.getLocalDate(element.deliveryTime) %></td>
                                <td><%= element.cName %></td>
                                <td><%= element.ftyPrice %></td>
                                <td><%= element.stoName %></td>
                                <td><%= DWY_Helper.geOutStatus(element.stcode) %></td>
                                <td>
                                    <% if(element.stcode == 2){ %>
                                    <a class="label label-primary checkThis" data-id="<%= element.outId %>">审核</a>
                                    <% }%>
                                </td>
                            </tr>
                            <% })
                            }else{ %>
                            <tr>
                                <td colspan="11" class="text-align-center">暂无数据</td>
                            </tr>
                            <% }  %>
                            </tbody>
                        </table>
                        <%- pagination %>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

        $("#search-customer").validationEngine();

        pageSetUp();

        $(".fg-date-time-picker").flatpickr(data_time_picker.data_picker); // jQuery

        $(".checkThis").click(function () {
            var id = $(this).attr('data-id');

            layer.confirm('确定提交审核?', {icon: 3, title: '提示'}, function (index) {
                $.ajax({
                    url: '/outProduct/doChecked/'+id,
                    method: 'put',
                    success: function (data) {
                        window.location.reload();
                    },
                    error: function (response) {
                        layer.close(index)
                        errorLayout.normal(response);

                    }
                });
            }, function (index) { layer.close(index) })
        })


    })

</script>

