<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a class="back-url" href="/outBred"><i class="fa fa-chevron-left"></i>原料领料</a></li>
            <li>领料详情</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <legend>
                        领料信息
                    </legend>

                    <!-- row -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-information">
                            <tbody>
                            <tr>
                                <td width="12%">领用单号</td>
                                <td><%= cargoutInfo.outId %></td>
                                <td width="12%">领料日期</td>
                                <td><%= cargoutInfo.outDate %></td>
                                <td width="12%">领用人</td>
                                <td><%= cargoutInfo.outEmpName %></td>
                            </tr>
                            <tr>
                                <td>部门编号</td>
                                <td><%= cargoutInfo.did %></td>
                                <td>审核人</td>
                                <td colspan="3"><%= cargoutInfo.reviewName %></td>
                            </tr>
                            </tbody>
                        </table>

                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->
        <div class="well">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>
                        领料清单
                        <% if(cargoutInfo.stcode == 2){ %>
                        <a class="label label-primary checkThis" data-type="1">审核</a>
                        <a class="label label-danger checkThis" data-type="2">退回</a>
                        <% } %>
                    </h6>

                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>物料编号</th>
                                <th>物料名称</th>
                                <th>物料规格</th>
                                <th>领用数量</th>
                                <th>备注</th>
                                <th>单价</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if(DWY_Helper.isCanLoop(plateInfo.result)){
                            plateInfo.result.forEach(function (element, index) { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td>
                                    <a href="/materialManage/detail/<%= user.bid %>/<%= element.mateId %>"><%= element.mateId %></a>
                                </td>
                                <td><%= element.mateName %></td>
                                <td><%= element.size %></td>
                                <td><%= element.amount %></td>
                                <td><%= element.remark %></td>
                                <td><%= element.price %></td>
                            </tr>
                            <% })
                            } %>

                            </tbody>
                        </table>
                        <%- pagination %>
                    </div>
                </div>
            </div>
        </div>


    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

        $(".checkThis").click(function () {
            var type = $(this).attr('data-type');
            var text = type== 1?'确定审核通过?':'确定退回?'

            layer.confirm(text, {icon: 3, title: '提示'}, function (index) {
                $.ajax({
                    url: '/outBred/doCheck/<%= cargoutInfo.outId %>/' + type,
                    method: 'put',
                    success: function (data) {
                        successLayout.hrefTo('/outBred');
                    },
                    error: function (response) {
                        layer.close(index)
                        errorLayout.normal(response);

                    }
                });
            }, function (index) {
                layer.close(index)
            })
        })

    })

</script>

<%- include('../layouts/foot'); %>
