<script type="text/javascript">

    $(document).ready(function () {

        $("#layer-form").validationEngine();
        $(".fg-date-picker").flatpickr(data_time_picker.data_picker);
        pageSetUp();
        //弹出类
        $('.choiceShop').on({
            click: function (e) {
                var ebisId = $(this).attr('data-id');
                var province = $(this).attr('data-province');
                var city = $(this).attr('data-city');
                var address = $(this).attr('data-address');
                $('#ebisId').val(ebisId)
                layer.open({
                    title: '分配店铺',
                    type: 1,
                    area: '800px',
                    content: $('#layer-form'),
                    cancel: function () {
                        //右上角关闭回调
                    },
                });

                DWY_area.init({
                    defaultValue: [
                        {
                            name: 'province',
                            value: province,
                            key: 'province',
                            linkcity: 'city',
                            linkdis: 'address',
                            cityId: city
                        },
                        {name: 'city', value: city, key: 'city', linkdis: 'address', disId: address},
                        {name: 'address', value: address, key: 'district'},

                    ]
                });

            }
        });

//        DWY_area.init({
//            defaultValue:[
//                {
//                    name:'province',
//                    value: 430000,
//                    key:'province',
//                    linkcity:'city',
//                    linkdis:'address',
//                    cityId: 430100
//                },
//                {name:'city', value: 430100, key:'city',linkdis:'address',disId: 430102},
//                {name:'address', value: 430102, key:'district'},
//
//            ]
//        });

        var index;
        $('#mapModal').on({
            click: function (e) {
                index =  layer.open({
                    title: '定位',
                    type: 1,
                    area: '1200px',
                    content: $('#modal-map'),
                    cancel: function () {
                        //右上角关闭回调
                    },
                });
            }
        });

        $("#save").click(function () {
            $("input[name=realEstate ]").val($("#search_address").text());
            $("input[name=realEstateGps ]").val($("#longLatitude").text());
            console.log(index)
            layer.close(index)
        })

        // 创建地图对象并初始化
        var baiduMap = new BMap.Map("map_container");
        var point = new BMap.Point(116.404, 39.915);
        baiduMap.centerAndZoom(point, 14);

        //创建检索控件
        var searchControl = new BMapLib.SearchControl({
            map: baiduMap, //关联地图对象
            type: 'LOCAL_SEARCH'  //检索类型
        });


    })

</script>


