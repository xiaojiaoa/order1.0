<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a class="back-url" href="/materialManage"><i class="fa fa-chevron-left"></i>物料管理</a></li>
            <li><a class="back-url" href="/materialManage/detail/<%= bid%>/<%= mid%>"><i class="fa fa-chevron-left"></i>物料信息</a></li>
            <li>完善物料信息</li>
            <li><a class="back-url" href="javascript:history.go(-1)"><i class="fa fa-chevron-left"></i> 返回</a></li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!--well-->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <legend>完善物料信息
                        <% if( mateInfo.stcode == 2){ %>
                        <a class="label label-primary" id="openStore">启用</a>
                        <% }else{ %>
                        <a class="label label-danger" id="closeStore">禁用</a>
                        <% } %>
                    </legend>

                    <!-- row -->
                    <div class="row <%= (mateInfo.stcode == 2 )? 'close-info01':'' %>">
                        <form class="form-horizontal"  id="material_detail_factory_add" method="post" action="/materialManage/doAdd">



                            <div class="col-xs-12 ">

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label "><span class="requird"></span> 分类:
                                        </label>
                                        <div class="col-xs-8 control-label strongStyle01 text-left" id="typeContent">
                                            <strong><%= mateInfo.catName %></strong>
                                        </div>

                                    </div>
                                </div>



                            </div>
                            <div class="col-xs-12 ">

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label "><span class="requird"></span> 物料编号:
                                        </label>
                                        <div class="col-xs-8 control-label strongStyle01 text-left" id="typeContent">
                                            <strong><%= mateInfo.id %></strong>
                                        </div>

                                    </div>
                                </div>



                            </div>


                                <!--输入字段-->
                                <div class="col-xs-12 ">
                                    <div class="col-xs-1 "></div>
                                    <div class="col-xs-6 my-div-style01">
                                        <% mateInfo.attrs.forEach(function(element,index){%>
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label"><span class="requird"></span>
                                                <%= element.attrName%>:
                                            </label>
                                            <div class="col-xs-5 ">
                                                <strong class="form-control border-0"><%= element.attrValue %></strong>
                                            </div>
                                        </div>
                                        <%})%>
                                    </div>
                                </div>



                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label"><span class="requird"></span>物料名称:</label>
                                            <div class="col-xs-8">
                                                <strong class="form-control border-0"><%= mateInfo.name %></strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 display-none">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label"><span class="requird"></span>单位物料重量:</label>
                                            <div class="col-xs-8">
                                                <strong class="form-control border-0"></strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label">单位：</label>
                                            <div class="col-xs-8">
                                                <strong class="form-control border-0"><%= mateInfo.unit %></strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>包装类型:</label>
                                        <div class="col-xs-8">
                                            <strong class="form-control border-0"><%= mateInfo.type %></strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label"><span class="requird"></span>价格:</label>
                                            <div class="col-xs-8">
                                                <strong class="form-control border-0"><%= mateInfo.price %></strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">物料图片:</label>
                                        <div class="col-xs-8">
                                            <strong class="form-control border-0">
                                                <a class="fancybox dwy_image" href="<%= DWY_GLOBAL.Static %>/download?url=<%= mateInfo.image %>" data-fancybox-group="gallery" title="<%= mateInfo.image %>"><%= mateInfo.image %></a>
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label">备注:</label>
                                            <div class="col-xs-8">
                                                <strong class="form-control border-0"></strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>库存数量:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[required]" placeholder="请输入库存数量" value="<%= mateInfo.stock %>" type="text" name="stock" <%= (mateInfo.stcode == 2 )? 'readonly':'' %>>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>预警数量:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[required]" placeholder="请输入预警数量" value="<%= mateInfo.warning  %>" type="text" name="warning" <%= (mateInfo.stcode == 2 )? 'readonly':'' %>>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>可用数量:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[required]" placeholder="请输入可用数量" value="<%= mateInfo.usable  %>" type="text" name="usable" <%= (mateInfo.stcode == 2 )? 'readonly':'' %>>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                <div class="col-xs-8">
                                    <hr class="simple">
                                    <div class="col-xs-12 text-center">
                                        <button class="btn btn-primary"  >
                                            <i class="fa fa-save"></i>
                                            提交
                                        </button>
                                    </div>
                                </div>

                            <input type="hidden" name="mateId" value="<%= mid%>"/>
                            <input type="hidden" name="bid" value="<%= bid%>"/>
                        </form>
                    </div>
                    <!-- end row -->

                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!--end well-->
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

        pageSetUp();

        $(".fg-date-time-picker").flatpickr(data_time_picker.data_picker); // jQuery


        //初始化表单
        $("#material_detail_factory_add").validationEngine();


        //图片浏览
        $('.fancybox').fancybox();

        //启用、禁用物料详情页状态
        var mid='<%= mid %>';
        var bid='<%= bid %>';

        $("#closeStore").on({
            click: function () {
                layer.confirm('确定禁用该属性？',{icon: 3, title:'提示'},
                    function(index){
                        $.ajax({
                            url: '/material/add/setStatus/'+bid+'/'+mid+'/2',
                            method: 'put',
                            success: function (data) {
                                successLayout.reload();
                            },
                            error: function (response) {
                                layer.close(index)
                                errorLayout.normal(response);
                            }
                        });
                    },
                    function(index){layer.close(index)})
            }
        });
        $("#openStore").on({
            click: function () {
                layer.confirm('确定启用该属性？',{icon: 3, title:'提示'},
                    function(index){
                        $.ajax({
                            url:'/material/add/setStatus/'+bid+'/'+mid+'/1',
                            method: 'put',
                            success: function (data) {
                                successLayout.reload();
                            },
                            error: function (response) {
                                layer.close(index)
                                errorLayout.normal(response);
                            }
                        });
                    },
                    function(index){layer.close(index)})
            }
        })


    })

</script>


<%- include('../layouts/foot'); %>