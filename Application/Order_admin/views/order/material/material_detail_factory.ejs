<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a class="back-url" href="/materialManage/factory"><i class="fa fa-chevron-left"></i>物料管理工厂端</a></li>
            <li>物料信息</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">


        <!--well-->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12 dwy-show-content">
                    <h6>物料信息
                        <a class="label label-primary" href="/materialManage/factory/add/<%= mid %>">完善物料</a>
                    </h6>

                    <!-- row -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-information ">
                            <tbody>
                            <tr>
                                <td>物料编号</td>
                                <td><%= mateInfo.id %></td>
                                <td>物料名称</td>
                                <td><%= mateInfo.name %></td>
                                <td>分类</td>
                                <td><%= mateInfo.catName %></td>
                            </tr>
                            <tr>
                                <td>预警</td>
                                <td><%= mateInfo.warning %></td>
                                <td>可用</td>
                                <td><%= mateInfo.usable %></td>
                                <td>库存</td>
                                <td><%= mateInfo.stock %></td>
                            </tr>
                            <tr>
                                <td>出厂价格</td>
                                <td></td>
                                <td>价格单位</td>
                                <td></td>
                                <td>工厂</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>单位</td>
                                <td><%= mateInfo.unit%></td>
                                <td>物料图片</td>
                                <td>
                                    <a href="<%= mateInfo.image%>">图片地址</a>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                            <%
                            var isTr = true;
                            var attrsLength = mateInfo.attrs.length;
                            mateInfo.attrs.forEach(function(element, index){
                            if(isTr){ %>
                            <tr>
                                <td><%= element.attrName %></td>
                                <td><%= element.attrValue %></td>

                                <% if( (index+1 == attrsLength) && (attrsLength %3 == 1) ){ %>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <% }

                                isTr = false;
                            }else{

                            if((index)%3 == 2 ){
                            %>
                            <td><%= element.attrName %></td>
                            <td><%= element.attrValue %></td>

                            </tr>
                            <% isTr = true;
                            }else{ %>
                            <td><%= element.attrName %></td>
                            <td><%= element.attrValue %></td>

                            <% if( (index+1 == attrsLength) && (attrsLength%3 == 2) ){ %>
                            <td></td>
                            <td></td>
                            </tr>
                            <% } %>

                            <% } }
                            }) %>

                            <tr>
                                <td>备注</td>
                                <td colspan="5"></td>
                            </tr>
                            </tbody>
                        </table>

                    </div>

                    <!-- end row -->
                </div>

                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!--end well-->


         </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


