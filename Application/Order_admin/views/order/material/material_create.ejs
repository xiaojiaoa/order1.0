<script type="text/javascript">

    $(document).ready(function () {

        pageSetUp();

        $(".fg-date-time-picker").flatpickr(data_time_picker.data_picker); // jQuery


        //下一步操作
        $(".nextStep").click(function () {
            if ($("#matType").validationEngine('validate')&&$("#arcType").validationEngine('validate')&&$("#colType").validationEngine('validate')) {
                $("#step1").css('display','none');
                $("#step2").css('display','block');
                $("#typeContent").html("<strong>"+$("#matType").val()+"</strong>"+"<strong>"+$("#arcType").val()+"</strong>"+"<strong>"+$("#colType").val()+"</strong>")
            }
        })
        //上一步操作
        $(".preStep").click(function () {
            $("#step1").css('display','block');
            $("#step2").css('display','none');
        })
        //初始化表单
        $("#create-material").validationEngine();

        //直接提交
        $("#new").click(function () {
            $("#type").val(1);//标记用于做重定向页面
             if ($("#create-material").validationEngine('validate')) {
                  //序列化表单中的每一个值，并且存储在对象中
                   var d = {};
                    var t = $('#create-material').serializeArray();
                    $.each(t, function() {
                        d[this.name] = this.value;
                    });
                   //将数据提交到nodejs端
                    $.ajax({
                        url: '/materialManage/material/doCreate',
                        method: 'post',
                        data:d,
                        dataType: 'JSON',
                        success:function (data) {
                            window.location.reload();
                        }
                    })
            }
        });

        //提交之后再重新创建
        $("#newAgain").click(function () {
            $("#type").val(2);//标记用于做重定向页面
            if ($("#create-material").validationEngine('validate')) {
                //序列化表单中的每一个值，并且存储在对象中
                var d = {};
                var t = $('form').serializeArray();
                $.each(t, function() {
                    d[this.name] = this.value;
                });
                //清空表格内容
                $(':input','#create-material')
                    .not(':button, :submit, :reset, :hidden')
                    .val('')
                    .removeAttr('checked')
                    .removeAttr('selected');
                console.log(    $(':input','#create-material'))
                //将数据提交到nodejs端
                $.ajax({
                    url: '/materialManage/material/doCreate',
                    method: 'post',
                    data:d,
                    dataType:"json",
                    success:function () {
                        console.log("success")
                    },

                })
            }
        });
        


          })

</script>


