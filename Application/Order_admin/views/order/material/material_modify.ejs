<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a href="/materialManage">物料管理</a></li>
            <li>修改物料</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!--well-->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <legend>修改物料</legend>

                    <!-- row -->
                    <div class="row">
                        <form class="form-horizontal"  id="material_detail_factory_add" method="post" action="">
                            <div class="col-xs-12 ">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label "><span class="requird"></span> 分类:
                                        </label>
                                        <div class="col-xs-8 control-label strongStyle01 text-left" id="typeContent">
                                            <strong><%= mateInfo.catName %></strong>
                                        </div>

                                    </div>
                                </div>



                            </div>
                            <div class="col-xs-12 ">

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label "><span class="requird"></span> 物料编号:
                                        </label>
                                        <div class="col-xs-8 control-label strongStyle01 text-left" id="typeContent">
                                            <strong><%= mateInfo.id %></strong>
                                        </div>

                                    </div>
                                </div>



                            </div>


                            <!--输入字段-->
                            <div class="col-xs-12 ">
                                <div class="col-xs-1 "></div>
                                <div class="col-xs-6 my-div-style01">
                                    <% mateInfo.attrs.forEach(function(element,index){%>
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>
                                            <%= element.attrName%>:
                                        </label>
                                        <div class="col-xs-5 ">
                                            <strong class="form-control "><%= element.attrValue %></strong>
                                        </div>
                                    </div>
                                    <%})%>
                                </div>
                            </div>



                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>物料名称:</label>
                                        <div class="col-xs-8">
                                            <strong class="form-control "><%= mateInfo.name %></strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>单位物料重量:</label>
                                        <div class="col-xs-8">
                                            <strong class="form-control "></strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">单位：</label>
                                        <div class="col-xs-8">
                                            <strong class="form-control "></strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>价格:</label>
                                        <div class="col-xs-8">
                                            <strong class="form-control "></strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>物料类型:</label>
                                        <div class="col-xs-8">
                                            <strong class="form-control "></strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">物料图片:</label>
                                        <div class="col-xs-8">
                                            <strong class="form-control "><%= mateInfo.image %></strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">备注:</label>
                                        <div class="col-xs-8">
                                            <strong class="form-control "></strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>库存数量:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[required]" placeholder="请输入库存数量" value="" type="text" name="stock">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>预警数量:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[required]" placeholder="请输入预警数量" value="" type="text" name="warning">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>可用数量:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[required]" placeholder="请输入可用数量" value="" type="text" name="usable">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-8">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <button class="btn btn-primary"  >
                                        <i class="fa fa-save"></i>
                                        提交
                                    </button>


                                </div>
                            </div>


                        </form>
                    </div>
                    <!-- end row -->

                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!--end well-->
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
