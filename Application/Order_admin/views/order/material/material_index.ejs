<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main" class="mainFlex">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>物料管理</li>
        </ol>
        <!-- end breadcrumb -->

    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content" class="dis-flex">


        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>物料搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">

                            <div class="col-xs-12">

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">物料编号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入物料编号" value="<%= DWYRequest.query.materNo %>" type="text" name="materNo">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">物料名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入物料名称" value="<%= DWYRequest.query.name %>" type="text" name="name">
                                        </div>
                                    </div>
                                </div>


                                <div class="col-xs-3" style="">
                                    <label class="col-xs-4 control-label">选择工厂:</label>
                                    <div class="col-xs-8">
                                        <select  class="form-control validate[required]" name="bid" value="<%= DWYRequest.query.factory %>">
                                            <option value="">- 请选择 -</option>
                                            <% factoryList.forEach(function (element,index) {%>
                                            <option value="<%= element.id%>"><%= element.name%></option>
                                            <%})%>
                                        </select>
                                    </div>

                                    </div>
                              </div>
                            <div class="col-xs-12" style="display:none;">

                                <div class="col-xs-3">

                                </div>

                                <div class="col-xs-3">

                                </div>


                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">其他：</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="">
                                                <option value="">- 请选择 -</option>
                                                <option value="预计缺货">预计缺货</option>
                                                <option value="真是库存预警">真是库存预警</option>
                                            </select>
                                        </div>

                                    </div>
                                </div>

                                </div>
                            <input type="hidden" name="stairCatId" value="<%= DWYRequest.query.stairCatId %>">

                            <div class="col-xs-12 ">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                    <a class="btn btn-primary margin-left-10" href="/materialManage/materialType">
                                        查看物料分类
                                    </a>

                                    <a class="btn btn-primary margin-left-10" href="/materialManage/materialAttribute">
                                        查看物料属性
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            <!-- end row -->
        </div>
        </div>
        <!-- end well -->
        <!--well-->
        <div class="well dis-flex">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>物料列表  <a class="label label-primary" href="/materialManage/material/creStepO">新建物料</a></h6>
                    <hr class="simple">
                </div>
            </div>
            <div class="orderItemLayerTit">
                <ul class="orderItemMenu">
                    <% if(DWY_Helper.isCanLoop(stairCategory)){
                    stairCategory.forEach(function (element) { %>
                    <a href="/materialManage?stairCatId=<%= element.id %>">
                        <li class="padding-10 <%= DWYRequest.query.stairCatId == element.id ?'materielBak':'' %>">
                            <%= element.name %>
                        </li>
                    </a>
                    <% })
                       } %>
                </ul>

            </div>
<!--end roll-->
            <!-- row -->
            <div class="row dis-flex">
                <div class="col-xs-12 dis-flex">
                    <div class="table-responsive dis-flex">
                        <table class="table table-bordered table-striped table-hover table-scroll dis-flex">
                            <thead>
                            <tr>
                                <th width="50">序号</th>
                                <th>物料编号</th>
                                <th width="5%">物料名称</th>
                                <th width="10%">分类</th>
                                <th>单位</th>
                                <th>库存</th>
                                <th>预警</th>
                                <th>可用</th>
                                <th>出厂价格</th>
                                <th>启用</th>
                                <% if(DWY_Helper.isCanLoop(theadList)){
                                theadList.forEach(function (element) { %>
                                <th><%= element.name %></th>
                                <% })
                                } %>
                                <th width="220">操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(mateList.totalItems != 0  ){
                            mateList.result.forEach(function (element, index) { %>
                            <tr class="<%= ( element.stock<element.warning )? 'mark-row':'' %>">
                                <td width="50"><%= index+1 %></td>
                                <td><a href="/materialManage/detail/<%= bid%>/<%= element.id %>" class=" "><%= element.id %></a></td>
                                <td width="5%"><%= element.name %></td>
                                <td width="10%"><%= element.catName%></td>
                                <td><%= element.unit%></td>
                                <td><%= element.stock %></td>
                                <td><%= element.warning %></td>
                                <td><%= element.usable %></td>
                                <td><%= element.price%></td>
                                <td><%= element.stcode ==1 ? '是':'否'%></td>
                                <% if(element.valueList && element.valueList.length>0){
                                element.valueList.forEach(function (elementtab) { %>
                                <td><%= elementtab.name %></td>
                                <% })
                                }else{ %>
                                <td></td>
                                <% } %>
                                <td width="220">
                                    <a class="label label-primary" href="/materialManage/add/<%= bid %>/<%= element.id %>">完善物料库存</a>
                                     <%if(element.id.slice(0,2)==90){%>
                                    <a class="label label-primary" href="/materialManage/workpiece/<%= element.id %>">成品关联物料</a>
                                      <%}%>
                                </td>
                            </tr>
                            <% })

                            }else{ %>
                            <tr>
                                <td colspan="11" align="center">暂无结果</td>
                            </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                    <%- pagination %>
                </div>
            </div>
        </div>
        <!--end well-->
        <!-- well-->
      </div>
      <!-- end well-->



</div>
<!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>

<script type="text/javascript">

    $(document).ready(function () {
        pageSetUp();
      //日期组件
        $(".fg-date-time-picker").flatpickr(data_time_picker.data_time_picker);
    })


</script>


<%- include('../layouts/foot'); %>