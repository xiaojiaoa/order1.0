    <!-- MAIN CONTENT -->
    <div id="content">


        <!--well-->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12 dwy-show-content">
                    <legend>物料信息</legend>

                    <!-- row -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-information ">
                            <tbody>
                            <tr>
                                <td>物料编号</td>
                                <td><%= mateInfo.id %></td>
                                <td>物料名称</td>
                                <td><%= mateInfo.name %></td>
                                <td>分类</td>
                                <td><%= mateInfo.catName %></td>
                            </tr>
                            <tr>
                                <td>预警</td>
                                <td><%= mateInfo.warning %></td>
                                <td>可用</td>
                                <td><%= mateInfo.usable %></td>
                                <td>库存</td>
                                <td><%= mateInfo.stock %></td>
                            </tr>
                            <tr>
                                <td>出厂价格</td>
                                <td></td>
                                <td>价格单位</td>
                                <td></td>
                                <td>工厂</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>单位</td>
                                <td><%= mateInfo.unit%></td>
                                <td>物料图片</td>
                                <td>
                                    <a href="<%= mateInfo.image%>">图片地址</a>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                            <%
                            var isTr = true;
                            var attrsLength = mateInfo.attrs.length;
                            mateInfo.attrs.forEach(function(element, index){
                            if(isTr){ %>
                            <tr>
                                <td><%= element.attrName %></td>
                                <td><%= element.attrValue %></td>

                                <% if( (index+1 == attrsLength) && (attrsLength %3 == 1) ){ %>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <% }

                                isTr = false;
                            }else{

                            if((index)%3 == 2 ){
                            %>
                            <td><%= element.attrName %></td>
                            <td><%= element.attrValue %></td>

                            </tr>
                            <% isTr = true;
                            }else{ %>
                            <td><%= element.attrName %></td>
                            <td><%= element.attrValue %></td>

                            <% if( (index+1 == attrsLength) && (attrsLength%3 == 2) ){ %>
                            <td></td>
                            <td></td>
                            </tr>
                            <% } %>

                            <% } }
                            }) %>

                            <tr>
                                <td>备注</td>
                                <td colspan="5"></td>
                            </tr>
                            </tbody>
                        </table>

                    </div>

                    <!-- end row -->
                </div>

                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!--end well-->
        <!--well-->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12 dwy-show-content">
