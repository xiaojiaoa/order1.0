            <!-- end row -->
        </div>
        <!--end well-->
        <!--well-->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12 dwy-show-content">
                    <legend>订购情况

                                        </legend>

                    <!-- row -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>订购日期</th>
                                <th>订购数量</th>
                                <th>备注</th>
                            </tr>
                            </thead>
