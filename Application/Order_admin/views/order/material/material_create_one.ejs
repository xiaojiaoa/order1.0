<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a class="back-url" href="/materialManage">物料管理</a></li>
            <li>新建物料-第一步</li>
            <li><a class="back-url" href="javascript:history.go(-1)"> <i class="fa fa-chevron-left"></i>返回</a></li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!--well-->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <legend>新建物料</legend>

                    <!-- row -->
                    <div class="row">
                        <form class="form-horizontal"  id="create-material_step1" method="post" action="/materialCreate/doNext">
                            <% if(tid){%>
                            <div class="selectList01">
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label">
                                            </label>
                                            <div class="col-xs-8">
                                                <select  class="form-control validate[required] " name="stairCategory" id="stairCategory">
                                                    <option value="<%= mateCategory.stairCategoryId%>"><%= mateCategory.stairCategory%></option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label">
                                            </label>
                                            <div class="col-xs-8">
                                                <select  class="form-control validate[required] " name="secondaryCategory" id="secondaryCategory">
                                                    <option value="<%= mateCategory.secondaryCategoryId%>"><%= mateCategory.secondaryCategory%></option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label">
                                            </label>
                                            <div class="col-xs-8">
                                                <select  class="form-control validate[required] " name="thirdlyCategory" id="thirdlyCategory">
                                                    <option value="<%= mateCategory.thirdlyCategoryId%>"><%= mateCategory.thirdlyCategory%></option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%} else{%>
                            <div class="selectList">
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label"><span class="requird"></span>
                                                物料分类:</label>
                                            <div class="col-xs-8">
                                                <select  class="form-control validate[required]" name="stairCategory" id="stairCategory">
                                                    <option value="">- 请选择 -</option>
                                                    <% stairCategory.forEach(function(element,index){%>
                                                    <option value="<%= element.id %>"><%= element.name%></option>
                                                    <%})%>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label">
                                            </label>
                                            <div class="col-xs-8">
                                                <select  class="form-control validate[required] " name="secondaryCategory" id="secondaryCategory">
                                                    <option value="">- 请选择 -</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label">
                                            </label>
                                            <div class="col-xs-8">
                                                <select  class="form-control validate[required] " name="thirdlyCategory" id="thirdlyCategory">
                                                    <option value="">- 请选择 -</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                            <%}%>

                             <div class="col-xs-8">
                                 <hr class="simple">
                                 <div class="col-xs-12 text-center">

                                     <button class="btn btn-primary " type="submit">
                                         <i class="fa fa-save"></i>
                                         下一步
                                     </button>
                                 </div>
                             </div>



                        </form>
                    </div>
                    <!-- end row -->

                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!--end well-->
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>
<%- include('./select_material_type'); %>
