<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>物料管理</li>
            <li>新建物料</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!--well-->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <legend>新建物料</legend>

                    <!-- row -->
                    <div class="row">
                        <form class="form-horizontal"  id="create-material_step2" method="post" action="">



                                <div class="col-xs-12 ">

                                    <div class="col-xs-6">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label "><span class="requird"></span> 分类:
                                            </label>
                                            <div class="col-xs-8 control-label strongStyle01 text-left" id="typeContent">
                                                <strong><%= materialInfo.stairCategory %></strong><strong><%= materialInfo.secondaryCategory %></strong><strong><%= materialInfo.thirdlyCategory  %></strong>
                                         </div>

                                        </div>
                                    </div>



                                  </div>
                                <div class="col-xs-12">

                                    <!--输入字段-->
                                    <div class="col-xs-6">

                                        <% materialInfo.attributeViewList.forEach(function(element,index){%>
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label"><span class="requird"></span>
                                                <%= element.name%>:</label>
                                            <input name="length" value="<%= element.length%>" type="hidden">
                                            <div class="col-xs-8">
                                                <select class="form-control validate[required]" name="">
                                                    <option value="">- 请选择 -</option>
                                                    <% element.attributeValueList.forEach(function(element,index){%>
                                                    <option value="<%= element.code %>"><%= element.name%></option>
                                                    <%})%>

                                                </select>
                                            </div>
                                        </div>
                                        <%})%>

                                    </div>

                                </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>
                                            添加的流水号:</label>
                                        <div class="col-xs-8 padding-left-0">
                                            <div class="col-xs-4 ">
                                                <input class="form-control validate[required]" value="" name="addNumber" type="text">
                                            </div>
                                            <div class="col-xs-4">
                                                <input class="form-control validate[required]" value="" name="addNumber" type="text">
                                            </div>
                                            <div class="col-xs-4">
                                                <input class="form-control validate[required]" value="" name="addNumber" type="text">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>物料名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入物料名称" value="" type="text" name="name">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>单位物料重量:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入单位物料重量" value="" type="text" name="unitWeight">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">单位：</label>
                                        <div class="col-xs-8">
                                            <select class="form-control validate[required]" name="">
                                                <option value="">- 请选择 -</option>
                                                <% units.forEach(function(element,index){%>
                                                <option value="<%= element.id %>"><%= element.name%></option>
                                                <%})%>

                                            </select>

                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>价格:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入价格" value="" type="text" name="price">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>物料类型:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入物料类型" value="1" type="text" name="type">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>上传物料照片</i></label>
                                        <div class="col-xs-8">
                                            <input type="file" name="file_name" id="dwy_file_upload" style="display: none">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>备注:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入备注" value="" type="text" name="remark">
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <div class="col-xs-8">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <a class="btn btn-primary"  id="new">
                                        <i class="fa fa-save"></i>
                                        提交
                                    </a>
                                    <a class="btn btn-primary margin-left-10"  id="newAgain">
                                        <i class="fa fa-save"></i>
                                        提交并继续新建
                                    </a>
                                </div>
                            </div>


                        </form>
                    </div>
                    <!-- end row -->

                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!--end well-->
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

        pageSetUp();

        $(".fg-date-time-picker").flatpickr(data_time_picker.data_picker); // jQuery


             //初始化表单
        $("#create-material").validationEngine();

        //直接提交
        $("#new").click(function () {
            $("#type").val(1);//标记用于做重定向页面
             if ($("#create-material").validationEngine('validate')) {
                  //序列化表单中的每一个值，并且存储在对象中
                   var d = {};
                    var t = $('#create-material').serializeArray();
                    $.each(t, function() {
                        d[this.name] = this.value;
                    });
                   //将数据提交到nodejs端
                    $.ajax({
                        url: '/materialManage/material/doCreate',
                        method: 'post',
                        data:d,
                        dataType: 'JSON',
                        success:function (data) {
                            window.location.reload();
                        }
                    })
            }
        });

        //提交之后再重新创建
        $("#newAgain").click(function () {
            $("#type").val(2);//标记用于做重定向页面
            if ($("#create-material").validationEngine('validate')) {
                //序列化表单中的每一个值，并且存储在对象中
                var d = {};
                var t = $('form').serializeArray();
                $.each(t, function() {
                    d[this.name] = this.value;
                });
                //清空表格内容
                $(':input','#create-material')
                    .not(':button, :submit, :reset, :hidden')
                    .val('')
                    .removeAttr('checked')
                    .removeAttr('selected');
                console.log(    $(':input','#create-material'))
                //将数据提交到nodejs端
                $.ajax({
                    url: '/materialManage/material/doCreate',
                    method: 'post',
                    data:d,
                    dataType:"json",
                    success:function () {
                        console.log("success")
                    },

                })
            }
        });
        


          })

</script>


