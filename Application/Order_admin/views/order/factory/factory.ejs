<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main" class="mainFlex">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>工厂</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content" class="dis-flex">
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>订单搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">工厂编号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  type="text"
                                                   value="<%= DWYRequest.query.ftyId %>"
                                                   name="ftyId">
                                        </div>
                                    </div>
                                </div>

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">工厂名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  type="text"
                                                   value="<%= DWYRequest.query.name %>"
                                                   name="name">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">工厂类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="type">
                                                <option value="">- 请选择 -</option>
                                                <option value="1" <%= (DWYRequest.query.type == 1 )?"selected":"" %>>工厂</option>
                                                <option value="2"  <%= (DWYRequest.query.type == 2 )?"selected":"" %>>仓储中心</option>

                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <a class="btn btn-primary margin-right-5" href="/factory/create">
                                        <i class="fa fa-save"></i>
                                        新建工厂
                                    </a>
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well dis-flex">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>工厂列表</h6>

                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row dis-flex">
                <div class="col-xs-12 dis-flex">
                    <div class="table-responsive dis-flex">
                        <table class="table table-bordered table-striped table-hover table-scroll dis-flex">
                            <thead>
                            <tr>
                                <th width="5%">序号</th>
                                <th width="7%">工厂编号</th>
                                <th width="15%">工厂名称</th>
                                <th width="7%">工厂类型</th>
                                <th width="15%">所属机构</th>
                                <th >所在省市区</th>
                                <th width="8%">物流约束标识</th>
                                <th width="10%">新建时间</th>
                                <th width="200px">操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(DWY_Helper.isCanLoop(factoryList.result)){
                            factoryList.result.forEach(function (element, index) { %>
                            <tr>
                                <td width="5%"><%= index+1 %></td>
                                <td width="7%"><%= element.ftyId %></td>
                                <td  width="15%"><a href="/factory/detail/<%= element.ftyId %>"><%= element.name %></a></td>
                                <td width="7%"><%= DWY_Helper.getFactoryType(element.type) %></td>
                                <td  width="15%"> <%= element.bidName %></td>
                                <td><%= element.provinceName %> <%= element.cityName %> <%= element.distName %></td>
                                <td width="8%"><%= DWY_Helper.getWhether(element.areaFlag) %></td>
                                <td width="10%"><%= DWY_Helper.getLocalDateYMD(element.addTime) %></td>
                                <td width="200px">
                                    <a href="/warehouse/create/<%= element.ftyId %>" class="label label-primary">新建仓库</a>
                                    <a href="/warehouse?ftyId=<%= element.ftyId %>" class="label label-primary">查看所有仓库</a>
                                </td>
                            </tr>
                            <%  })
                            }else{ %>
                            <tr>
                                <td colspan="8" align="center">暂无数据</td>
                            </tr>
                            <% } %>

                            </tbody>
                        </table>
                        <%- pagination %>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {


        pageSetUp();

        $(".fg-date-time-picker").flatpickr(data_time_picker.data_picker); // jQuery
    })

</script>


<%- include('../layouts/foot'); %>