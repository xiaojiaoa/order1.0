<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a href="/factory">工厂列表</a></li>
            <li><a href="/warehouse/<%= ftyId %>">上级仓库列表</a></li>
            <li>仓库区域</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>订单搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">区域编号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  type="text"
                                                   value="<%= DWYRequest.query.regionId %>"
                                                   name="regionId">
                                        </div>
                                    </div>
                                </div>

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">区域名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  type="text"
                                                   value="<%= DWYRequest.query.name %>"
                                                   name="name">
                                        </div>
                                    </div>
                                </div>


                            </div>

                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>仓库区域列表</h6>

                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-expand">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>区域编号</th>
                                <th>所属工厂</th>
                                <th>所属仓库</th>
                                <th>区域名称</th>
                                <th>新建时间</th>
                                <th>备注</th>
                                <th width="350">操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if( regionList.result && (regionList.result.length > 0)  ){
                            regionList.result.forEach(function (element, index) { %>
                            <tr class="<%= element.stcode == 1 ? '' : 'disabletr' %>">
                                <td><%= index+1 %></td>
                                <td><%= element.regionId %></td>
                                <td><a href="/factory/detail/<%= element.ftyId %>"><%= element.ftyName %></a></td>
                                <td><%= element.whseName %></td>
                                <td><%= element.name %></td>
                                <td><%= DWY_Helper.getLocalDateYMD(element.addTime) %></td>
                                <td><%= element.remark %></td>
                                <td>
                                    <% if(element.stcode == 1){ %>
                                    <a href="/cargospace/createNext/<%= element.ftyId %>/<%= element.whseId %>/<%= element.regionId %>">新建货位</a>
                                    <a href="/cargospace?isAll=1&ftyId=<%= element.ftyId %>&whseId=<%= element.whseId %>&regionId=<%= element.regionId %>">查看所有货位</a>
                                    <a href="/region/modify/<%= element.whseId %>/<%= element.regionId %>">修改</a>
                                    <a class="txt-color-red todoClose" data-id="<%= element.regionId %>" >禁用</a>
                                    <%  }else{ %>
                                    <a class="todoOpen" data-id="<%= element.regionId %>">启用</a>
                                    <%  }%>
                                </td>
                            </tr>
                            <%  })
                            }else{ %>
                            <tr>
                                <td colspan="12" align="center">暂无数据</td>
                            </tr>
                            <% } %>

                            </tbody>
                        </table>
                        <%- pagination %>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {


        pageSetUp();



        $(".todoClose").on({
            click: function () {
                var id = $(this).attr('data-id');
                layer.confirm('确定禁用该仓库区域?',{icon: 3, title:'提示'},
                    function(index){
                        $.ajax({
                            url: '/region/doClose/'+id,
                            method: 'delete',
                            success: function (data) {
                                window.location.reload();
                            },
                            error: function (response) {
                                layer.close(index)
                                var data = JSON.parse(response.responseText);
                                $.smallBox({
                                    title: "操作失败",
                                    content: data.msg,
                                    color: "#C46A69",
                                    iconSmall: "fa fa-times fa-2x fadeInRight animated",
                                    timeout: 3000
                                });
                            }
                        });
                    },
                    function(index){layer.close(index)})
            }
        })

        $(".todoOpen").on({
            click: function () {
                var id = $(this).attr('data-id');
                layer.confirm('确定启用该仓库区域?',{icon: 3, title:'提示'},
                    function(index){
                        $.ajax({
                            url: '/region/doOpen/'+id,
                            method: 'put',
                            success: function (data) {
                                window.location.reload();
                            },
                            error: function (response) {
                                layer.close(index)
                                var data = JSON.parse(response.responseText);
                                $.smallBox({
                                    title: "操作失败",
                                    content: data.msg,
                                    color: "#C46A69",
                                    iconSmall: "fa fa-times fa-2x fadeInRight animated",
                                    timeout: 3000
                                });
                            }
                        });
                    },
                    function(index){layer.close(index)})
            }
        })
    })

</script>


<%- include('../layouts/foot'); %>