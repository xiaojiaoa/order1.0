<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>仓库</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>订单搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">仓库编号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  type="text"
                                                   value="<%= DWYRequest.query.ftyId %>"
                                                   name="ftyId">
                                        </div>
                                    </div>
                                </div>

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">仓库名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  type="text"
                                                   value="<%= DWYRequest.query.name %>"
                                                   name="name">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">仓库类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="type">
                                                <option value="">- 请选择 -</option>
                                                <% warehouseTypes.forEach(function (element) {  %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.type == 1 )?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <a class="btn btn-primary margin-right-5" href="/warehouse/create">
                                        <i class="fa fa-save"></i>
                                        新建仓库
                                    </a>
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>仓库列表</h6>

                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-expand">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>仓库编号</th>
                                <th>所属工厂</th>
                                <th>仓库名称</th>
                                <th>仓库类型</th>
                                <th>新建时间</th>
                                <th>备注</th>
                                <th width="350">操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if( warehouseList.result && (warehouseList.result.length > 0)  ){
                            warehouseList.result.forEach(function (element, index) { %>
                            <tr class="<%= element.stcode == 1 ? '' : 'disabletr' %>">
                                <td><%= index+1 %></td>
                                <td><%= element.whseId %></td>
                                <td><a href="/factory/detail/<%= element.ftyId %>"><%= element.ftyId %></a></td>
                                <td><%= element.name %></td>
                                <td><%= DWY_Helper.getAssistVal(element.type, warehouseTypes) %></td>
                                <td><%= DWY_Helper.getLocalDateYMD(element.addTime) %></td>
                                <td><%= element.remark %></td>
                                <td>
                                    <% if(element.stcode == 1){ %>
                                    <a href="/region/create/<%= element.whseId %>">新建仓库区域</a>
                                    <a href="/department/stores/<%= element.ftyId %>">查看所有区域</a>
                                    <a>修改</a>
                                    <a class="txt-color-red">禁用</a>
                                    <%  }else{ %>
                                    <a>启用</a>
                                    <%  }%>
                                </td>
                            </tr>
                            <%  })
                            }else{ %>
                            <tr>
                                <td colspan="8" align="center">暂无数据</td>
                            </tr>
                            <% } %>

                            </tbody>
                        </table>
                        <%- pagination %>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {


        pageSetUp();

        $(".fg-date-time-picker").flatpickr(data_time_picker.data_picker); // jQuery
    })

</script>


<%- include('../layouts/foot'); %>