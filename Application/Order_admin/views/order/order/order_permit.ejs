<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>订单许可</li>
        </ol>

    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">


        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>客户搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">

                            <div class="col-xs-12">

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-3 control-label">专卖店名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  value="<%= DWYRequest.query.storeName %>"
                                                   name="storeName">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <div class="col-xs-3">
                                            <select class="form-control" name="brandId">
                                                <option value="">- 品牌 -</option>
                                                <% brandinfoList.forEach(function (element) {  %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.brandId == element.id)?"selected":"" %>>
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                        <div class="col-xs-3">
                                            <select class="form-control" name="difficulty">
                                                <option value="">- 难度 -</option>
                                                <% difficultyList.forEach(function (element) {  %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.difficulty == element.id)?"selected":"" %>>
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                        <div class="col-xs-3">
                                            <select class="form-control" name="productType">
                                                <option value="">- 类型 -</option>
                                                <% prodList.forEach(function (element) {  %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.productType == element.id)?"selected":"" %>>
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12">

                                <div class="col-xs-6">

                                    <div class="form-group">
                                        <label class="col-xs-3 control-label">&nbsp;提交日期:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" type="text"
                                                   value="<%= DWYRequest.query.startTime %>" name="startTime">
                                        </div>
                                        <label class="control-label " style="float: left"> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" type="text"
                                                   value="<%= DWYRequest.query.endTime %>" name="endTime">
                                        </div>
                                    </div>
                                </div>

                            </div>


                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>订单列表</h6>
                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th><label class="checkbox-inline">
                                        <input type="checkbox" class="checkbox"
                                               id="checkAll">
                                        <span>&nbsp;</span>
                                    </label>序号</th>
                                <th>订单号</th>
                                <th>难度</th>
                                <th>类别</th>
                                <th>专卖店</th>
                                <th>客户名称</th>
                                <th>产品信息</th>
                                <th>建单人</th>
                                <th>提交日期</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if(DWY_Helper.isCanLoop(assessList.result)){
                            assessList.result.forEach(function (element, index) {  %>
                            <tr>
                                <td>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" class="checkbox"
                                               name="tids" value="<%= element.tid %>">
                                        <span><%= index+1 %></span>
                                    </label>
                                </td>
                                <td><a href="/order/detail/<%= element.tid %>"><%= element.tid %></a></td>
                                <td><%= element.difficultyStr %></td>
                                <td><%= element.productTypeStr %></td>
                                <td><%= element.storeName %></td>
                                <td><%= element.customerName %></td>
                                <td><%= element.productInfo %></td>
                                <td><%= element.createOperator%></td>
                                <td><%= element.taskTime%></td>
                            </tr>
                            <%    })

                            }else{ %>
                            <td colspan="9" class="text-align-center">暂无数据</td>
                            <%  } %>



                            </tbody>
                        </table>
                        <%- pagination %>
                    </div>
                </div>
            </div>
        </div>

        <!--footer-btn-div-->
        <div class="" >
            <!--<div class="col-xs-8 form-horizontal form-group">-->
                <!--<label class="col-xs-2 control-label"> 将选中订单设置为: </label>-->
                <!--<div class="col-xs-3">-->
                    <!--<select class="form-control" name="type">-->
                        <!--<option value="">- 请选择 -</option>-->
                        <!--<option value="1">审核未加急</option>-->
                        <!--<option value="2">审核加急</option>-->
                    <!--</select>-->
                <!--</div>-->
                <!--<div class="col-xs-3">-->
                    <!--<button class="btn btn-primary">确定</button>-->
                <!--</div>-->
            <!--</div>-->
            <div class="col-xs-8 form-horizontal">
                <label class="col-xs-2 control-label "> 将选中订单难度设置为: </label>
                <div class="col-xs-3">
                    <select class="form-control" name="difficulty" id="difficultyCode" >
                        <option value="">- 请选择 -</option>
                        <% difficultyList.forEach(function (element) {  %>
                        <option value="<%= element.id %>"><%= element.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-xs-3">
                    <button class="btn btn-primary" id="submitDifficulty">确定</button>
                    <input type="hidden" class="" id="checkedValue">
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

        pageSetUp();


        $(".fg-date-picker").flatpickr(data_time_picker.data_picker); // jQuery

        var checkedValue = $('#checkedValue');
        $("#checkAll").change(function () {
            if($(this).is(":checked")){
                $(":checkbox").prop('checked',true);
                $("input[name='tids']:checked").each(function (i) {
                    checkedValue.addClass(this.value+',')
                });
            }else{
                $(":checkbox").prop('checked',false);
                checkedValue.removeClass()
            }
        })
        $("input[name='tids']").change(function () {
            if($(this).is(':checked')){
                checkedValue.addClass(this.value+',')
            }else{
                checkedValue.removeClass(this.value+',')
            }
        });

        $('#submitDifficulty').click(function () {
            var tids = checkedValue.attr('class');
            tids = tids.substring(0,tids.length-1);
            tids = tids.replace(/\s/g,"");
            var difficulty = $('#difficultyCode').val();
            console.log(difficulty);
            console.log(tids);
            if(!tids){
                layer.msg('请先选择订单', {icon: 2, time: 2000});
                return;
            }
            if(!difficulty){
                layer.msg('请选择难度等级', {icon: 2, time: 2000});
                return;
            }
            console.log(tids);
            $.ajax({
                url: '/orders/updateDifficultyLevel',
                method: 'post',
                data: {
                    tids:tids,
                    difficulty:difficulty
                },
                success: function (data) {
                    window.location.reload();
                },
                error: function (response) {
                    var data = JSON.parse(response.responseText);
                    $.smallBox({
                        title: "操作失败",
                        content: data.msg,
                        color: "#C46A69",
                        iconSmall: "fa fa-times fa-2x fadeInRight animated",
                        timeout: 3000
                    });
                }
            });
        })


    })

</script>


