                                <option value="<%= element.id %>" name="<%= element.name %>">&nbsp;&nbsp;&nbsp;&nbsp;<%= element.name %></option>
                                <%  }) %>
                            <%  }else{ %>
                            <option value="<%= element.id %>" name="<%= element.name %>"><%= element.name %></option>
