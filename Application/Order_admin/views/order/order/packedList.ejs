                    <div class="col-xs-8">
                        <input
                                class="form-control validate[required,custom[onlyNumberSp],maxSize[4]]"
                                placeholder="请输入四位编码"
                                value=""
                                name="packageNo"
                                type="">

                    </div>
                </div>
            </div>
        </div>



    </div>

    <div class="row">
        <div class="col-xs-12">
            <hr class="simple">
            <div class="col-xs-12 text-center">

                <input type="hidden" name="tid" value="<%= tid%>"/>
