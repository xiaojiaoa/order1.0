<!-- MAIN PANEL -->
<div id="main" role="main">
    <!-- RIBBON -->
    <div id="ribbon">
        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>订单排料</li>
        </ol>
        <!-- end breadcrumb -->
    </div>
    <!-- END RIBBON -->
    <!-- MAIN CONTENT -->
    <div id="content">
        <div class="well">
            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h3 class="text-align-center"><%= user.name %>排料中</h3>
                    <hr class="simple">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>加急</th>
                                <th>试装</th>
                                <th>是否收款</th>
                                <th>订单类型</th>
                                <th>产品类型</th>
                                <th>主材颜色</th>
                                <th>订单号</th>
                                <th>批次号</th>
                                <th>专卖店</th>
                                <th>客户名称</th>
                                <th>下单日期</th>
                                <th>零售价</th>
                                <th>交货日期</th>
                                <th>房间</th>
                                <th>备注</th>
                                <th>责任审核</th>
                                <th>欠缺订单</th>
                                <th>欠收款数</th>
                                <th>客户出厂价</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(scheduleList.totalItems != 0  ){
                            scheduleList.result.forEach(function (element, index) { %>
                            <tr>
                                <td>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" class="checkbox"
                                               name="roles" value="2">
                                        <span><%= index+1 %></span>
                                    </label>
                                </td>
                                <td><%= element.urgent %></td>
                                <td><%= element.tryInstall %></td>
                                <td><%= element.received %></td>
                                <td><%= element.orderTypeStr %></td>
                                <td><%= element.productTypeStr %></td>
                                <td><%= element.colorStr %></td>
                                <td><a href="/order/detail/<%= element.tid %>"><%= element.tid %></a></td>
                                <td><%= element.batchNumber %></td>
                                <td><%= element.storeName %></td>
                                <td><%= element.cName %></td>
                                <td><%= element.orderTime %></td>
                                <td><%= element.retailPrice %></td>
                                <td><%= element.deliveryTime %></td>
                                <td><%= element.room %></td>
                                <td><%= element.remark %></td>
                                <td><%= element.audit %></td>
                                <td><%= element.lackOrderNumber %></td>
                                <td><%= element.lackReceivedNumver %></td>
                                <td><%= element.custFactoryPrice %></td>
                            </tr>
                            <%  })
                            }%>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-xs-12">
                        <hr class="simple">
                        <div class="col-xs-1 text-center">
                            <button class="btn btn-primary" id="editBatchNum">编辑批次号</button>
                        </div>
                        <div class="col-xs-1 text-center">
                            <button class="btn btn-primary" id="nestingSub">排料提交</button>
                        </div>
                    </div>
                    <%- pagination %>
                </div>
            </div>
        </div>
        <div class="well">
            <div class="row">
                <div class="col-xs-12">
                    <h6>待审核订单</h6>
                    <hr class="simple">
                </div>
            </div>
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>客户搜索</legend>-->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <div class="col-xs-3">
                                            <select class="form-control" name="orderType">
                                                <option value="">- 订单类型 -</option>
                                                <option value="">正常单</option>
                                                <option value="">增单</option>
                                                <option value="">补单</option>
                                                <option value="">标准件</option>
                                                <option value="">工程</option>
                                            </select>
                                        </div>
                                        <div class="col-xs-3">
                                            <select class="form-control" name="productType">
                                                <option value="">- 产品类型 -</option>
                                                <option value="">板式衣柜</option>
                                                <option value="">框架衣柜</option>
                                                <option value="">等等......</option>
                                            </select>
                                        </div>
                                        <div class="col-xs-3">
                                            <select class="form-control" name="color">
                                                <option value="">- 颜色 -</option>
                                                <option value="">英伦白象</option>
                                                <option value="">象牙白</option>
                                                <option value="">......</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">专卖店名:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  value="<%= DWYRequest.query.storeName %>" type="text"
                                                   name="storeName">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="pull-left control-label">&nbsp下单日期</label>
                                        <div class="col-xs-3">
                                            <input class="form-control fg-date-picker" type="text"
                                                   value="<%= DWYRequest.query.orderStartTime %>" name="orderStartTime">
                                        </div>
                                        <label class="control-label " style="float: left"> 至 </label>
                                        <div class="col-xs-3">
                                            <input class="form-control fg-date-picker" type="text"
                                                   value="<%= DWYRequest.query.orderEndTime %>" name="orderEndTime">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="pull-left control-label col-xs-4">&nbsp交货日期:</label>
                                        <div class="col-xs-3">
                                            <input class="form-control fg-date-picker" type="text"
                                                   value="<%= DWYRequest.query.deliveryStartTime %>" name="deliveryStartTime">
                                        </div>
                                        <label class="control-label" style="float: left"> 至 </label>
                                        <div class="col-xs-3">
                                            <input class="form-control fg-date-picker" type="text"
                                                   value="<%= DWYRequest.query.deliveryEndTime %>" name="deliveryEndTime">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <div class="row margin-top-10">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>
                                <label class="checkbox-inline">
                                    <input type="checkbox" class="checkbox"
                                           id="checkAll"  />
                                    <span>序号</span>
                                </label>
                            </th>
                            <th>加急</th>
                            <th>试装</th>
                            <th>是否收款</th>
                            <th>订单类型</th>
                            <th>产品类型</th>
                            <th>主材颜色</th>
                            <th>订单号</th>
                            <th>批次号</th>
                            <th>专卖店</th>
                            <th>客户名称</th>
                            <th>下单日期</th>
                            <th>零售价</th>
                            <th>交货日期</th>
                            <th>房间</th>
                            <th>备注</th>
                            <th>责任审核</th>
                            <th>欠缺订单</th>
                            <th>欠收款数</th>
                            <th>客户出厂价</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%
                        if(scheduleAllList.totalItems != 0  ){
                        scheduleAllList.result.forEach(function (element, index) { %>
                        <tr>
                            <td>
                                <label class="checkbox-inline">
                                    <input type="checkbox" class="checkbox"
                                           name="roles" value="<%= element.tid %>">
                                    <span><%= index+1 %></span>
                                </label>
                            </td>
                            <td><%= element.urgent %></td>
                            <td><%= element.tryInstall %></td>
                            <td><%= element.received %></td>
                            <td><%= element.orderTypeStr %></td>
                            <td><%= element.productTypeStr %></td>
                            <td><%= element.colorStr %></td>
                            <td><a href="/order/detail/<%= element.tid %>"><%= element.tid %></a></td>
                            <td><%= element.batchNumber %></td>
                            <td><%= element.storeName %></td>
                            <td><%= element.cName %></td>
                            <td><%= element.orderTime %></td>
                            <td><%= element.retailPrice %></td>
                            <td><%= element.deliveryTime %></td>
                            <td><%= element.room %></td>
                            <td><%= element.remark %></td>
                            <td><%= element.audit %></td>
                            <td><%= element.lackOrderNumber %></td>
                            <td><%= element.lackReceivedNumver %></td>
                            <td><%= element.custFactoryPrice %></td>
                        </tr>
                        <%  })
                        }%>
                        </tbody>
                    </table>
                </div>
                <div class="col-xs-12">
                    <hr class="simple">
                    <div class="col-xs-2 text-center">
                        <button class="btn btn-primary" id="getNestingTask">标记为排料中</button>
                        <input type="hidden" class="" id="checkedValue">
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
    </div>
    <!-- end well -->
</div>
<!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
