<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main"  class="mainFlex">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>订单收款</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content" class="dis-flex">
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>订单搜索</legend>-->
                    <!-- row -->
                    <div class="row ">
                        <form class="form-horizontal" method="get" id="search-form">

                            <div class="col-xs-12">

                                <% if (DWY_Helper.hasPermission(Permission.gathering.queryAll.id, permission) ){ %>
                                <div class="col-xs-2">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">机构号:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="orgId">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                organizationsList.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.orgId == element.id)?"selected":"" %>><%= element.name %></option>
                                                <%  }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <% } %>

                                <div class="col-xs-2">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">门店编号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[custom[number]]" value="<%= DWYRequest.query.bid %>" name="bid"  >
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-2">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">收款类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="type">
                                                <option value="0">收款中</option>
                                                <option value="1" <%= (DWYRequest.query.type == 1)?"selected":"" %>>已收款</option>
                                                <option value="2" <%= (DWYRequest.query.type == 2)?"selected":"" %>>全部</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">订单状态:</label>
                                        <div class="col-xs-4">
                                            <select class="form-control" name="stcodeStart">
                                                <option value="">- 起始 请选择 -</option>
                                                <%
                                                stcodeInfo.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.stcodeStart == element.id)?"selected":"" %>><%= element.name %></option>
                                                <%  }) %>
                                            </select>
                                        </div>
                                        <label class="from-to control-label "> 至 </label>
                                        <div class="col-xs-4 ">
                                            <select class="form-control" name="stcodeEnd">
                                                <option value="">- 截止 请选择 -</option>
                                                <%
                                                stcodeInfo.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.stcodeEnd == element.id)?"selected":"" %>><%= element.name %></option>
                                                <%  }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">

                                <div class="col-xs-2">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">订单号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入订单号" type="text" value="<%= DWYRequest.query.tid %>" name="tid">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-2">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">批次号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入订单号" type="text" value="<%= DWYRequest.query.batchNumber %>" name="batchNumber">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-2">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">订单类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="productType">
                                                <option value="">- 类型 -</option>
                                                <% prodList.forEach(function (element) {  %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.productType == element.id)?"selected":"" %>>
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">下单日期:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text" value="<%= DWYRequest.query.startDate%>"
                                                   name="startDate">
                                        </div>
                                        <label class="from-to control-label "> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text" value="<%= DWYRequest.query.endDate%>"
                                                   name="endDate">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12">

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">确认时间:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text" value="<%= DWYRequest.query.startPayTime%>"
                                                   name="startPayTime">
                                        </div>
                                        <label class="from-to control-label "> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text" value="<%= DWYRequest.query.endPayTime%>"
                                                   name="endPayTime">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">发货时间:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text" value="<%= DWYRequest.query.startOutTime%>"
                                                   name="startOutTime">
                                        </div>
                                        <label class="from-to control-label "> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text" value="<%= DWYRequest.query.endOutTime%>"
                                                   name="endOutTime">
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>

        <div class="well dis-flex">
            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>待收款</h6>
                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row dis-flex">
                <div class="col-xs-12 dis-flex">
                    <div class="table-responsive dis-flex">
                        <table class="table table-bordered table-hover table-striped table-scroll dis-flex">
                            <thead>
                            <tr>
                                <th width="50">序号</th>
                                <th width="180">订单号</th>
                                <th>订单状态</th>
                                <th>所属机构</th>
                                <th>所属门店</th>
                                <th>产品名称</th>
                                <th>客户名称</th>
                                <th>零售价（元）</th>
                                <th>结算价（元）</th>
                                <th>收款类型</th>
                                <!--<th>说明</th>-->
                                <th>确认日期</th>
                                <th>对账日期</th>
                                <th width="180">操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(DWY_Helper.isCanLoop(moneyList.result)){
                            moneyList.result.forEach(function (element, index) { %>
                            <tr>
                                <td width="50"><%= index+1 %></td>
                                <td width="180"><a href="/order/detail/<%= element.tid %>"><%= element.tid %></a></td>
                                <td><%= DWY_Helper.getAssistVal(element.stcode,statusInfo) %></td>
                                <td><%= element.orgName %></td>
                                <td><%= element.storeName %></td>
                                <td><%= element.prodType %></td>
                                <td><%= element.custName %></td>
                                <td><%= element.retailPrice %></td>
                                <td><%= element.factoryPrice %></td>
                                <td><% if(element.payed == 0 || element.payed == 4){ %>
                                    未付款
                                    <% }else{%>
                                    已付款
                                    <% } %></td>
                                <!--<td><element.describe</td>-->
                                <td><%= DWY_Helper.getLocalDate(element.payTime) %></td>
                                <td><%= DWY_Helper.getLocalDate(element.reconciliationTime) %></td>
                                <td width="180">
                                    <% if(element.payed == 0){  %>
                                    <a class="label label-primary checkThis" data-tid="<%=element.tid %>" data-bid="<%=element.bid %>">收款</a>
                                    <% } %>
                                    <% if(element.payed == 4){  %>
                                    <a class="label label-primary optionThis" data-type="pass" data-payed="<%=element.payed %>" data-tid="<%=element.tid %>" data-bid="<%=element.bid %>">确认收款</a>
                                    <a class="label label-danger optionThis" data-type="notpass" data-payed="<%=element.payed %>" data-tid="<%=element.tid %>" data-bid="<%=element.bid %>">审核不通过</a>
                                    <% } %>
                                    <% if(element.payed == 1 || element.payed == 2){  %>
                                    <a class="label label-success optionThis" data-payed="<%=element.payed %>" data-tid="<%=element.tid %>" data-bid="<%=element.bid %>">对账</a>
                                    <% } %>

                                </td>
                            </tr>
                            <% })
                            }else{ %>
                            <td colspan="9" class="text-align-center">暂无结果</td>
                            <% } %>

                            </tbody>
                        </table>
                        <%- pagination %>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>

<form class="form-horizontal  layer-template" method="post" id="order_reject"  action="/collection/receiptCheck">
    <div class="col-xs-12">

        <div class="form-group">
            <label class="col-xs-2 control-label"><span class="requird"></span> 类型:</label>
            <div class="col-xs-8">
                <select class="form-control" name="moneyType" >
                    <option value="5">已收款</option>
                    <option value="4">待收款</option>
                </select>
            </div>

        </div>

    </div>
    <input value="" name="tid" id="tid" type="hidden">
    <input value="" name="bid" id="bid" type="hidden">
    <input value="1" name="status" type="hidden">

    <div class="col-xs-12">
        <hr class="simple">
        <div class="col-xs-12 text-center">
            <button class="btn btn-primary " type="submit">
                确定
            </button>
        </div>
    </div>
    <div class="dwy-clear"></div>
</form>


<script type="text/javascript">

    $(document).ready(function () {

        $(".fg-date-picker").flatpickr(data_time_picker.data_picker);  // jQuery

        $('#search-form').validationEngine();
        $(".checkThis").click(function () {
            var _self = $(this);
            var tid = _self.attr('data-tid');
            var bid = _self.attr('data-bid');
            $('#tid').val(tid);
            $('#bid').val(bid);
            layer.open({
                title: false,
                type: 1,
                area: '500px',
                content: $('#order_reject'),
                cancel: function () {
                    //右上角关闭回调
                },

            });

        })

        $(".optionThis").click(function () {
            var _self = $(this);
            var tid = _self.attr('data-tid');
            var bid = _self.attr('data-bid');

            var ajaxUrl, text;
            var payed = _self.attr('data-payed');
            switch (payed){
                case '4':
                    var type = _self.attr('data-type');
                    if(type == 'pass'){
                        ajaxUrl = '/collection/receiptCheck/pass'
                        text = '确认收款？'
                    }else{
                        ajaxUrl = '/collection/receiptCheck/notpass'
                        text = '确认审核不通过？'
                    }
                    break;
                case '1':
                    ajaxUrl = '/collection/reconciliation'
                    text = '确认对账？'
                    break;
                case '2':
                    ajaxUrl = '/collection/reconciliation'
                    text = '确认对账？'
                    break;
            }

            layer.confirm(text, {icon: 3, title: '提示'}, function (index) {
                $.ajax({
                    url: ajaxUrl,
                    method: 'post',
                    data: {
                        tid: tid,
                        bid: bid,
                    },
                    success: function (data) {
                        successLayout.hrefTo('/collection');

                    },
                    error: function (response) {
                        layer.close(index)
                        errorLayout.normal(response);
                    }
                });
            }, function (index) { layer.close(index) })


        })



    })

</script>

<%- include('../layouts/foot'); %>
