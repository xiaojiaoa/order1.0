<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main"  class="mainFlex">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>订单收款</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content" class="dis-flex">
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>订单搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">

                            <div class="col-xs-12">

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <% switch (type) {
                                        case 'stores': %>
                                        <label class="col-xs-4 control-label">门店号:</label>
                                        <%        break;
                                        case 'organizations': %>
                                        <label class="col-xs-4 control-label">机构号:</label>
                                        <%        break;
                                        } %>

                                        <div class="col-xs-8">
                                            <input class="form-control" value="<%=  bid %>" name="bid" readonly >
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">机构号:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="bid">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                organizationsList.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.bid == element.id)?"selected":"" %>><%= element.name %></option>
                                                <%  }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">柜员号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" value="<%= DWYRequest.query.id %>"
                                                   name="id">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">柜员手机:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入柜员手机" type="text" value="<%= DWYRequest.query.mobile %>"
                                                   name="mobile">
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">柜员姓名:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  value="<%= DWYRequest.query.name %>"
                                                   name="name">
                                        </div>
                                    </div>
                                </div>

                                <!--输入字段-->


                                <!--下拉选择 有键值-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">所属部门:</label>
                                        <div class="col-xs-8">

                                            <select class="form-control" name="did">
                                                <option value="">- 请选择 -</option>
                                                <% departmentsInfo.forEach(function (element, index) {
                                                if(element.subDeparts.length != 0){%>
                                                <optgroup label="<%= element.name %>">
                                                    <% element.subDeparts.forEach(function (element) {  %>
                                                    <option value="<%= element.id %>" <%= (DWYRequest.query.did == element.id)?"selected":"" %> >
                                                        <%= element.name %>
                                                    </option>
                                                    <%  }) %>
                                                </optgroup>
                                                <%  }else{ %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.did == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <%  }
                                                }) %>
                                            </select>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">建立日期:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker" placeholder="" type="text" value="<%= DWYRequest.query.startDate%>"
                                                   name="startDate">
                                        </div>
                                        <label class="from-to control-label "> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker" placeholder="" type="text" value="<%= DWYRequest.query.endDate%>"
                                                   name="endDate">
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-xs-12">
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">角色:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="roleId">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                roleList.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.roleId == element.id)?"selected":"" %>><%= element.name %></option>
                                                <%  }) %>
                                            </select>

                                        </div>
                                    </div>
                                </div>

                            </div>



                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">

                                    <% if(type == 'stores'){ %>
                                    <!--<a class="btn btn-primary">-->
                                    <!--<i class="fa fa-save"></i>-->
                                    <!--&lt;!&ndash;href="/stores/employees/create/bid"&ndash;&gt;-->
                                    <!--门店可否 新增柜员 未定？？？-->
                                    <!--</a>-->

                                    <%  }else{ %>
                                    <a class="btn btn-primary" href="/<%= type %>/employees/create/<%=  bid %>">
                                        <i class="fa fa-save"></i>
                                        新增柜员
                                    </a>

                                    <%  } %>

                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>

        <div class="well dis-flex">
            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>待审核</h6>
                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row dis-flex">
                <div class="col-xs-12 dis-flex">
                    <div class="table-responsive dis-flex">
                        <table class="table table-bordered table-striped table-scroll dis-flex">
                            <thead>
                            <tr>
                                <th width="80">序号</th>
                                <th>订单号</th>
                                <th>门店</th>
                                <th>金额（元）</th>
                                <th>类型</th>
                                <th>说明</th>
                                <th>增加时间</th>
                                <th width="100">操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(DWY_Helper.isCanLoop(moneyList.result)){
                            moneyList.result.forEach(function (element, index) { %>
                            <tr>
                                <td width="80"><%= index+1 %></td>
                                <td><a href="/order/detail/<%= element.tid %>"><%= element.tid %></a></td>
                                <td><%= element.tid %></td>
                                <td><%= element.direction ==1?'+':'-' %><%= element.money %></td>
                                <td><%= element.typeName %></td>
                                <td><%= element.describe %></td>
                                <td><%= DWY_Helper.getLocalDate(element.addTime) %></td>
                                <td width="100">
                                    <a class="label label-primary checkThis" data-tid="<%=element.tid %>" data-bid="<%=element.bid %>">收款</a>
                                </td>
                            </tr>
                            <% })
                            } %>

                            </tbody>
                        </table>
                        <%- pagination %>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {
        $(".checkThis").click(function () {
            var tid = $(this).attr('data-tid');
            var bid = $(this).attr('data-bid');
            layer.confirm("确定收款?", {icon: 3, title: '提示'}, function (index) {
                $.ajax({
                    url: '/collection/receiptCheck/'+tid+'/'+bid,
                    method: 'put',
                    success: function (data) {
                        successLayout.reload();
                    },
                    error: function (response) {
                        layer.close(index)
                        errorLayout.normal(response);

                    }
                });
            }, function (index) { layer.close(index) })
        })




    })

</script>

<%- include('../layouts/foot'); %>
