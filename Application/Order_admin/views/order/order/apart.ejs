<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>拆单</li>
        </ol>
        <!-- end breadcrumb -->

    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">

        <div class="well">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h3 class="text-align-center"><%= user.name %>拆单中</h3>
                    <hr class="simple">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>颜色</th>
                                <th>难度</th>
                                <th>类别</th>
                                <th>型号</th>
                                <th>订单号</th>
                                <th>专卖店</th>
                                <th>客户名称</th>
                                <th>产品信息</th>
                                <th>模型文件</th>
                                <th>收款确认日期</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(apartinfList.result && apartinfList.result.length>0 ){
                            apartinfList.result.forEach(function (element, index) { %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td></td>
                                <td><%= element.difficultyLevel %></td>
                                <td><%= element.prodTypeName %></td>
                                <td></td>
                                <td><a href="/order/detail/<%= element.tid %>"><%= element.tid %></a></td>
                                <td><%= element.bName %></td>
                                <td><%= element.cName %></td>
                                <td><%= element.prodInfo %></td>
                                <td></td>
                                <td><%= element.taskTime %></td>
                            </tr>
                            <% })
                            }else{ %>
                            <td colspan="11" class="text-align-center">暂无数据</td>
                            <% }%>

                            </tbody>
                        </table>
                        <%- paginationOne %>
                    </div>
                </div>
            </div>


        </div>

        <div class="well">

            <div class="row">
                <div class="col-xs-12">
                    <h6>您当前可以审核的订单类型包括：</h6>
                    <hr class="simple">
                </div>
            </div>
            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th></th>
                                <th>订单类型</th>
                                <th>难度等级</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>橱柜</td>
                                <td>新厨柜18;58新台面;58新台面(设计复尺);</td>
                                <td>二级;三级;四级;五级;六级;七级;八级;九级;</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-xs-12">
                    <hr class="simple">
                    <div class="col-xs-12 text-center">
                        <button class="btn btn-primary">获取订单</button>
                    </div>
                </div>
            </div>


        </div>

        <div class="well">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h3 class="text-align-center"><%= user.name %>已拆单、未审核</h3>
                    <hr class="simple">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>颜色</th>
                                <th>难度</th>
                                <th>类别</th>
                                <th>型号</th>
                                <th>订单号</th>
                                <th>专卖店</th>
                                <th>客户名称</th>
                                <th>产品信息</th>
                                <th>模型文件</th>
                                <th>审核人</th>
                                <th>状态</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(waitReviewList.result && waitReviewList.result.length>0 ){
                            waitReviewList.result.forEach(function (element, index) { %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td></td>
                                <td><%= element.difficultyLevel %></td>
                                <td><%= element.prodTypeName %></td>
                                <td></td>
                                <td><a href="/order/detail/<%= element.tid %>"><%= element.tid %></a></td>
                                <td><%= element.bName %></td>
                                <td><%= element.cName %></td>
                                <td><%= element.prodInfo %></td>
                                <td></td>
                                <td><%= user.name %></td>
                                <td></td>
                            </tr>
                            <% })
                            }else{ %>
                            <td colspan="12" class="text-align-center">暂无数据</td>
                            <% }%>
                            </tbody>
                        </table>
                        <%- paginationTwo %>
                    </div>
                </div>
            </div>


        </div>


        <div class="well">

            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <h3 class="text-align-center">已收款、未拆单</h3>
                    <hr class="simple">
                    <!--<legend>客户搜索</legend>-->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">

                            <div class="col-xs-12">

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <div class="col-xs-3">
                                            <select class="form-control" name="brand">
                                                <option value="">- 品牌 -</option>
                                                <% brandinfoList.forEach(function (element) {  %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.brand == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                        <div class="col-xs-3">
                                            <select class="form-control" name="difficulty">
                                                <option value="">- 难度 -</option>
                                                <% difficultyList.forEach(function (element) {  %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.difficulty == element.id)?"selected":"" %>>
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>

                                        <div class="col-xs-3">
                                            <select class="form-control" name="prodType">
                                                <option value="">- 类型 -</option>
                                                <% prodList.forEach(function (element) {  %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.prodType == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>

                                    </div>
                                </div>

                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">门店地址:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  value="<%= DWYRequest.query.storeAddress %>" type="text"
                                                   name="storeAddress">
                                        </div>
                                    </div>
                                </div>


                            </div>

                            <!--<div class="col-xs-12">-->

                                <!--<div class="col-xs-6">-->
                                    <!--<div class="form-group">-->

                                        <!--<div class="col-xs-3">-->
                                            <!--<select class="form-control" name="">-->
                                                <!--<option value="">- 型号 -</option>-->
                                            <!--</select>-->
                                        <!--</div>-->
                                        <!--<div class="col-xs-3">-->
                                            <!--<select class="form-control" name="">-->
                                                <!--<option value="">- 颜色 -</option>-->
                                            <!--</select>-->
                                        <!--</div>-->
                                    <!--</div>-->
                                <!--</div>-->


                                <!--<div class="col-xs-4">-->
                                    <!--<div class="form-group">-->
                                        <!--<label class="col-xs-4 control-label">审核人:</label>-->
                                        <!--<div class="col-xs-8">-->
                                            <!--<input class="form-control"  value="" type="text"-->
                                                   <!--name="">-->
                                        <!--</div>-->
                                    <!--</div>-->
                                <!--</div>-->

                            <!--</div>-->


                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="pull-left control-label">&nbsp;收款日期</label>
                                        <div class="col-xs-3">
                                            <input class="form-control fg-date-picker" type="text"
                                                   value="<%= DWYRequest.query.startTime %>" name="startTime">
                                        </div>
                                        <label class="control-label " style="float: left"> 至 </label>
                                        <div class="col-xs-3">
                                            <input class="form-control fg-date-picker" type="text"
                                                   value="<%= DWYRequest.query.endTime %>" name="endTime">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">是否下单完毕:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="type">
                                                <option value="">- 请选择 -</option>
                                                <option value="1" <%= (DWYRequest.query.type == 1)?"selected":"" %>>完毕</option>
                                                <option value="2" <%= (DWYRequest.query.type == 2)?"selected":"" %>>未完</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
                <!-- end col -->
            </div>

            <div class="row margin-top-10">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>序号</th>
                            <th>颜色</th>
                            <th>难度</th>
                            <th>类别</th>
                            <th>型号</th>
                            <th>订单号</th>
                            <th>专卖店</th>
                            <th>客户名称</th>
                            <th>产品信息</th>
                            <th>模型文件</th>
                            <th>收款确认日期</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%
                        if(apartList.result && apartList.result.length>0 ){
                        apartList.result.forEach(function (element, index) { %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td></td>
                            <td><%= element.difficultyLevel %></td>
                            <td><%= element.prodTypeName %></td>
                            <td></td>
                            <td><a href="/order/detail/<%= element.tid %>"><%= element.tid %></a></td>
                            <td><%= element.bName %></td>
                            <td><%= element.cName %></td>
                            <td><%= element.prodInfo %></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <% })
                        }else{ %>
                        <td colspan="11" class="text-align-center">暂无数据</td>
                        <% }%>

                        </tbody>
                    </table>
                    <%- paginationThr %>
                </div>
            </div>
            <!-- end row -->
        </div>


    </div>
    <!-- end well -->


</div>
<!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
