<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>补单详情页</li>
        </ol>
        <!-- end breadcrumb -->

        <!-- You can also add more buttons to the
        ribbon for further usability

        Example below:

        <span class="ribbon-button-alignment pull-right">
        <span id="search" class="btn btn-ribbon hidden-xs" data-title="search"><i class="fa-grid"></i> Change Grid</span>
        <span id="add" class="btn btn-ribbon hidden-xs" data-title="add"><i class="fa-plus"></i> Add</span>
        <span id="search" class="btn btn-ribbon" data-title="search"><i class="fa-search"></i> <span class="hidden-mobile">Search</span></span>
        </span> -->

    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">


        <!--
            The ID "widget-grid" will start to initialize all widgets below
            You do not need to use widgets if you dont want to. Simply remove
            the <section></section> and you can use wells or panels instead
            -->


        <!-- well -->
        <div class="well dwy-show-well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12 dwy-show-content">
                    <legend>基本信息
                        <a class="label label-primary">新建补单</a>
                    </legend>
                    <!-- row -->

                    <div class="col-xs-12">
                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">订单关联流水:</label>
                            <p class="text-left col-xs-8 tight-left"><%= orderInfo.lid %></p>
                        </div>

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">客户编号:</label>
                            <p class="text-left col-xs-8 tight-left"><%= orderInfo.cid %></p>
                        </div>

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">建档人:</label>
                            <p class="text-left col-xs-8 tight-left"><%= orderInfo.channelName %></p>
                        </div>

                    </div>

                    <div class="col-xs-12">

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">专卖店编号:</label>
                            <p class="text-left col-xs-8 tight-left"><%= orderInfo.bid %></p>
                        </div>

                        <div class="col-xs-8">
                            <label class="text-right col-xs-2">门店地址:</label>
                            <p class="text-left col-xs-10 tight-left"><%= orderInfo.storeAddress %></p>
                        </div>

                    </div>

                    <div class="col-xs-12">
                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">客户姓名:</label>
                            <p class="text-left col-xs-8 tight-left"><%= orderInfo.name %></p>
                        </div>

                        <div class="col-xs-8">
                            <label class="text-right col-xs-2">客户地址:</label>
                            <p class="text-left col-xs-10 tight-left"><%= orderInfo.address %></p>
                        </div>

                    </div>

                    <div class="col-xs-12">

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">收货人:</label>
                            <p class="text-left col-xs-8 tight-left"><%= orderInfo.recName %></p>
                        </div>

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">收货人联系电话:</label>
                            <p class="text-left col-xs-8 tight-left"><%= orderInfo.recMobile %></p>
                        </div>

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">收货地址:</label>
                            <p class="text-left col-xs-8 tight-left"><%= orderInfo.recAddress %></p>
                        </div>

                    </div>

                    <div class="col-xs-12">

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">预期交货时间:</label>
                            <p class="text-left col-xs-8 tight-left"><%= DWY_Helper.getLocalDate(orderInfo.deliveryDate)  %></p>
                        </div>

                        <div class="col-xs-8">
                            <label class="text-right col-xs-2">备注:</label>
                            <p class="text-left col-xs-10 tight-left"><%= orderInfo.remark %></p>
                        </div>

                    </div>

                    <div class="col-xs-12">

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">补单规格/数量:</label>
                            <p class="text-left col-xs-8 tight-left"><%= orderInfo.quantity   %></p>
                        </div>

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">补单原因:</label>
                            <p class="text-left col-xs-8 tight-left"><%= DWY_Helper.getAssistVal(orderInfo.cause,reasonInfo)   %></p>
                        </div>

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">增单零售价 :</label>
                            <p class="text-left col-xs-8 tight-left"><%= orderInfo.retail    %></p>
                        </div>

                    </div>

                    <div class="col-xs-12">

                        <div class="col-xs-8">
                            <label class="text-right col-xs-2">问题反馈:</label>
                            <p class="text-left col-xs-10 tight-left"><%= orderInfo.describe  %></p>
                        </div>

                    </div>

                    <div class="col-xs-12">

                        <div class="col-xs-8">
                            <label class="text-right col-xs-2">同客户订单:</label>
                            <%
                            var orderList="";
                            orderInfo.orders.forEach(function (orderElement) {
                                orderList = orderList+"<a href=/order/detail/"+ orderElement +">"+orderElement+"     &nbsp</a>";
                            })
                            %>
                            <p class="text-left col-xs-10 tight-left"><%- orderList %></p>
                        </div>

                    </div>

                    <div class="col-xs-12">

                        <div class="col-xs-8">
                            <label class="text-right col-xs-2">同客户补单或增单:</label>
                            <%
                            var resupplys="";
                            orderInfo.resupplys.forEach(function (resupplyElement) {
                                resupplys =resupplys+"<a href=/order/resupply/detail/"+ resupplyElement.tid+"/"+resupplyElement.resId+">"+  resupplyElement.tid+resupplyElement.resId+"     &nbsp</a>";
                            })
                            %>
                            <p class="text-left col-xs-10 tight-left"><%- resupplys %></p>
                        </div>

                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>

            <div class="row">
                <!-- col -->
                <div class="col-xs-12 dwy-show-content">
                    <legend>状态信息
                        <button class="btn-primary btn btn-sm ml-20">提交审核</button>
                        <button class="btn-primary btn btn-sm ml-20">删除订单</button>
                    </legend>
                    <!-- row -->

                    <div class="col-xs-12">

                        <div class="col-xs-8">
                            <label class="text-right col-xs-2">许可状态:</label>
                            <p class="text-left col-xs-10 tight-left"></p>
                        </div>

                    </div>

                    <div class="col-xs-12">

                        <div class="col-xs-8">
                            <label class="text-right col-xs-2">审核时间:</label>
                            <p class="text-left col-xs-10 tight-left"></p>
                        </div>

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">审核人:</label>
                            <p class="text-left col-xs-8 tight-left"></p>
                        </div>

                    </div>

                    <div class="col-xs-12">

                        <div class="col-xs-8">
                            <label class="text-right col-xs-2">收款确认:</label>
                            <p class="text-left col-xs-10 tight-left"></p>
                        </div>

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">确认人:</label>
                            <p class="text-left col-xs-8 tight-left"></p>
                        </div>

                    </div>

                    <div class="col-xs-12">

                        <div class="col-xs-8">
                            <label class="text-right col-xs-2">拆单时间:</label>
                            <p class="text-left col-xs-10 tight-left"></p>
                        </div>

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">拆单人:</label>
                            <p class="text-left col-xs-8 tight-left"></p>
                        </div>

                    </div>

                    <div class="col-xs-12">

                        <div class="col-xs-8">
                            <label class="text-right col-xs-2">拆单审核:</label>
                            <p class="text-left col-xs-10 tight-left"></p>
                        </div>

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">审核人:</label>
                            <p class="text-left col-xs-8 tight-left"></p>
                        </div>

                    </div>

                    <div class="col-xs-12">

                        <div class="col-xs-8">
                            <label class="text-right col-xs-2">特排时间:</label>
                            <p class="text-left col-xs-10 tight-left"></p>
                        </div>

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">特排人:</label>
                            <p class="text-left col-xs-8 tight-left"></p>
                        </div>

                    </div>

                    <div class="col-xs-12">

                        <div class="col-xs-8">
                            <label class="text-right col-xs-2">排产时间:</label>
                            <p class="text-left col-xs-10 tight-left"></p>
                        </div>

                        <div class="col-xs-4">
                            <label class="text-right tight-left col-xs-4">排产人:</label>
                            <p class="text-left col-xs-8 tight-left"></p>
                        </div>

                    </div>

                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>

        </div>
        <!-- end row -->
    </div>
    <!-- end well -->


</div>
<!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

