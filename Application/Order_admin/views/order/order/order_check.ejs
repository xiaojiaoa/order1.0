<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>订单审核</li>
        </ol>
        <!-- end breadcrumb -->

    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">

        <div class="well">
            <div class="row">
                <div class="col-xs-12">
                    <h6><%= user.name %>审核中</h6>
                    <hr class="simple">
                </div>
            </div>
            <!-- row -->
            <div class="row">
                <div class="col-xs-12">

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>订单号</th>
                                <th>难度</th>
                                <th>类别</th>
                                <th>专卖店</th>
                                <th>客户名称</th>
                                <th>产品信息</th>
                                <th>建单人</th>
                                <th>提交日期</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if(DWY_Helper.isCanLoop(selfList.result)){
                                selfList.result.forEach(function (element, index) {  %>
                            <tr class="<%= (element.sign == 1) ? "mark-row":"" %>">
                                <td><%= index+1 %>/<%= element.sign %></td>
                                <td><a href="/order/detail/<%= element.tid %>"><%= element.tid %></a></td>
                                <td><%= element.difficultyStr %></td>
                                <td><%= element.productTypeStr %></td>
                                <td><%= element.storeName %></td>
                                <td><%= element.customerName %></td>
                                <td><%= element.productInfo %></td>
                                <td><%= element.createOperator%></td>
                                <td><%= element.taskTime%></td>


                            </tr>
                            <%    })

                            }else{ %>
                            <td colspan="9" class="text-align-center">暂无数据</td>
                            <%  } %>
                            </tbody>
                        </table>
                        <%- pagination %>
                    </div>
                </div>
            </div>


        </div>

