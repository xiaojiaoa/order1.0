<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>
<!-- MAIN PANEL -->
<div id="main" role="main">
    <!-- RIBBON -->
    <div id="ribbon">
        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a class="back-url" href="/order/detail/<%= tid %>"><i class="fa fa-chevron-left"></i> 订单详情</a></li>
            <li>订单物料</li>
        </ol>
        <!-- end breadcrumb -->
    </div>
    <!-- END RIBBON -->
    <!-- MAIN CONTENT -->
    <div id="content">
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-information">
                            <tbody>
                            <tr>
                                <td>订单编号</td>
                                <td><%= tid %></td>
                                <td>订单状态</td>
                                <td><%= DWY_Helper.getAssistVal(orderDetail.stcode, stcodeInfo) %></td>
                            </tr>
                            <tr>
                                <td>客户姓名</td>
                                <td><%= orderDetail.name %></td>
                                <td>产品信息</td>
                                <td><%= orderDetail.prodInfo %></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- col -->
                <div class="col-xs-12">
                <!--订单详情---订单物料-->
                    <div class="col-xs-12">
                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="col-xs-12">
                                    <h3 class="text-align-center">订单物料</h3>
                                    <hr class="simple">
                                </div>
                                <div class="orderItemLayerTit">
                                    <ul class="orderItemMenu">
                                        <a href="/order/workpiece/<%= tid %>"><li class="workpiece materielBak padding-10">非标件</li></a>
                                        <a href="/order/materiel_modal/<%= tid %>"><li class="parts padding-10">配件</li></a>
                                    </ul>
                                </div>
                                <div class="orderItemLayerTable">
                                    <table class="table table-bordered">
                                        <thead>
                                        <tr>
                                            <th>
                                                <label class="checkbox-inline">
                                                    <input type="checkbox" class="checkbox"
                                                           id="checkAll"  />
                                                    <span>序号</span>
                                                </label>
                                            </th>
                                            <th>订单号</th>
                                            <th>材料</th>
                                            <th>名称</th>
                                            <th>代号</th>
                                            <th>长度</th>
                                            <th>宽度</th>
                                            <th>数量</th>
                                            <th>纹理方向</th>
                                            <th>封边信息</th>
                                            <th>排孔信息</th>
                                            <th>备注</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <%
                                        if(DWY_Helper.isCanLoop(workpieceList.result)){
                                        workpieceList.result.forEach(function(element,index){%>
                                        <tr>
                                            <td>
                                                <label class="checkbox-inline">
                                                    <input type="checkbox" class="checkbox" name="roles" value="<%= element.tid %>">
                                                    <span><%= index+1 %></span>
                                                </label>
                                            </td>
                                            <td><%= element.tid %></td>
                                            <td><%= element.materialName %></td>
                                            <td><%= element.name %></td>
                                            <td><%= element.code %></td>
                                            <td><%= element.length %></td>
                                            <td><%= element.width %></td>
                                            <td><%= element.amount %></td>
                                            <td><%= element.textureOrientation %></td>
                                            <td><%= element.edgeInformation %></td>
                                            <td><%= element.holeInformation %></td>
                                            <td><%= element.remark %></td>
                                        </tr>
                                        <%})}else{%>
                                        <td colspan="12" class="text-align-center">暂无结果</td>
                                        <%}%>
                                        <input type="hidden" value="<%= tid %>" class="tid">
                                        <input type="hidden" class="" id="workpieceBtn" />
                                        </tbody>
                                    </table>
                                    <%- pagination %>
                                </div>
                                <div class="col-xs-12">
                                    <hr class="simple">
                                    <div class="col-xs-12 orderItemButton text-center">
                                            <button class="btn btn-primary">
                                                导出
                                            </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>
<script type="text/javascript">
    var workpieceBtn = $('#workpieceBtn');
    $("#checkAll").change(function () {
        if($(this).is(":checked")){
            $(":checkbox").prop('checked',true);
            $("input[name='roles']:checked").each(function (i) {
                workpieceBtn.addClass(this.value+',')
            });
        }else{
            $(":checkbox").prop('checked',false);
            workpieceBtn.removeClass()
        }
    })
    $("input[name='roles']").change(function () {
        if($(this).is(':checked')){
            workpieceBtn.addClass(this.value+',')
        }else{
            workpieceBtn.removeClass(this.value+',')
        }
    });
</script>
<%- include('../layouts/foot'); %>