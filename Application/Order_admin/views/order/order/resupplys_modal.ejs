<form class="form-horizontal  layer-template" method="post" id="check_pass" action="/orders/doPass" >

    <div class="col-xs-12">
        <div class="col-xs-3">
            <div class="form-group">
                <label class="col-xs-4 control-label">补单原因:</label>
                <div class="col-xs-8">
                    <select class="form-control" name="cause">
                        <option value="">- 请选择 -</option>
                        <% resonList.forEach(function (element) {  %>
                        <option value="<%= element.id %>" <%= (DWYRequest.query.cause == element.id)?"selected":"" %> >
                            <%= element.name %>
                        </option>
                        <% }) %>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <input value="<%= tid %>" name="tid" type="hidden">

    <div class="col-xs-12">

        <div class="form-group">
            <label class="col-xs-2 control-label">备注:</label>
            <div class="col-xs-6">
                <input class="form-control" type="text"  value="" name="remark">
            </div>

        </div>
    </div>
    <div class="col-xs-12">
        <hr class="simple">
        <div class="col-xs-12 text-center">
            <button class="btn btn-primary " type="submit">
                <i class="fa fa-save"></i>
                审核提交
            </button>
        </div>
    </div>
    <div class="dwy-clear"></div>
</form>

<form class="form-horizontal  layer-template" method="post" id="order_reject"
        <%  switch (resupplyInfo.status){
        case 250:%>
      action="/resupplys/notPass"
        <%    break;
        case 450: %>
      action='/resupplys/apart/notPass'
        <%       break;
        case 475: %>
      action='/resupplys/apartCheck/notPass'
        <%       break;
        } %>
>


    <div class="col-xs-12">

        <div class="form-group">
            <label class="col-xs-2 control-label"><span class="requird"></span> 退回类型:</label>
            <div class="col-xs-8">
                <select class="form-control validate[required]" name="cause" data-prompt-position="bottomLeft:20,5">
                    <option value="">- 请选择 -</option>
                    <% resonList.forEach(function (element) { %>
                    <option value="<%= element.id %>"><%= element.name %></option>
                    <%  }) %>
                </select>
            </div>

        </div>

    </div>
    <input value="<%= tid %>" name="tid" type="hidden">
    <input value="<%= resId %>" name="resId" type="hidden">
    <div class="col-xs-12">

        <div class="form-group">
            <label class="col-xs-2 control-label">退回原因:</label>
            <div class="col-xs-8">
                <textarea name="remark" class="form-control"
                          placeholder="请填写退回原因"  cols="30"
                          rows="5"></textarea>
            </div>

        </div>
    </div>
    <div class="col-xs-12">
        <hr class="simple">
        <div class="col-xs-12 text-center">
            <button class="btn btn-primary " type="submit">
                退回
            </button>
        </div>
    </div>
    <div class="dwy-clear"></div>
</form>


<script type="text/javascript">

    $(document).ready(function () {

        $("#check_pass").validationEngine();
        $("#order_reject").validationEngine();
        

        //弹出类
        $('#check-pass-modal').on({
            click: function (e) {
                layer.open({
                    title: false,
                    type: 1,
                    area: '700px',
                    content: $('#check_pass'),
                    cancel: function () {
                        //右上角关闭回调
                    },

                });
            }
        })

        //弹出类
        $('.reject-modal').on({
            click: function (e) {
                layer.open({
                    title: false,
                    type: 1,
                    area: '700px',
                    content: $('#order_reject'),
                    cancel: function () {
                        //右上角关闭回调
                    },

                });
            }
        })

    })

</script>