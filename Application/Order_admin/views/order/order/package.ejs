<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>订单包装</li>
        </ol>
        <!-- end breadcrumb -->

    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!--well-->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>订单搜索</legend>-->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get" id="toBePackedForm">

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">订单号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入订单号" type="text" value="<%= DWYRequest.query.tid %>" name="tid">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">批次号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入批次号" type="text" value="<%= DWYRequest.query.batchNumber %>" name="batchNumber">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">下单日期:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker flatpickr-input" placeholder="" type="text" value="<%= DWYRequest.query.orderStartTime %>" name="orderStartTime" readonly="readonly">
                                        </div>
                                        <label class="from-to control-label "> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker flatpickr-input" placeholder="" type="text" value="<%= DWYRequest.query.orderEndTime %>" name="orderEndTime" readonly="readonly">
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center" >
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-save"></i>
                                        确认
                                    </button>
                                </div>
                                <hr class="simple">
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->

        </div>
        <!--end well-->
        <!--well-->
        <div class="well">
            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>待包装订单</h6>
                    <hr class="simple">
                </div>
            </div>
            <!--end roll-->
            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                            <tr>
                               <!-- <th>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" class="checkbox"
                                               id="checkAll"  />
                                        <span>序号</span>
                                    </label>
                                </th>-->
                                <th>序号</th>
                                <th>订单号</th>
                                <th>批次号</th>
                                <th>专卖店</th>
                                <th>客户名称</th>
                                <th>楼盘名称</th>
                                <th>下单日期</th>
                                <th>受理日期</th>
                                <th>交货日期</th>
                                <th>客户地址导入</th>
                                <th>备注</th>
                                <th>包装状态</th>
                                <th>操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if( toBePackedList.result ){
                            toBePackedList.result.forEach(function (element, index) { %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td><a href="/order/detail/<%= element.tid %>"><%= element.tid %></a></td>
                                <td><%= element.batchNumber %></td>
                                <td><%= element.storeAddress %></td>
                                <td><%= element.cName %></td>
                                <td><%= element.realEstate %></td>
                                <td><%= element.orderTimeStr %></td>
                                <td><%= element.acceptTimeStr %></td>
                                <td><%= element.deliveryTimeStr%></td>
                                <td><%= element.custAdress %></td>
                                <td><%= element.remark %></td>
                                <td><%= element.packageStatusStr %></td>
                                <td>
                                    <% if(element.packageStatus==0 && DWY_Helper.hasPermission(Permission.orderPackage.create.id, permission) ){%>
                                    <a class="label label-primary crePackage" tid="<%= element.tid %>">生成包装</a>
                                    <%}%>
                                    <% if(element.packageStatus!=0 && DWY_Helper.hasPermission(Permission.orderPackage.queryDetail.id, permission) ){%>
                                    <a class="label label-success packageDetail" href="/orders/package/<%= element.tid %>">包装详情</a>
                                    <%}%>
                                </td>
                            </tr>
                            <%  })
                            }else{ %>
                            <td colspan="20" class="text-align-center">暂无结果</td>
                            <%  }%>
                            </tbody>
                        </table>
                        <%- pagination %>
                    </div>
                </div>
            </div>
            <!--end  row-->
        </div>
        <!--end well-->
      </div>



</div>
<!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>
<script type="text/javascript">

    $(document).ready(function () {
        pageSetUp();

      //日期组件
        $(".fg-date-time-picker").flatpickr(data_time_picker.data_time_picker);

        //对表单进行初始化验证
        $("#toBePackedForm").validationEngine();

    })

</script>
<%- include('./crePackage_modal');%>
<%- include('../layouts/foot'); %>