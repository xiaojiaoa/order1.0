<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>


<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main" class="mainFlex">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>补单管理页面</li>
        </ol>
        <!-- end breadcrumb -->

    </div>
    <!-- END RIBBON -->

    <!-- MAIN CONTENT -->
    <div id="content" class="dis-flex">

        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>客户搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">

                            <div class="col-xs-12">

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">订单号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" value="<%= DWYRequest.query.tid %>"
                                                   name="tid">
                                        </div>
                                    </div>
                                </div>


                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">订单品牌:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="brandId">
                                                <option value="">- 请选择 -</option>
                                                <% brandInfo.forEach(function (element) {  %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.brandId == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">补单建单日期:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" type="text"
                                                   value="<%= DWYRequest.query.startTime %>" name="startTime" >
                                        </div>
                                        <label class="control-label " style="float: left"> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" type="text"
                                                   value="<%= DWYRequest.query.endTime %>" name="endTime" >
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-xs-12">
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">流水号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" value="<%= DWYRequest.query.lid %>"
                                                   name="lid">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">产品类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="productType">
                                                <option value="">- 请选择 -</option>
                                                <% prodList.forEach(function (element) {  %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.productType == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">补单状态:</label>
                                        <div class="col-xs-4">
                                            <select class="form-control" name="startStatus">
                                                <option value="">- 请选择 -</option>
                                                <% stcodesList.forEach(function (element) {  %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.startStatus == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                        <label class="control-label " style="float: left"> 至 </label>
                                        <div class="col-xs-4">
                                            <select class="form-control" name="endStatus">
                                                <option value="">- 请选择 -</option>
                                                <% stcodesList.forEach(function (element) {  %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.endStatus == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>




                            </div>


                            <div class="col-xs-12">


                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">补单原因:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="cause">
                                                <option value="">- 请选择 -</option>
                                                <% reasonList.forEach(function (element) {  %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.cause == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>


                            </div>


                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well dis-flex">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>补单列表</h6>
                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row dis-flex">
                <div class="col-xs-12 dis-flex">
                    <div class="table-responsive dis-flex">
                        <table class="table table-bordered table-striped table-hover table-scroll dis-flex">
                            <thead>
                            <tr>
                                <th width="4%">序号</th>
                                <th>品牌</th>
                                <th>产品类型</th>
                                <th width="12%">补单号</th>
                                <th width="12%">原订单号</th>
                                <th>产品信息</th>
                                <th>补单建单人</th>
                                <th>补单建单时间</th>
                                <th width="15%">补单原因</th>
                                <th>补单当前状态</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(resupplyList.result && resupplyList.result.length>0 ){
                            resupplyList.result.forEach(function (element, index) { %>
                            <tr>
                                <td width="4%"><%= index+1 %></td>
                                <td><%= element.brandStr %></td>
                                <td><%= element.productTypeStr %></td>
                                <td width="12%"><a href="/order/resupply/detail/<%= element.tid %>"><%= element.tid %></a></td>
                                <td width="12%"><a href="/order/detail/<%= element.orgTid %>"><%= element.orgTid %></a></td>
                                <td><%= element.productInfo %></td>
                                <td><%= element.createOperator %></td>
                                <td><%= element.addTime %></td>
                                <td width="15%"><%= element.causeStr %></td>
                                <td><%= element.statusStr %></td>
                            </tr>
                            <% })
                            }else{ %>
                            <td colspan="12" class="text-align-center">暂无数据</td>
                            <% }%>

                            </tbody>
                        </table>
                        <%- pagination %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {



        pageSetUp();
        $(".fg-date-picker").flatpickr(data_time_picker.data_time_picker); // jQuery

    })

</script>


<%- include('../layouts/foot'); %>