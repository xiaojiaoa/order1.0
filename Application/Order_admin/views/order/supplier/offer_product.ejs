<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a class="back-url" href="/supplier/detail/<%= suppliersDetail.id %>"><i class="fa fa-chevron-left"></i> 供应商详情</a></li>
            <li>供应商可供物料</li>
        </ol>
        <!-- end breadcrumb -->
    </div>
    <!-- END RIBBON -->
    <!-- MAIN CONTENT -->
    <div id="content">
        <div class="well">
            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>已选中物料</h6>
                    <hr class="simple">
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped localstorage">
                            <thead>
                            <tr class="len">
                                <th>序号</th>
                                <th>物料编号</th>
                                <th>物料名称</th>
                                <th>分类名称</th>
                                <th>截止合同日期</th>
                                <th>物料编码</th>
                            </tr>
                            </thead>
                            <tbody class="supProTr">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-3">
                        <a class="btn btn-primary margin-bottom-10" id="relateMaterial">关联物料</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="well">
            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">
                            <div class="col-xs-12">
                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">物料名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入物料名称" type="text" value="<%= DWYRequest.query.name %>" name="name">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">物料分类:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="stairCatId">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                if(DWY_Helper.isCanLoop(suppliersMaterialList)){
                                                suppliersMaterialList.forEach(function (element, index) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.stairCatId == element.id)?"selected":"" %>>
                                                    <%= element.name %>
                                                </option>
                                                <%  })}%>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        搜索
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!---供应商可供物料---->

                    <form class="form-horizontal margin-top-10" method="post" id="orderItemCon" action="" >
                        <div class="col-xs-12">
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <legend>
                                                供应商物料关联
                                            </legend>
                                        </div>
                                    </div>
                                    <div class="orderItemLayerTable">
                                        <table class="table table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th>序号</th>
                                                <th>物料编号</th>
                                                <th>物料名称</th>
                                                <th>分类名称</th>
                                                <th>真实库存</th>
                                                <th>预警数量</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <%
                                            if(DWY_Helper.isCanLoop(supMaterialList.result)){
                                            supMaterialList.result.forEach(function (element, index) { %>
                                            <tr>
                                                <td>
                                                    <label class="checkbox-inline">
                                                        <input type="checkbox" class="checkbox"
                                                               name="roles" value="<%= element.id %>">
                                                        <span><%= index+1 %></span>
                                                    </label>
                                                </td>
                                                <td><a href="/materialManage/detail/<%= bid %>/<%= element.id %>"><%= element.id %></a></td>
                                                <td><%= element.name %></td>
                                                <td><%= element.catName %></td>
                                                <td><%= element.stock %></td>
                                                <td><%= element.warning %></td>
                                                <%  })}else{%>
                                                <td colspan="6" class="text-align-center">暂无结果</td>
                                                <% }%>
                                            </tr>
                                            </tbody>
                                        </table>
                                        <%- pagination %>
                                        <input type="hidden" class="" id="checkedValue">
                                        <input type="hidden"  id="gid" value="<%= suppliersDetail.id %>">
                                    </div>

                                </div>

                            </div>

                        </div>

                        <div class="dwy-clear"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>
<script type="text/javascript">
    $(document).ready(function () {
        pageSetUp();
        $(".supProTr").validationEngine({scroll: false});
        //刷新选中列表 这个函数根据每个页面不同需自己填写
        function updateCheckedList(isInit) {
            var parentEle = '.supProTr';
            var storageKey = 'LIST_DATA';

            var listArr = DWY_Utils.StorageUtils.getListArr(storageKey);

            var htmlStr = '';
            if (listArr instanceof Array && listArr.length != 0) {
                var len = listArr.length;
                for (var i = 0; i < len; i++) {
                    var itemHtml = ''
                        + '<tr class="topTr">'
                        + '<td>'
                        + '<label class="checkbox-inline">'
                        + '<input type="checkbox" class="checkbox materialId'+i+'" name="roles"  value="' + listArr[i].id + '" checked>'
                        + '<span>' + (i+1) + '</span>'
                        + '</label>'
                        + '</td>'
                        + '<td><a href="/materialManage/detail/' + listArr[i].id + '">' + listArr[i].id + '</a></td>'
                        + '<td>' + listArr[i].name + '</td>'
                        + '<td>' + listArr[i].class_name + '</td>'
                        + '<td><input class="form-control fg-date-picker validate[required] date" type="text" value="" name="date'+i+'"  /></td>'
                        + '<td><input  class="form-control validate[required] code" value="" name="code'+i+'" /></td>'
                        + '</tr>';
                    htmlStr += itemHtml;

                    // 判断是否是初始化 是的话保持下面列表状态同步
                    if(isInit){
                        var $ipts = $(".orderItemLayerTable input[name='roles']");
                        var id = listArr[i].id;
                        var iptslen = $ipts.length;
                        for (var j = 0; j < iptslen; j++) {
                            if(id == $ipts.eq(j).val()){
                                $ipts.eq(j).attr('checked',true);
                            }
                        }
                    }
                }
                $(parentEle).html(htmlStr);
                $(".fg-date-picker").flatpickr(data_time_picker.data_picker); // jQuery
            }else{
                $(parentEle).html("");
            }
        }

        // 页面一加载先刷新一次读取localstorage
        updateCheckedList(true);




        $(".orderItemLayerTable input[name='roles']").on("change",function () {

            var $tds = $(this).parent().parent().parent().children("td");

            // 获取整个条目数据
            var item = {
                id : $(this).val(),
                name : $tds.eq(2).html(),
                class_name : $tds.eq(3).html(),
                real_stock : $tds.eq(4).html(),
                warning_num : $tds.eq(5).html(),
                usable_stock : $tds.eq(6).html(),
                price : $tds.eq(7).html(),

            }

            // 选中添加  取消选中则删除
            if($(this).is(':checked')){
                DWY_Utils.StorageUtils.addItem(item,'id','LIST_DATA',updateCheckedList)
            }else{
                DWY_Utils.StorageUtils.deletItem({
                    id:$(this).val()
                },'id','LIST_DATA',updateCheckedList)
            }
        })

        $(".supProTr").on("change","input",function () {
            var id = $(this).val();
            // 点中删除
            DWY_Utils.StorageUtils.deletItem({
                id:id
            }, 'id','LIST_DATA',function(){

                // 与下面列表的选中状态保持一致
                var $ipts = $(".orderItemLayerTable input[name='roles']");

                var len = $ipts.length;
                for (var i = 0; i < len; i++) {
                    if(id == $ipts.eq(i).val()){
                        $ipts.eq(i).attr('checked',false);
                        updateCheckedList();
                        return;
                    }
                }
            })

        })






        var checkedValue = $('#checkedValue');
        $(".supProTr input[name='roles']:checked").each(function(){
            var val=$(this).val();
            checkedValue.addClass(val+',')
        });
        $("input[name='roles']").change(function () {
            if($(this).is(':checked')){
                checkedValue.addClass(this.value+',')
            }else{
                checkedValue.removeClass(this.value+',')
            }
        });

        $("#relateMaterial").on({
            click:function(){
                if(checkedValue.attr('class')==null||checkedValue.attr('class')==''){
                    layer.alert('请选择！', {icon: 3})
                    return false;
                }
                var dateVal = $(".date").val();
                var codeVal = $(".code").val();
                var reg = /^(\d{1,32})$/;
                var r = codeVal.match(reg);
                if(dateVal==null||dateVal==''){
                    layer.alert('请填写合同日期！', {icon: 3})
                    return false;
                }
                if(codeVal==null||codeVal==''){
                    layer.alert('请填写物料编码！', {icon: 3})
                    return false;
                }
                if(r==null){
                    layer.alert('请输入0-9且长度不大于32！', {icon: 3})
                    return false;
                }

                var len= $('.topTr').length;
                var arr=new Array();
                for(var i=0;i<len;i++){
                    var suppId=$("#gid").val();
                    var mateId=$(".materialId"+i+"").val();
                    var expiryDate=$("input[name=date"+i+"]").val();
                    var outerCode=$("input[name=code"+i+"]").val();
                    var obj=new Object();
                    obj.suppId=suppId;
                    obj.mateId=mateId;
                    obj.expiryDate=expiryDate;
                    obj.outerCode=outerCode;
                    arr.push(obj);
                }
                var list={list:arr};
                console.log(list)
                layer.confirm("确认关联？", {title:'提示'},function(index){
                        $.ajax({
                            url: '/supplier/createMaterialSupplier',
                            data:JSON.stringify(list),
                            method: 'post',
                            dataType: 'json',
                            contentType:"application/json",

                            success: function (data) {
                                location.href='/supplier/detail/'+suppId;
                                localStorage.clear();
                            },
                            error: function (response) {
                                if(response.status==200){
                                    location.href='/supplier/detail/'+suppId;
                                    localStorage.clear();
                                }else {
                                    layer.close(index);
                                    errorLayout.normal(response);
                                }
                            }
                        });
                        //                layer.close(index)
                    },function(index){
                        layer.close(index)}
                )

            }})
    })
</script>
