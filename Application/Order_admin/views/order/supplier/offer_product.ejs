<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>供应商可供商品</li>
        </ol>
        <!-- end breadcrumb -->
    </div>
    <!-- END RIBBON -->
    <!-- MAIN CONTENT -->
    <div id="content">
        <div class="well">
            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6 class="col-xs-4">可供应物料信息</h6>
                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">
                            <div class="col-xs-12">
                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">物料名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入物料名称" type="text" value="<%= DWYRequest.query.name %>" name="name">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">物料分类:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="stairCatId">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                if(suppliersMaterialList){
                                                suppliersMaterialList.forEach(function (element, index) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.stairCatId == element.id)?"selected":"" %>>
                                                    <%= element.name %>
                                                </option>
                                                <%  })}%>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        搜索
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!---供应商可供物料---->

                    <form class="form-horizontal margin-top-10" method="post" id="orderItemCon" action="" >
                        <div class="col-xs-12">
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="well">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <legend>
                                                    新建物料供应商关联
                                                </legend>
                                            </div>
                                            <div class="col-xs-12">
                                                <div class="">
                                                    <a class="btn btn-primary margin-bottom-10" id="editBatchNum">确认</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="orderItemLayerTable">
                                            <table class="table table-bordered">
                                                <thead>
                                                <tr>
                                                    <th>
                                                        <label class="checkbox-inline">
                                                            <input type="checkbox" class="checkbox"
                                                                   id="checkAll"  />
                                                            <span>序号</span>
                                                        </label>
                                                    </th>
                                                    <th>物料编号</th>
                                                    <th>物料名称</th>
                                                    <th>分类名称</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                <%
                                                    if(supMaterialList.result){
                                                    supMaterialList.result.forEach(function (element, index) { %>
                                                <tr>
                                                    <td>
                                                        <label class="checkbox-inline">
                                                            <input type="checkbox" class="checkbox"
                                                                   name="roles" value="<%= element.id %>">
                                                            <span><%= index+1 %></span>
                                                        </label>
                                                    </td>
                                                    <td><a href="/materialManage/detail/<%= element.id %>"><%= element.id %></a></td>
                                                    <td><%= element.name %></td>
                                                    <td><%= element.catName %></td>
                                                </tr>
                                                <%  })
                                                    }%>

                                                </tbody>
                                            </table>
                                            <%- pagination %>
                                            <input type="hidden" class="" id="checkedValue">
                                            <input type="hidden"  id="gid" value="<%= suppliersDetail.id %>">
                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>

                        <div class="dwy-clear"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>
<script type="text/javascript">
    $(document).ready(function () {
        pageSetUp();
        $(".fg-date-picker").flatpickr(data_time_picker.data_picker); // jQuery

        $(".orderItemMenu li").click(function(){
            $(this).addClass("selected").siblings().removeClass("selected");
            $(".orderItemLayerTable table").eq($(this).index()).show().siblings().hide();
        })

        var checkedValue = $('#checkedValue');
        $("#checkAll").change(function () {
            if($(this).is(":checked")){
                $("input[name='roles']").prop('checked',true);
                $("input[name='roles']:checked").each(function (i) {
                    checkedValue.addClass(this.value+',')
                });
            }else{
                $(":checkbox").prop('checked',false);
                checkedValue.removeClass()
            }
        })
        $("input[name='roles']").change(function () {
            if($(this).is(':checked')){
                checkedValue.addClass(this.value+',')
            }else{
                checkedValue.removeClass(this.value+',')
            }
        });

        $("#editBatchNum").on({
            click:function(){
                if(checkedValue.attr('class')==null||checkedValue.attr('class')==''){
                    layer.alert('请选择！', {icon: 3})
                    return false;
                }
                layer.open({
                    title: false,
                    type: 1,
                    area: '500px',
                    content: $('#create-offer-pro'),
                    cancel: function () {

                    },
                })
        }})
        $("#btnCreateDate").click(function(){
            var tid=$("#gid").val();
            var bid = checkedValue.attr('class').replace(/[ ]/g,"");
            bid = bid.substring(0,bid.length-1);
            var date=$("#create-offer-pro input").val();
            if(date==""||date==null) return false;
            layer.confirm("确认关联？", {title:'提示'},function(index){
                    $.ajax({
                        url: '/supplier/createMaterialSupplier/'+tid+'/'+bid+'/'+date,
                        method: 'post',
                        success: function (data) {
                            window.location.reload();
                        },
                        error: function (response) {
                            layer.close(index)
                            var data = JSON.parse(response.responseText);
                            //                        var data = (response.responseText);
                            $.smallBox({
                                title: "操作失败",
                                content: data.msg,
                                color: "#C46A69",
                                iconSmall: "fa fa-times fa-2x fadeInRight animated",
                                timeout: 3000
                            });
                            setTimeout(function(){
                                window.location.reload();
                            },7000)
                        }
                    });
                    //                layer.close(index)
                },function(index){
                    layer.close(index)}
            )
        })
    })
</script>
