<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a class="back-url" href="/supplier"><i class="fa fa-chevron-left"></i>供应商管理</a></li>
            <li>修改供应商信息</li>
        </ol>
        <!-- end breadcrumb -->
    </div>
    <!-- END RIBBON -->
    <!-- MAIN CONTENT -->
    <div id="content">
        <form class="form-horizontal" method="post" id="modify-supplier" action="/supplier/doModify" >
            <div class="col-xs-12">
                <legend>
                    修改供应商信息
                </legend>
            </div>
            <div class="col-xs-12">
                <div class="form-group">
                    <div class="well">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="col-xs-4">
                                            <div class="form-group">
                                                <label class="col-xs-4 control-label "><span class="requird"></span>供应商名称:
                                                </label>
                                                <div class="col-xs-8">
                                                    <input class="form-control validate[required]" value="<%= supplierModify.name %>" name="name">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-4">
                                            <div class="form-group">
                                                <label class="col-xs-4 control-label "><span class="requird"></span>联系人姓名:
                                                </label>
                                                <div class="col-xs-8">
                                                    <input class="form-control validate[required]" value="<%= supplierModify.contact %>" name="contact">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="col-xs-4">
                                            <div class="form-group">
                                                <label class="col-xs-4 control-label "><span class="requird"></span> 联系人电话:
                                                </label>
                                                <div class="col-xs-8">
                                                    <input class="form-control validate[required,funcCall[custom_validate_fn.isMobile]]" value="<%= supplierModify.contactMobile %>" name="contactMobile">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-4">
                                            <div class="form-group">
                                                <label class="col-xs-4 control-label "><span class="requird"></span>供应商类型:
                                                </label>
                                                <div class="col-xs-8">
                                                    <select class="form-control" name="type" id="">
                                                        <option value="">-请选择-</option>
                                                        <option value="1" <%= (supplierModify.type == 1) ? 'selected' : '' %> >
                                                            外部
                                                        </option>
                                                        <option value="2" <%= (supplierModify.type == 2) ? 'selected' : '' %> >
                                                            内部
                                                        </option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="col-xs-4">
                                            <div class="form-group">
                                                <label class="col-xs-4 control-label "><span class="requird"></span> 供应商等级:
                                                </label>
                                                <div class="col-xs-8">
                                                    <select class="form-control" name="grade" id="">
                                                        <option value="">-请选择-</option>
                                                        <option value="1" <%= (supplierModify.grade == 1) ? 'selected' : '' %> >
                                                            1
                                                        </option>
                                                        <option value="2" <%= (supplierModify.grade == 2) ? 'selected' : '' %> >
                                                            2
                                                        </option>
                                                        <option value="3" <%= (supplierModify.grade == 3) ? 'selected' : '' %> >
                                                            3
                                                        </option>
                                                        <option value="4" <%= (supplierModify.grade == 4) ? 'selected' : '' %> >
                                                            4
                                                        </option>
                                                        <option value="5" <%= (supplierModify.grade == 5) ? 'selected' : '' %> >
                                                            5
                                                        </option>
                                                        <option value="6" <%= (supplierModify.grade == 6) ? 'selected' : '' %> >
                                                            6
                                                        </option>
                                                        <option value="7" <%= (supplierModify.grade == 7) ? 'selected' : '' %> >
                                                            7
                                                        </option>
                                                        <option value="8" <%= (supplierModify.grade == 8) ? 'selected' : '' %> >
                                                            8
                                                        </option>
                                                        <option value="9" <%= (supplierModify.grade == 9) ? 'selected' : '' %> >
                                                            9
                                                        </option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="col-xs-8">
                                            <div class="form-group dwy-area">
                                                <label class="col-xs-2 control-label"><span class="requird"></span>
                                                    供应商所在地:</label>
                                                <div class="col-xs-10 no-padding">
                                                    <div class="col-xs-3">
                                                        <select class="form-control dwy-province validate[required]"
                                                                name="province">
                                                            <option value="">-省-</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-xs-3">
                                                        <select class="form-control dwy-city validate[required]" name="city">
                                                            <option value="">-市-</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-xs-3">
                                                        <select class="form-control dwy-district validate[required]"
                                                                name="dist">
                                                            <option value="">-区-</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12">
                                        <div class="col-xs-8">
                                            <div class="form-group">
                                                <label class="col-xs-2 control-label "><span class="requird"></span> 详细地点:
                                                </label>
                                                <div class="col-xs-10">
                                                    <input class="form-control validate[required]" value="<%= supplierModify.address %>" name="address">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="col-xs-4">
                                            <div class="form-group">
                                                <label class="col-xs-4 control-label "><span class="requird"></span>财务联系人:
                                                </label>
                                                <div class="col-xs-8">
                                                    <input class="form-control validate[required]" value="<%= supplierModify.financeContact %>" name="financeContact">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-4">
                                            <div class="form-group">
                                                <label class="col-xs-4 control-label "><span class="requird"></span>财务联系电话:
                                                </label>
                                                <div class="col-xs-8">
                                                    <input class="form-control validate[required,funcCall[custom_validate_fn.isMobile]]" value="<%= supplierModify.financeContactMobile %>" name="financeContactMobile">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12">
                                        <div class="col-xs-4">
                                            <div class="form-group">
                                                <label class="col-xs-4 control-label "><span class="requird"></span>开户行及银行:
                                                </label>
                                                <div class="col-xs-8">
                                                    <input class="form-control validate[required]" value="<%= supplierModify.depositBank %>" name="depositBank">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-4">
                                            <div class="form-group">
                                                <label class="col-xs-4 control-label "><span class="requird"></span>开户卡号:
                                                </label>
                                                <div class="col-xs-8">
                                                    <input class="form-control validate[required] validate[custom[integer]] validate[min[16]]" value="<%= supplierModify.depositNo %>" name="depositNo">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12">
                                        <div class="col-xs-4">
                                            <div class="form-group">
                                                <label class="col-xs-4 control-label "><span class="requird"></span>开票信息:
                                                </label>
                                                <div class="col-xs-8">
                                                    <input class="form-control validate[required]" value="<%= supplierModify.invoiceInfo %>" name="invoiceInfo">
                                                    <input type="hidden" value="<%= supplierModify.id %>" name="id">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12">
                                        <div class="col-xs-8">
                                            <div class="form-group">
                                                <label class="col-xs-2 control-label">备注:</label>
                                                <div class="col-xs-10">
                                                    <textarea name="remark" class="form-control" cols="30" rows="5"> <%= supplierModify.remark %></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12">
                                        <hr class="simple">
                                        <div class="col-xs-10 text-center">
                                            <button class="btn btn-primary " type="submit">
                                                <i class="fa fa-save"></i>
                                                确认修改
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="dwy-clear"></div>
        </form>
    </div>
</div>

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>
<script type="text/javascript">
    $(document).ready(function () {
        pageSetUp();
        $("#modify-supplier").validationEngine();
        $(".fg-date-picker").flatpickr(data_time_picker.data_picker); // jQuery
        $("input[name=contact]").blur(function(){
            var contact=$("input[name=contact]").val();
            var reg=/^([\u4e00-\u9fa5]){2,7}$/;
            if(!reg.test(contact)){
                layer.alert('请输入正确姓名');
            }
        })
        DWY_area.init({
            defaultValue:[
                {
                    name:'province',
                    value: '<%= supplierModify.province %>',
                    key:'province',
                    linkcity:'city',
                    linkdis:'dist',
                    cityId: '<%= supplierModify.city %>'
                },
                {name:'city', value: '<%= supplierModify.city %>', key:'city',linkdis:'dist',disId: '<%= supplierModify.dist %>'},
                {name:'dist', value: '<%= supplierModify.dist %>', key:'district'},
            ]
        });
    })
</script>
<%- include('../layouts/foot'); %>

