<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>


<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>客户跟进统计</li>
        </ol>
        <!-- end breadcrumb -->



    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">

        <div class="row-url">
            <a class="title-url active" href="/countCustomer">客户跟进统计</a>
            <a class="title-url" href="/countDeal">成交情况统计</a>
        </div>

        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12 dwy-show-content">
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get" id="search-customer">
                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">时间段:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker" placeholder="" type="text"  value="<%= DWYRequest.query.startDate %>"
                                                   name="startDate">
                                        </div>
                                        <label class="control-label " style="float: left"> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker" placeholder="" type="text"  value="<%= DWYRequest.query.endDate %>"
                                                   name="endDate">
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">门店:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control validate[required]" name="conid">
                                                <option value="">- 请选择 -</option>
                                                <% if(DWY_Helper.isCanLoop(storesList)){
                                                storesList.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.conid == element.id)?"selected":"" %> >
                                                    <%= element.storeName %>
                                                </option>
                                                <% })
                                                } %>

                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">部门:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control validate[required]" name="conid">
                                                <option value="">- 请选择 -</option>
                                                <% if(DWY_Helper.isCanLoop(homeAdviserInfo)){
                                                homeAdviserInfo.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.conid == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% })
                                                } %>

                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">家居顾问:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control validate[required]" name="conid">
                                                <option value="">- 请选择 -</option>
                                                <% if(DWY_Helper.isCanLoop(homeAdviserInfo)){
                                                homeAdviserInfo.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.conid == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% })
                                                } %>

                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>


                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- well -->
        <!-- end well -->

        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12 dwy-show-content">
                    <legend>期间发生统计</legend>

                    <!-- row -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-information">
                            <tbody>
                            <tr>
                                <td width="200px">获得量尺机会数量</td>
                                <td><%= custcountInfo.meas %></td>
                                <td width="200px">实际量尺数量</td>
                                <td><%= custcountInfo.meased %></td>
                            </tr>
                            <tr>
                                <td>第一次沟通数量</td>
                                <td><%= custcountInfo.commOne %></td>
                                <td>第二次沟通数量</td>
                                <td><%= custcountInfo.commTwo %></td>
                            </tr>
                            <tr>
                                <td>第三次沟通数量</td>
                                <td><%= custcountInfo.commThree %></td>
                                <td>第四次以上沟通数量</td>
                                <td><%= custcountInfo.commFour %></td>
                            </tr>
                            <tr>
                                <td>合同签订数量</td>
                                <td><%= custcountInfo.conStcode %></td>
                                <td>未成交数量</td>
                                <td><%= custcountInfo.nodeal %></td>
                            </tr>


                            </tbody>
                        </table>

                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>


        </div>

        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12 dwy-show-content">
                    <legend>目前状态统计</legend>

                    <!-- row -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-information">
                            <tbody>
                            <tr>
                                <td width="200px">待量尺</td>
                                <td><%= custcountInfo.waitMeas %></td>
                                <td width="200px">待沟通</td>
                                <td><%= custcountInfo.comming %></td>
                            </tr>
                            <tr>
                                <td>已经沟通一次状态</td>
                                <td><%= custcountInfo.commedOne %></td>
                                <td>已经沟通二次状态</td>
                                <td><%= custcountInfo.commedTwo %></td>
                            </tr>
                            <tr>
                                <td>已经沟通三次状态</td>
                                <td><%= custcountInfo.commedthree %></td>
                                <td>已经沟通四次及以上状态</td>
                                <td><%= custcountInfo.commeFour %></td>
                            </tr>

                            </tbody>
                        </table>

                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>


        </div>

    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

        $(".fg-date-time-picker").flatpickr(data_time_picker.data_time_picker);

        pageSetUp();



    })

</script>


<%- include('../layouts/foot'); %>