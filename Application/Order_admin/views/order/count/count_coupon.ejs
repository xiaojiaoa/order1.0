<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>


<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>优惠券数据统计</li>
        </ol>
        <!-- end breadcrumb -->



    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">

        <div class="row-url">
            <a class="title-url" href="/countCustomer">客户跟进统计</a>
            <a class="title-url" href="/countDeal">成交情况统计</a>
            <a class="title-url active" href="/couponCount">优惠券数据统计</a>
        </div>

        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12 dwy-show-content">
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get" id="search-customer">

                            <div class="col-xs-12">
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">优惠券类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control validate[required]" name="couponType">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                couponType.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.couponType == element.id)?"selected":"" %>><%= element.name %></option>
                                                <%  }) %>
                                            </select>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">优惠券状态:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="couponStatus">
                                                <option value="">- 请选择 -</option>
                                                <option value="0" <%= (DWYRequest.query.couponStatus == 0 )?"selected":"" %>>未使用</option>
                                                <option value="1" <%= (DWYRequest.query.couponStatus == 1 )?"selected":"" %>>已关联订单</option>
                                                <option value="2" <%= (DWYRequest.query.couponStatus == 2 )?"selected":"" %>>已使用</option>
                                            </select>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-5">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">时间段:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text"  value="<%= DWYRequest.query.startCouponDate %>"
                                                   name="startCouponDate">
                                        </div>
                                        <label class="control-label " style="float: left"> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text"  value="<%= DWYRequest.query.endCouponDate %>"
                                                   name="endCouponDate">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-1">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>

                            </div>



                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- well -->
        <!-- end well -->


        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-information">
                            <tbody>
                            <tr>
                                <td width="12%">优惠券总计</td>
                                <td width="21%"><%= couponInfo.amount %></td>
                                <td width="12%">已使用优惠券总计</td>
                                <td width="21%"><%= couponInfo.usedAmount %></td>
                            </tr>
                            <tr>
                                <td>优惠券金额总计</td>
                                <td><%= couponInfo.money %></td>
                                <td>未使用优惠券总计</td>
                                <td><%= couponInfo.unusedAmount %></td>
                            </tr>
                            <tr>
                                <td>已关联优惠券总计</td>
                                <td><%= couponInfo.associatedAmount %></td>
                                <td>已关联优惠券金额总计</td>
                                <td><%= couponInfo.associatedMoney %></td>
                            </tr>
                            <tr>
                                <td>优惠券已用金额总计</td>
                                <td colspan="3"><%= couponInfo.usedMoney %></td>
                            </tr>
                            </tbody>
                        </table>

                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>


        </div>

    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

        $(".fg-date-picker").flatpickr(data_time_picker.data_picker);

        pageSetUp();



    })

</script>


<%- include('../layouts/foot'); %>