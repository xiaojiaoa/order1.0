<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>


<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>成交情况统计</li>
        </ol>
        <!-- end breadcrumb -->



    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">

        <div class="row-url">
            <a class="title-url" href="/countCustomer">客户跟进统计</a>
            <a class="title-url active" href="/countDeal">成交情况统计</a>
        </div>

        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12 ">
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get" id="search-customer">

                            <div class="col-xs-12">
                                <div class="col-xs-2">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">家居顾问:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control validate[required]" name="conid">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                if(DWY_Helper.isCanLoop(homeAdviserInfo)){
                                                homeAdviserInfo.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.conid == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% })
                                                }  %>

                                            </select>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-2">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">设计师:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control validate[required]" name="gid">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                designerInfo.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.gid == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">时间段:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text"  value="<%= DWYRequest.query.startDate %>"
                                                   name="startDate">
                                        </div>
                                        <label class="control-label " style="float: left"> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text"  value="<%= DWYRequest.query.endDate %>"
                                                   name="endDate">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-2 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>

                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- well -->
        <!-- end well -->


        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-information">
                            <tbody>
                            <tr>
                                <td width="12%">期间量尺数</td>
                                <td width="21%"><%= dealInfo.meased %></td>
                                <td width="12%">成交客户数</td>
                                <td width="21%"><%= dealInfo.conStcode %></td>
                            </tr>
                            <tr>
                                <td>成交率</td>
                                <td><%= dealInfo.percent %> %</td>
                                <td>平均成交时间</td>
                                <td><%= dealInfo.dealTime %> 天</td>
                            </tr>
                            <tr>
                                <td>单客户平均成交金额</td>
                                <td colspan="3"><%= dealInfo.ordersum %> 元</td>

                            </tr>
                            </tbody>
                        </table>

                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>


        </div>

    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

        $(".fg-date-picker").flatpickr(data_time_picker.data_picker);

        pageSetUp();



    })

</script>


<%- include('../layouts/foot'); %>