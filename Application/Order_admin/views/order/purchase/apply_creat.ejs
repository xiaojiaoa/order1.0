        <form class="form-horizontal" method="post" id="creat-supplier" action="/purchase/applyCreat" >
            <div class="col-xs-12">
                <legend>
                </legend>
            </div>

            <div class="col-xs-12">
                <div class="orderItemLayerTit">
                </div>
                <div class="orderItemLayerTable">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>
                                <label class="checkbox-inline">
                                    <input type="checkbox" class="checkbox"
                                           id="checkAll"  />
                                    <span>序号</span>
                                </label>
                            </th>
                            <th>物料编号</th>
                            <th>物料名称</th>
                            <th>分类名称</th>
                            <th>真实库存</th>
                            <th>预警数量</th>
                            <th>可用库存</th>
                            <th>单价</th>
                        </tr>
                        </thead>
                        <tbody>

                        <%
                        if(DWY_Helper.isCanLoop(supMaterialList.result)){
                        supMaterialList.result.forEach(function (element, index) { %>
                        <tr class="len">
                            <td>
                                <label class="checkbox-inline">
                                    <input type="checkbox" class="checkbox"
                                           name="roles" value="<%= element.id %>">
                                    <span><%= index+1 %></span>
                                </label>
                            </td>
                            <td><a href="/materialManage/detail/<%= element.id %>"><%= element.id %></a></td>
                            <td><%= element.name %></td>
                            <td><%= element.catName %></td>
                            <td><%= element.stock %></td>
                            <td><%= element.warning %></td>
                            <td><%= element.usable %></td>
                            <td><%= element.price %></td>
                        <%  }) }else{%>
