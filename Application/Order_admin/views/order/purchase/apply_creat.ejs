<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>新建请购单</li>
        </ol>
        <!-- end breadcrumb -->
    </div>
    <!-- END RIBBON -->
    <!-- MAIN CONTENT -->
    <div id="content">
        <!-- start well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>客户搜索</legend>-->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">
                            <div class="col-xs-12">
                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">物料编号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入物料编号" type="text" value="<%= DWYRequest.query.materNo %>" name="materNo" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">物料名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入物料名称" type="text" value="<%= DWYRequest.query.name %>" name="name">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">物料分类:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="stairCatId">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                if(suppliersMaterialList && DWY_Helper.isCanLoop(suppliersMaterialList)){
                                                suppliersMaterialList.forEach(function (element, index) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.stairCatId == element.id)?"selected":"" %>>
                                                    <%= element.name %>
                                                </option>
                                                <%  })}%>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        搜索
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->
        <form class="form-horizontal" method="post" id="creat-supplier" action="/purchase/applyCreat" >
            <div class="col-xs-12">
                <legend>
                    新建请购单
                </legend>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-3">
                        <a class="btn btn-primary margin-bottom-10" id="createApplyOrder">选择物料</a>
                    </div>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="orderItemLayerTit">
                </div>
                <div class="orderItemLayerTable">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>
                                <label class="checkbox-inline">
                                    <input type="checkbox" class="checkbox"
                                           id="checkAll"  />
                                    <span>序号</span>
                                </label>
                            </th>
                            <th>物料编号</th>
                            <th>物料名称</th>
                            <th>分类名称</th>
                        </tr>
                        </thead>
                        <tbody>

                        <%
                        if(supMaterialList.result && DWY_Helper.isCanLoop(supMaterialList.result)){
                        supMaterialList.result.forEach(function (element, index) { %>
                        <tr>
                            <td>
                                <label class="checkbox-inline">
                                    <input type="checkbox" class="checkbox"
                                           name="roles" value="<%= element.id %>">
                                    <span><%= index+1 %></span>
                                </label>
                            </td>
                            <td><a href="/materialManage/detail/<%= element.id %>"><%= element.id %></a></td>
                            <td><%= element.name %></td>
                            <td><%= element.catName %></td>
                        <%  }) }else{%>
                        <td colspan="4" class="text-align-center">暂无结果</td>
                        <%}%>
                        </tr>
                        <input type="hidden" class="" id="checkedValue">
                        </tbody>

                      </table>
                </div>
            </div>
            <div class="dwy-clear"></div>
        </form>
    </div>
</div>

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>
<script type="text/javascript">
    $(document).ready(function () {
        pageSetUp();
        $("#creat-supplier").validationEngine();

        var checkedValue = $('#checkedValue');
        $("#checkAll").change(function () {
            if($(this).is(":checked")){
                $("input[name='roles']").prop('checked',true);
                $("input[name='roles']:checked").each(function (i) {
                    checkedValue.addClass(this.value+',')
                });
            }else{
                $(":checkbox").prop('checked',false);
                checkedValue.removeClass()
            }
        })
        $("input[name='roles']").change(function () {
            if($(this).is(':checked')){
                checkedValue.addClass(this.value+',')
            }else{
                checkedValue.removeClass(this.value+',')
            }
        });
        $("#createApplyOrder").click(function(){
            if(checkedValue.attr('class')==null||checkedValue.attr('class')=='')
            {
                layer.alert('请选择！', {icon: 3})
                return false;
            }
            var tid = checkedValue.attr('class').replace(/[ ]/g,"");
            tid = tid.substring(0,tid.length-1);
            layer.confirm("确认选择物料？", {title:'提示'},function(index){
                    $.ajax({
                        url: '/purchase/applyOrderMaterial/'+tid,
                        method: 'post',
                        success: function (data) {
                           location.href="/purchase/apply_createMaterial/"+tid;
                        },
                        error: function (response) {
                            layer.close(index)
                            var data = JSON.parse(response.responseText);
                            $.smallBox({
                                title: "操作失败",
                                content: data.msg,
                                color: "#C46A69",
                                iconSmall: "fa fa-times fa-2x fadeInRight animated",
                                timeout: 3000
                            });
                            setTimeout(function(){
                                window.location.reload();
                            },7000)
                        }
                    });
                },function(index){
                    layer.close(index)}
            )
        })
        $(".fg-date-picker").flatpickr(data_time_picker.data_picker); // jQuery
    })
</script>
<%- include('../layouts/foot'); %>

