<script type="text/javascript">
    $(document).ready(function () {
        pageSetUp();
          //从localStorage里获取列表数据
            function getListArr(key){
                return JSON.parse(localStorage.getItem(key));
            }
            //设置localStorage中的数据
            function setList(key,list){
                return localStorage.setItem(key,JSON.stringify(list));
            }

            //添加一个项目
            function addItem(item,prop,key){

                var listArr = getListArr(key) || [];

                var len = listArr.length;


                if(len != 0){
                    for (var i =0 ;i<len;i++){
                        if(item[prop] == listArr[i][prop]){
                            return ;
                        }
                    }
                }

                listArr.push(item);

                setList(key,listArr);
                updateCheckedList('.purApplyTr','LIST_DATA');
            }

            //删除一个项目
            function deletItem(item,prop,key){
                var listArr = getListArr(key);
                var len = listArr.length;
                if(len != 0){
                    for (var i =0 ;i<len;i++){
                        if(item[prop] == listArr[i][prop]){
                           listArr.splice(i,1);
                           setList(key,listArr);
                           updateCheckedList('.purApplyTr','LIST_DATA');
                           return;
                        }
                    }
                }
            }

            //刷新选中列表
            function updateCheckedList(parentEle,key) {

                var listArr = getListArr(key);

                var htmlStr = '';
                if (listArr instanceof Array && listArr.length != 0) {
                    var len = listArr.length;
                    for (var i = 0; i < len; i++) {
                        var itemHtml = ''
                            + '<tr class="topTr">'
                            + '<td>'
                            + '<label class="checkbox-inline">'
                            + '<input type="checkbox" class="checkbox" name="roles" value="' + listArr[i].id + '" checked>'
                            + '<span>' + (i+1) + '</span>'
                            + '</label>'
                            + '</td>'
                            + '<td><a href="/materialManage/detail/' + listArr[i].id + '">' + listArr[i].id + '</a></td>'
                            + '<td>' + listArr[i].id + '</td>'
                            + '<td>' + listArr[i].id + '</td>'
                            + '<td>' + listArr[i].id + '</td>'
                            + '<td>' + listArr[i].id + '</td>'
                            + '<td>' + listArr[i].id + '</td>'
                            + '<td>' + listArr[i].id + '</td>'
                            + '</tr>';
                        htmlStr += itemHtml;
                    }
                    $(parentEle).html(htmlStr);
                }
            }
             //删除所有项目
            function deleteAll(key){
                setList(key,"[]");
            }

            updateCheckedList('.purApplyTr','LIST_DATA');




            $(".orderItemLayerTable input[name='roles']").on("change",function () {
                if($(this).is(':checked')){
                    addItem({
                       id:$(this).val()
                    },'id','LIST_DATA')
                }else{
                    deletItem({
                        id:$(this).val()
                    },'id','LIST_DATA')
                }
            })

            $(".purApplyTr").on("change","input",function () {
                var id = $(this).val();
                deletItem({
                    id:id,
                }, 'id','LIST_DATA')



            })



        var checkedValue=$("#checkedValue");
        $("input[name='roles']").change(function () {
            if($(this).is(':checked')){
                checkedValue.addClass(this.value+',')
            }else{
                checkedValue.removeClass(this.value+',')
            }
        });
        $("#createApplyOrder").click(function(){
            var tid = checkedValue.attr('class').replace(/[ ]/g,"");
            tid = tid.substring(0,tid.length-1);
            layer.confirm("确认选择物料？", {title:'提示'},function(index){
                    $.ajax({
                        url: '/purchase/applyOrderMaterial/'+tid,
                        method: 'post',
                        success: function (data) {
                           location.href="/purchase/apply_createMaterial/"+tid;
                        },
                        error: function (response) {
                            layer.close(index)
                            var data = JSON.parse(response.responseText);
                            $.smallBox({
                                title: "操作失败",
                                content: data.msg,
                                color: "#C46A69",
                                iconSmall: "fa fa-times fa-2x fadeInRight animated",
                                timeout: 3000
                            });
                            setTimeout(function(){
                                window.location.reload();
                            },7000)
                        }
                    });
                },function(index){
                    layer.close(index)}
            )
        })




    })
</script>
