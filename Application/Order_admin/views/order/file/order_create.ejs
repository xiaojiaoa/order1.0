                            } else {
                                label.html('上传失败 <i class="fa fa-times">');
                            }
                        },
                        error: function () {
                            label.attr('disabled', false);
                            label.html('上传失败 <i class="fa fa-times">');
                        }
                    })

                }else{
                    layer.msg('订单号不匹配，请重新选择文件', {icon: 2, time: 2000});
                    return;
                }
            }
        })

