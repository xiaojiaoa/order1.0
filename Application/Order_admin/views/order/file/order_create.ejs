    function deleteFile(id) {
        layer.confirm('确认删除该文件?', {icon: 3, title: '提示'}, function (index) {
            $.ajax({
                url: '/file/order/doDelete/' + id,
                method: 'delete',
                success: function (data) {
                    successLayout.reload();
                },
                error: function (response) {
                    layer.close(index)
                    errorLayout.normal(response);

                }
            });
        }, function (index) {
            layer.close(index)
        })
    }

