<%- include('./information_model'); %>
<script type="text/javascript">

    $(document).ready(function () {
        pageSetUp();

        //表单初始验证
        $("#noticeInfo-form").validationEngine();

       //复选框全选、全不选功能
        checkFuc("#checkAll01","input[name=storeType]:checkbox");
        checkFuc("#checkAll02","input[name=addrType]:checkbox");
        checkFuc("#checkAll03","input[name=organizationType]:checkbox");

        //新建公告信息弹出框
        $(".create-noticeInfo").on({
            click: function () {
                $("input[name=subType]").val("create");
                layer.open({
                    title:"",
                    type: 1,
                    area: '800px',
                    content: $('#noticeInfo-form'),
                    cancel: function () {
                        //右上角关闭回调
                    },
                });
            }
        })
        // 获取发布范围的值
        function getCode() {
            var a=getList("#checkAll01","input[name=storeType]:checked");
            var b=getList("#checkAll02","input[name=addrType]:checked");
            var c=getList("#checkAll03","input[name=organizationType]:checked");
            var myArray=a.concat(b,c);
            $("input[name=noticeScopes]").val(JSON.stringify(myArray));
        }

        //修改公告信息弹出框
        $(".modify-noticeInfo ").on({
            click: function () {
                $("input[name=subType]").val("modify");
                //获取当前点击公告的信息
                var noticeId = $(this).attr('selfId');
                var title = $(this).attr('title');
                var typeId = $(this).attr('typeId');
                var content = $(this).attr('content');

                var noticeScopes=$(this).attr("noticeScopes");
                var data=eval(noticeScopes);
                setList(data);//设置checkbox的状态

                //将获取的信息写入表格中
                $('#noticeId').val(noticeId);
                $("#title").val(title);
                $("#typeId").val(typeId);
                $("#noticeContent").val(content);

                layer.open({
                    title:"",
                    type: 1,
                    area: '800px',
                    content: $('#noticeInfo-form'),
                    cancel: function () {
                        //右上角关闭回调
                    },
                });

            }
        })
        // 提交新建/修改公告信息
        $(".subBtn").on({
            click:function(){
                var  subType= $("input[name=subType]").val();
                getCode();
                    if (subType == "modify") {
                        $("#noticeInfo-form").attr("action", "/noticeInfo/doModify").submit();
                    } else {
                        $("#noticeInfo-form").attr("action", "/noticeInfo/doCreate").submit();
                    }
                }
        });
        //删除公告信息
        $(".delete-noticeInfo").on({
            click: function () {
                var id = $(this).attr('selfId');
                layer.confirm('确认删除?',{icon: 3, title:'提示'},
                    function(index){
                        $.ajax({
                            url: '/noticeInfo/doDelete/'+id,
                            method: 'put',
                            success: function (data) {
                                successLayout.reload();
                            },
                            error: function (response) {
                                layer.close(index)
                                errorLayout.normal(response);
                            }
                        });
                    },
                    function(index){layer.close(index)})
            }
        })

        //设置范围筛选
        scopeFunc();
    })

</script>


