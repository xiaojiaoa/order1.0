<%- include('./information_model'); %>
<script type="text/javascript">

    $(document).ready(function () {
        pageSetUp();
        var pageFunction = function () {
        }
        pageFunction();

        //表单初始验证
        $("#create-noticeInfo-form").validationEngine();
        $("#modify-noticeInfo-form").validationEngine();

       //复选框选择--新建公告
        checkFuc("#checkAll01","input[name=storeType]:checkbox");
        checkFuc("#checkAll02","input[name=addrType]:checkbox");
        checkFuc("#checkAll03","input[name=organizationType]:checkbox");
        //复选框选择--修改公告
        checkFuc("#checkAll04","input[name=storeTypeM]:checkbox");
        checkFuc("#checkAll05","input[name=addrTypeM]:checkbox");
        checkFuc("#checkAll06","input[name=organizationTypeM]:checkbox");
        //新建公告信息弹出框
        $(".create-noticeInfo").on({
            click: function () {
                layer.open({
                    title:"",
                    type: 1,
                    area: '800px',
                    content: $('#create-noticeInfo-form'),
                    cancel: function () {
                        //右上角关闭回调
                    },
                });
            }
        })
        //提交新建公告信息
        $('#doCreate').click(function () {
            var length=$("#create-noticeInfo-form input[type='checkbox']:checked").length;
            if(length>0){
                if($("#create-noticeInfo-form").validationEngine('validate')){
                    var title=$("#create-noticeInfo-form input[name=title]").val();
                    var typeId=$("#create-noticeInfo-form #typeId option:selected").val();
                    var content=$("#create-noticeInfo-form textarea[name=content]").val();

                    console.log(title);
                    console.log(typeId);
                    console.log(content);

                    var a=getList("#checkAll01","input[name=storeType]:checked");
                    var b=getList("#checkAll02","input[name=addrType]:checked");
                    var c=getList("#checkAll03","input[name=organizationType]:checked");
                    console.log(a);
                    console.log(b);
                    console.log(c);
                    var myArray=a.concat(b,c);
                    console.log(myArray);

                    var date={
                        title:title,
                        typeId:typeId,
                        content:content,
                        noticeScopes:myArray
                    };

                    layer.confirm("确认提交？", {title:'提示'},function(index){
                            console.log(date);
                            $.ajax({
                                url: '/noticeInfo/doCreate',
                                data:JSON.stringify(date),
                                method: 'post',
                                dataType: 'json',
                                contentType:"application/json",
                                success: function (data) {
                                    location.href="/noticeInfo";

                                },
                                error: function (response) {
                                    layer.close(index)
                                    var status = response.status;
                                    if(status == 200){
                                        var href='/noticeInfo';
                                        successLayout.hrefTo(href);
                                        return;
                                    }
                                    errorLayout.normal(response);

                                }
                            });
                        },function(index){
                            layer.close(index)}
                    )
                }
            }
            else{
                layer.alert('请至少选中一项复选框', {
                    icon: 1,
                });
            }

        })
        //修改公告信息弹出框
        $(".modify-noticeInfo ").on({
            click: function () {

                //获取当前点击公告的信息
                var noticeId = $(this).attr('selfId');
                var title = $(this).attr('title');
                var typeId = $(this).attr('typeId');
                var content = $(this).attr('content');

                var noticeScopes=$(this).attr("noticeScopes");
                var data=eval(noticeScopes);
                console.log(JSON.stringify(data));
                setList(data);//设置checkbox的状态

                //将获取的信息写入表格中
                $('#id').val(noticeId);
                $("#title").val(title);
                $("#modify-noticeInfo-form #typeId").val(typeId);
                $("#noticeContent").val(content);

                layer.open({
                    title:"",
                    type: 1,
                    area: '800px',
                    content: $('#modify-noticeInfo-form'),
                    cancel: function () {
                        //右上角关闭回调
                    },
                });

            }
        })

        //提交修改的公告信息
        $('#doModify').click(function () {
            var length=$("#modify-noticeInfo-form input[type='checkbox']:checked").length;
            if(length>0){
                if($("#modify-noticeInfo-form").validationEngine('validate')){
                    var title=$("#modify-noticeInfo-form input[name=title]").val();
                    var typeId=$("#modify-noticeInfo-form #typeId option:selected").val();
                    var content=$("#modify-noticeInfo-form textarea[name=content]").val();
                    var id=$("#modify-noticeInfo-form input[name=id]").val();

                    console.log(title);
                    console.log(typeId);
                    console.log(content);

                    var a=getList("#checkAll04","input[name=storeTypeM]:checked");
                    var b=getList("#checkAll05","input[name=addrTypeM]:checked");
                    var c=getList("#checkAll06","input[name=organizationTypeM]:checked");
                    console.log(a);
                    console.log(b);
                    console.log(c);
                    var myArray=a.concat(b,c);
                    console.log(myArray);

                    var date={
                        id:id,
                        title:title,
                        typeId:typeId,
                        content:content,
                        noticeScopes:myArray
                    };

                    layer.confirm("确认提交？", {title:'提示'},function(index){
                            console.log(date);
                           $.ajax({
                             url: '/noticeInfo/doModify',
                            data:JSON.stringify(date),
                              method: 'post',
                               dataType: 'json',
                                   contentType:"application/json",
                               success: function (data) {
                                 location.href="/noticeInfo";

                              },
                            error: function (response) {
                                 layer.close(index)
                                  var status = response.status;
                                 if(status == 200){
                                     var href='/noticeInfo';
                                    successLayout.hrefTo(href);
                                    return;
                                }
                                errorLayout.normal(response)
                              }});
                        },function(index){
                            layer.close(index)}
                    )
                }
            }
            else{
                layer.alert('请至少选中一项复选框', {
                    icon: 1,
                });
            }

        })
        //删除公告信息
        $(".delete-noticeInfo").on({
            click: function () {
                var id = $(this).attr('selfId');
                console.log(id);
                layer.confirm('确认删除?',{icon: 3, title:'提示'},
                    function(index){
                        $.ajax({
                            url: '/noticeInfo/doDelete/'+id,
                            method: 'put',
                            success: function (data) {
                                successLayout.reload();
                            },
                            error: function (response) {
                                layer.close(index)
                                errorLayout.normal(response);
                            }
                        });
                    },
                    function(index){layer.close(index)})
            }
        })

        //设置范围筛选
        scopeFunc();
    })

</script>


