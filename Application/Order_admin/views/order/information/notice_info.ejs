<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>公告管理</li>
        </ol>


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">


        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>客户搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get" id="">

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">公告类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="typeId" >
                                                <option value="">- 全部 -</option>
                                                <%  if(DWY_Helper.isCanLoop(noticeType)){noticeType.forEach(function(element,index){%>
                                                <option value="<%= element.id　%>" <%= (DWYRequest.query.typeId == element.id)?"selected":"" %>> <%= element.name%></option>
                                                <%})}%>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-5">
                                    <div class="form-group">

                                        <label class="col-xs-2 control-label">发布范围:</label>
                                        <div class="col-xs-4">
                                            <select class="form-control" name="sendType" id="sendType">
                                                <option value="">- 请选择 -</option>
                                                <%  if(DWY_Helper.isCanLoop(scopesList)){scopesList.forEach(function(element,index){%>
                                                <option value="<%= element.scopeId　%>" <%= (DWYRequest.query.sendType == element.scopeId)?"selected":"" %>> <%= element.name%></option>
                                                <%})}%>
                                            </select>
                                        </div>

                                        <div class="col-xs-4">
                                            <select class="form-control" name="sendValue"  id="sendValue">
                                                <option value="" >-请选择-</option>
                                                <option value="-1" <%= (DWYRequest.query.sendValue ==-1)?"selected":"" %>>-全部-</option>
                                                <% if(DWY_Helper.isCanLoop(scopesList)){
                                                    scopesList.forEach(function(element,index){
                                                        if(element.scopeId==DWYRequest.query.sendType){
                                                        element.values.forEach(function(element,index){%>
                                                <option value="<%= element.scopeId　%>" <%= (DWYRequest.query.sendValue == element.scopeId)?"selected":"" %>> <%= element.name%></option>
                                                <%})}
                                                    })}%>
                                            </select>
                                        </div>


                                    </div>
                                </div>
                                <div class="col-xs-2 text-center">
                                    <input type="hidden" name="pageSize" value="5"/>
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>

                                    <% if (DWY_Helper.hasPermission(Permission.notice.create.id, permission) ){ %>

                                    <a class="btn btn-primary create-noticeInfo" >
                                        新建公告
                                    </a>
                                    <% } %>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->
        <!--well-->
        <div class="well">
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-2"></div>
                    <div class="col-xs-8">
                        <% if(DWY_Helper.isCanLoop(noticeInfoList.result)){
                        noticeInfoList.result.forEach(function(element,index){%>
                        <dl class="dl-style01">
                            <dt>
                                <legend>
                                    <%= element.title%>
                                    <% if (DWY_Helper.hasPermission(Permission.notice.create.id, permission) ){ %>
                                    <a class="label label-danger delete-noticeInfo" selfId="<%= element.id%>">删除</a>
                                    <% } %>
                                    <% if (DWY_Helper.hasPermission(Permission.notice.update.id, permission) ){ %>
                                    <a class=" label label-primary modify-noticeInfo "
                                       selfId="<%= element.id%>"
                                       title="<%= element.title%>"
                                       typeId="<%= element.typeId%>"
                                       noticeScopes="<%= JSON.stringify(element.noticeScopes) %>"
                                       content="<%= element.content%>">修改</a>
                                    <% } %>
                                </legend>
                            </dt>
                            <dd class="dl-title">
                                <span>发表人<i></i><%= element.empName%></span>
                                <span>日期<i></i><%= DWY_Helper.getLocalDateYMD(element.addTime)%></span>
                                <span>公告类型<i></i><%= element.typeName%></span></dd>
                            <dd class="dl-content">
                                <div class="margin-bottom-10">
                                    <%= element.content%>
                                </div>
                                <div class="margin-top-10">
                                    文件列表：
                                    <% if(DWY_Helper.isCanLoop(element)){
                                    element.forEach(function (element, index) { %>
                                    <a href="<%= DWY_GLOBAL.Static %>/download?originalFileName=<%= element.name%>&url=<%= element.path %>"><%= element.name%></a>
                               <%})}%>
                                </div>
                            </dd>
                        </dl>
                        <%})} else{%>
                        <dl class="text-align-center">暂无数据</dl>
                        <%}%>
                        <%- pagination %>
                    </div>
                    <div class="col-xs-2"></div>
                </div>
            </div>
        </div>
        <!--end well-->
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->
<input type="hidden" name="scopesList" value="<%= JSON.stringify(scopesList)%>" id="scopesList"/>
