<%- include('./information_model'); %>
<script type="text/javascript">

    $(document).ready(function () {
        pageSetUp();

        //表单初始验证
        $("#noticeInfo-form").validationEngine();

       //复选框全选、全不选功能
        checkFuc("#checkAll01","input[name=storeType]:checkbox");
        checkFuc("#checkAll02","input[name=addrType]:checkbox");
        checkFuc("#checkAll03","input[name=organizationType]:checkbox");

        //新建公告信息弹出框
        $(".create-noticeInfo").on({
            click: function () {
                $("input[name=subType]").val("create");
                layer.open({
                    title:"",
                    type: 1,
                    area: '800px',
                    content: $('#noticeInfo-form'),
                    cancel: function () {
                        //右上角关闭回调
                    },
                });
            }
        })
        // 获取发布范围的值
        function getCode() {
            var a=getList("#checkAll01","input[name=storeType]:checked");
            var b=getList("#checkAll02","input[name=addrType]:checked");
            var c=getList("#checkAll03","input[name=organizationType]:checked");
            var myArray=a.concat(b,c);
            $("input[name=noticeScopes]").val(JSON.stringify(myArray));
        }

        //修改公告信息弹出框
        $(".modify-noticeInfo ").on({
            click: function () {
                $("input[name=subType]").val("modify");
                //获取当前点击公告的信息
                var noticeId = $(this).attr('selfId');
                var title = $(this).attr('title');
                var typeId = $(this).attr('typeId');
                var content = $(this).attr('content');

                var noticeScopes=$(this).attr("noticeScopes");
                var data=eval(noticeScopes);
                setList(data);//设置checkbox的状态

                //将获取的信息写入表格中
                $('#noticeId').val(noticeId);
                $("#title").val(title);
                $("#typeId").val(typeId);
                $("#noticeContent").val(content);

                layer.open({
                    title:"",
                    type: 1,
                    area: '800px',
                    content: $('#noticeInfo-form'),
                    cancel: function () {
                        //右上角关闭回调
                    },
                });

            }
        })
        // 提交新建/修改公告信息
        $(".subBtn").on({
            click:function(e){
                var  subType= $("input[name=subType]").val();
                getCode();
                var length=$("#noticeInfo-form input[type='checkbox']:checked").length;
                if(length>0) {
                    if (subType == "modify") {
                        $("#noticeInfo-form").attr("action", "/noticeInfo/doModify").submit();
                    } else {
                        $("#noticeInfo-form").attr("action", "/noticeInfo/doCreate").submit();
                    }
                }
                else{
                    e = e || window.event;
                    e.preventDefault();
                    layer.alert('请至少选中一项发布范围', {
                        icon: 1,
                    });
                }
            }
        });
        //删除公告信息
        $(".delete-noticeInfo").on({
            click: function () {
                var id = $(this).attr('selfId');
                layer.confirm('确认删除?',{icon: 3, title:'提示'},
                    function(index){
                        $.ajax({
                            url: '/noticeInfo/doDelete/'+id,
                            method: 'put',
                            success: function (data) {
                                successLayout.reload();
                            },
                            error: function (response) {
                                layer.close(index)
                                errorLayout.normal(response);
                            }
                        });
                    },
                    function(index){layer.close(index)})
            }
        })

        //设置范围筛选
        scopeFunc();


        // 上传文件
        var dataShares=[];
        var num=0;
        var addFileSet=$("#addFileSet");
        $("#dwy_file_upload").on(
        {
            change: function (e) {
                var _this = $(this);
                var congig = {
                    'file_name': _this.prop('files')[0],
                }
                uploadFuc.uploadSingleFile('/template/upload/single/share', congig, function (data) {

                    var aaa={};
                    aaa.name=data.data.name;
                    aaa.path=data.data.url;
                    dataShares.push(aaa);

                    console.log("你大爷我",JSON.stringify(dataShares));
                    if(num>0){
                        var html = '<div class="margin-bottom-10" id="fileSet'+num+'">'+
                            '<div class="col-xs-10">'+
                            '<input class="form-control margin-bottom-10" readonly value="" name="fileName">'+
                            '</div>'+
                            '<a class="deleteInco" data-code="'+num+'"><i class="fa fa-trash-o"></i></a><div class="dwy-clear"></div>'+
                            '</div>';
                        addFileSet.append(html);
                    }
                    $("input[name=dataShares]").val(JSON.stringify(dataShares));
                    $("input[name=fileName]").eq(num).val(data.data.name);
                    num++;
                });
            },
        }
        );

        $("#addFileSet").on("click",".deleteInco",function(){
            var index = $(this).attr('data-code');
            dataShares[index] = '';
            $('#fileSet'+index).remove();
            var areaArry = dataShares.filter(function (item, index) {
                return item != '';
            })
            $("input[name=dataShares]").val(JSON.stringify(areaArry));
        });
    })

</script>


