<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>公告管理</li>
        </ol>


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">


        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>客户搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get" id="">

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">公告类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="typeId" >
                                                <option value="">- 全部 -</option>
                                                <%  if(DWY_Helper.isCanLoop(noticeType)){noticeType.forEach(function(element,index){%>
                                                <option value="<%= element.id　%>" <%= (DWYRequest.query.typeId == element.id)?"selected":"" %>> <%= element.name%></option>
                                                <%})}%>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-5">
                                    <div class="form-group">

                                        <label class="col-xs-2 control-label">发布范围:</label>
                                        <div class="col-xs-4">
                                            <select class="form-control" name="sendType" id="sendType">
                                                <option value="">- 请选择 -</option>
                                                <%  if(DWY_Helper.isCanLoop(scopesList)){scopesList.forEach(function(element,index){%>
                                                <option value="<%= element.scopeId　%>" <%= (DWYRequest.query.sendType == element.scopeId)?"selected":"" %>> <%= element.name%></option>
                                                <%})}%>
                                            </select>
                                        </div>

                                        <div class="col-xs-4">
                                            <select class="form-control" name="sendValue"  id="sendValue">
                                                <option value="" >-请选择-</option>
                                                <option value="-1" <%= (DWYRequest.query.sendValue ==-1)?"selected":"" %>>-全部-</option>
                                                <% if(DWY_Helper.isCanLoop(scopesList)){
                                                    scopesList.forEach(function(element,index){
                                                        if(element.scopeId==DWYRequest.query.sendType){
                                                        element.values.forEach(function(element,index){%>
                                                <option value="<%= element.scopeId　%>" <%= (DWYRequest.query.sendValue == element.scopeId)?"selected":"" %>> <%= element.name%></option>
                                                <%})}
                                                    })}%>
                                            </select>
                                        </div>


                                    </div>
                                </div>
                                <div class="col-xs-2 text-center">
                                    <input type="hidden" name="pageSize" value="5"/>
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>

                                    <% if (DWY_Helper.hasPermission(Permission.notice.create.id, permission) ){ %>

                                    <a class="btn btn-primary create-noticeInfo" >
                                        新建公告
                                    </a>
                                    <% } %>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->


        <div class="well">
            <div class="row">
                <div class="col-xs-12">
                    <h6>公告列表</h6>
                    <hr class="simple">
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>标题</th>
                                <th>发表人</th>
                                <th>日期</th>
                                <th>公告类型</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(DWY_Helper.isCanLoop(noticeInfoList.result)){
                            noticeInfoList.result.forEach(function (element, index) { %>
                            <tr>
                                <td><%= index+1%></td>
                                <td><a href="/noticeInfo/detail/<%= element.id%>"><%= element.title %></a></td>
                                <td><%= element.empName %></td>
                                <td><%= DWY_Helper.getLocalDateYMD(element.addTime)%></td>
                                <td><%= element.typeName %></td>
                            </tr>
                            <%  })
                            }else{ %>
                            <td colspan="20" class="text-align-center">暂无结果</td>
                            <%  }%>
                            </tbody>
                        </table>
                        <%- pagination %>
                    </div>

                </div>
            </div>
            <!-- end row -->
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->
<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>
<!--公告信息模板-->
<form class="form-horizontal  layer-template" method="post" id="noticeInfo-form" action="" name="noticeInfoForm">

    <div class="row" style="padding: 30px 40px 0 0;">

        <div class="col-xs-12">
            <div class="col-xs-6">
                <div class="form-group">
                    <label class="col-xs-4 control-label" id="whiceName"><span class="requird"></span> 标题:</label>
                    <div class="col-xs-8">
                        <input class="form-control validate[required]"
                               value="" name="title" id="title">
                    </div>
                </div>
            </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label class="col-xs-4 control-label"><span class="requird"></span>公告类型:</label>
                        <div class="col-xs-8">
                            <select class="form-control validate[required]" name="typeId" id="typeId" >
                                <option value="">- 请选择 -</option>
                                <% noticeType.forEach(function(element,index){%>
                                <option value="<%= element.id%>"> <%= element.name%></option>
                                <%})%>
                            </select>
                        </div>
                    </div>
            </div>

        </div>
        <div class="col-xs-12">
            <div class="col-xs-12">
            <label class="col-xs-2 control-label"><span class="requird"></span> 发布范围:</label>
            <div class="col-xs-10">
                <div class="form-group well margin-bottom-20 my-label01">
                            <div class="col-xs-12">
                                <label class="col-xs-2 control-label text-align-left">门店类型:</label>
                                <div class="col-xs-9">
                                    <label class="checkbox-inline">
                                        <input type="checkbox" class="checkbox" id="checkAll01">
                                        <span>全部</span>
                                    </label>
                                    <%
                                    storeType.forEach(function (element, index) { %>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" class="checkbox " name="storeType" value="<%= element.id %>">
                                        <span><%= element.name%></span>
                                    </label>
                                    <% })%>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <label class="col-xs-2 control-label text-align-left">位置类型:</label>
                                <div class="col-xs-9">
                                    <label class="checkbox-inline">
                                        <input type="checkbox" class="checkbox" id="checkAll02">
                                        <span>全部</span>
                                    </label>
                                    <%
                                    storeAttrType.forEach(function (element, index) { %>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" class="checkbox" name="addrType" value="<%= element.id %>">
                                        <span><%= element.name%></span>
                                    </label>
                                    <% })%>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <label class="col-xs-2 control-label text-align-left">机构类型:</label>
                                <div class="col-xs-9">
                                    <label class="checkbox-inline">
                                        <input type="checkbox" class="checkbox"  id="checkAll03" name="organizationType">
                                        <span>全部</span>
                                    </label>
                                </div>
                            </div>
                </div>
            </div>
            </div>
        </div>

        <div class="col-xs-12">
            <div class="col-xs-12">
                <div class="form-group">
                    <label class="col-xs-2 control-label"><span class="requird"></span> 内容:</label>
                    <div class="col-xs-10">
                        <textarea rows="10" cols="30" class="form-control validate[required,maxSize[200]]" name="content" id="noticeContent">
                        </textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12">

            <!--输入字段-->
            <div class="col-xs-12">
                <div class="form-group">
                    <label class="col-xs-2 control-label">文件集合:</label>
                    <div class="col-xs-8" id="addFileSet">
                        <div class="margin-bottom-10" id="fileSet0">
                            <div class="col-xs-10">
                                <input class="form-control margin-bottom-10" readonly="" value=""  name="fileName">
                            </div>
                            <a class="deleteInco" data-code="0"><i class="fa fa-trash-o"></i></a>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-xs-12 margin-top-10">
                <div class="col-xs-2"></div>
                <div class="col-xs-8 text-left">
                    <label for="dwy_file_upload" class="btn btn-primary" id="label-upload-file">
                        点击上传 <i class="fa fa-upload"></i> </label>
                    <input type="file" name="file_name" id="dwy_file_upload" style="display: none;">
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-xs-12">
            <hr class="simple">
            <div class="col-xs-12 text-center">
                <input type="hidden" value="" name="id" id="noticeId"/>
                <input type="hidden" value="" name="noticeScopes">
                <input type="hidden" value="" name="dataShares"/>
                <button class="btn btn-primary  margin-right-5 subBtn" >
                    <i class="fa fa-save"></i>
                    提交
                </button>
            </div>
        </div>
    </div>
    <div class="dwy-clear"></div>
</form>
<!--END 公告信息模板-->


<%- include('./information_model'); %>
<%- include('./notice_model'); %>
<script type="text/javascript">

    $(document).ready(function () {
        pageSetUp();

        //设置范围筛选
        scopeFunc();

        //表单初始验证
        $("#noticeInfo-form").validationEngine();

       //复选框全选、全不选功能
        checkFuc("#checkAll01","input[name=storeType]:checkbox");
        checkFuc("#checkAll02","input[name=addrType]:checkbox");
        checkFuc("#checkAll03","input[name=organizationType]:checkbox");

        //新建公告信息弹出框
        $(".create-noticeInfo").on({
            click: function () {
                layer.open({
                    title:"",
                    type: 1,
                    area: '800px',
                    content: $('#noticeInfo-form'),
                    cancel: function () {
                        //右上角关闭回调
                    },
                });
            }
        })


        // 提交新建公告信息
        $(".subBtn").on({
            click:function(e){
                var  subType= $("input[name=subType]").val();
                getCode();
                var length=$("#noticeInfo-form input[type='checkbox']:checked").length;
                if(length>0) {
                    $("#noticeInfo-form").attr("action", "/noticeInfo/doCreate").submit();
                }
                else{
                    e = e || window.event;
                    e.preventDefault();
                    layer.alert('请至少选中一项发布范围', {
                        icon: 1,
                    });
                }
            }
        });



    })

</script>


