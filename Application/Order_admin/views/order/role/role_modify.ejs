<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a class="back-url" href="/roles/<%= bid %>/<%= scope %>"> 角色信息</a></li>
            <li>修改角色信息</li>
            <li><a class="back-url" href="javascript:history.go(-1)"> <i class="fa fa-chevron-left"></i>返回</a></li>
        </ol>
        <!-- end breadcrumb -->
    </div>
    <!-- END RIBBON -->

    <!-- MAIN CONTENT -->
    <div id="content">

        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <legend>修改角色信息</legend>

                    <!-- row -->
                    <div class="row">
                        <form class="form-horizontal" method="post" action="/roles/doModify" id="create-store">

                            <div class="col-xs-12">
                                <!--输入字段-->
                                <div class="col-xs-8">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label"><span class="requird"></span> 角色:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control validate[required]"
                                                   value="<%= rolesInfo.name %>"
                                                   name="name">
                                            <input type="hidden" name="cid" value="<%= stcode %>">
                                            <input type="hidden" name="bid" value="<%= rolesInfo.bid %>">
                                            <input type="hidden" name="scope" value="<%= scope %>">
                                            <input type="hidden" name="bidUrl" value="<%= bid %>">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-xs-12">

                                <div class="col-xs-8">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label "><span class="requird"></span> 权限:
                                        </label>
                                        <div class="col-xs-8">
                                            <div class="table-responsive">
                                                <table class="table table-bordered table-striped">
                                                    <thead>
                                                    <tr>
                                                        <th>
                                                            <label>
                                                                <input type="checkbox" class="checkbox"
                                                                       id="checkAll" data-prompt-position="bottomLeft:20,5">
                                                                <span>全选</span>
                                                            </label>
                                                        </th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    <%
                                                    var permissionStr = '';
                                                    rolesInfo.permissionList.forEach(function (element) {
                                                        permissionStr += element.id+','
                                                    })
                                                    permissionStr = permissionStr.substring(0,permissionStr.length-1);

                                                    permissionsAllList.forEach(function (element, index) {%>
                                                    <tr class="level-0">
                                                        <td>
                                                            <label>
                                                                <input type="checkbox" class="checkbox validate[minCheckbox[1]]"
                                                                       name="permission" value="<%= element.id%>"
                                                                        <%= DWY_Helper.checkboxStatusStr(permissionStr, element.id) %>
                                                                >
                                                                <span><%= element.name%></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <% if(element.subPermission){
                                                        var parentId = element.id;
                                                    element.subPermission.forEach(function (element) { %>
                                                    <tr class="level-1">
                                                        <td class="level-1-title">
                                                            <label>
                                                                <input type="checkbox" class="checkbox validate[minCheckbox[1]]"
                                                                       name="permission" value="<%= element.id%>" parentId="<%= parentId %>"
                                                                        <%= DWY_Helper.checkboxStatusStr(permissionStr, element.id) %>
                                                                >
                                                                <span><%= element.name%></span>
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <%   })
                                                    }
                                                    }) %>
                                                    </tbody>
                                                </table>
                                            </div>


                                        </div>

                                    </div>
                                </div>

                            </div>

                            <div class="col-xs-8">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">

                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-save"></i>
                                        确认修改
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->

                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->


    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

//        pageSetUp();

        $("#create-store").validationEngine();

      $("#checkAll").change(function () {
        if($(this).is(":checked")){
          $(":checkbox").prop('checked',true);

        }else{
          $(":checkbox").prop('checked',false);
        }
      })

      $(':checkbox').change(function () {
        var parentId = $(this).attr('parentId');
        if(parentId){
          $("input[value="+parentId+"]").prop('checked',true);
        }else{
          var value = $(this).val();
          if($(this).is(":checked")){
            $("input[parentId="+value+"]").prop('checked',true);

          }else{
            $("input[parentId="+value+"]").prop('checked',false);
          }
        }

      })

    })

</script>


<%- include('../layouts/foot'); %>