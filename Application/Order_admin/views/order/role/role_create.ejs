<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <% if(typeM=='stores'){%>
            <li><a class="back-url" href="/storesManage">门店管理</a></li>
            <%}else{%>
            <li><a class="back-url" href="/agency">机构管理</a></li>
            <%}%>
            <li><a class="back-url" href="/roles/<%= bid %>/<%= scope %>"> 角色信息</a></li>
            <li><%= (type == 'sys') ? '新建角色' : '新建自定义角色' %></li>
            <li><a class="back-url" href="javascript:history.go(-1)"> <i class="fa fa-chevron-left"></i>返回</a></li>
        </ol>
        <!-- end breadcrumb -->
    </div>
    <!-- END RIBBON -->

    <!-- MAIN CONTENT -->
    <div id="content">

        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <legend><%= (type == 'sys') ? '新建角色' : '新建自定义角色' %></legend>

                    <form class="form-horizontal" method="post" action="/roles/doCreate" id="create-store">

                        <div class="col-xs-12">
                            <!--输入字段-->
                            <div class="col-xs-8">
                                <div class="form-group">
                                    <label class="col-xs-2 control-label"><span class="requird"></span> 角色:</label>
                                    <div class="col-xs-4">
                                        <input class="form-control validate[required]"
                                               value="<%= DWY_last_request_param.name %>"
                                               name="name">
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-xs-12">

                            <div class="col-xs-8">
                                <div class="form-group">
                                    <label class="col-xs-2 control-label "><span class="requird"></span> 权限:
                                    </label>
                                    <div class="col-xs-10">
                                        <div class="table-responsive">
                                            <table class="table table-bordered table-scroll">
                                                <thead>
                                                <tr>
                                                    <th>
                                                        <label>
                                                            <input type="checkbox" class="checkbox"
                                                                   id="checkAll" data-prompt-position="bottomLeft:20,5">
                                                            <span>全选</span>
                                                        </label>
                                                    </th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                <% permissionsList.forEach(function (element, index) {%>
                                                <tr class="level-0">
                                                    <td width="100%">
                                                        <label>
                                                            <input type="checkbox" class="checkbox validate[minCheckbox[1]]"
                                                                   name="permission" value="<%= element.id%>"
                                                                    <% if(element.id == 53 ||element.id == 58 ||element.id == 54 ||element.id == 134 ){ %>checked <% } %> >
                                                            <span><%= element.name%></span>
                                                        </label>
                                                    </td>
                                                </tr>
                                                <% if(element.subPermission){
                                                    var parentId = element.id;
                                                element.subPermission.forEach(function (element) { %>
                                                <tr class="level-1">
                                                    <td class="level-1-title">
                                                        <label>
                                                            <input type="checkbox" class="checkbox validate[minCheckbox[1]]"
                                                                   name="permission" value="<%= element.id%>" parentId="<%= parentId %>"
                                                                   <% if(element.id == 157 ||element.id == 80 ||element.id == 82 ){ %>checked <% } %>
                                                            >
                                                            <span><%= element.name%></span>
                                                        </label>
                                                    </td>
                                                </tr>
                                                <%   })
                                                }
                                                }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" name="bid" value="<%= (type == 'sys') ? '':bid %>">
                        <input type="hidden" name="scope" value="<%= scope %>">
                        <input type="hidden" name="bidUrl" value="<%= bid %>">

                        <div class="col-xs-8">
                            <hr class="simple">
                            <div class="col-xs-12 text-center">

                                <button class="btn btn-primary " type="submit">
                                    <i class="fa fa-save"></i>
                                    确认添加
                                </button>
                            </div>
                        </div>

                    </form>

                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->


    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

        $("#create-store").validationEngine();

      $("#checkAll").change(function () {
        if($(this).is(":checked")){
          $(":checkbox").prop('checked',true);

        }else{
          $(":checkbox").prop('checked',false);
        }
      })
      
      $(':checkbox').change(function () {
        var parentId = $(this).attr('parentId');
        if(parentId){
          $("input[value="+parentId+"]").prop('checked',true);
        }else{
          var value = $(this).val();
          if($(this).is(":checked")){
            $("input[parentId="+value+"]").prop('checked',true);

          }else{
            $("input[parentId="+value+"]").prop('checked',false);
          }
        }
        
      })
    })

</script>


<%- include('../layouts/foot'); %>