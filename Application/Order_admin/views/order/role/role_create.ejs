<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><%= (type == 'sys') ? '新建角色' : '新建自定义角色' %></li>
        </ol>
        <!-- end breadcrumb -->
    </div>
    <!-- END RIBBON -->

    <!-- MAIN CONTENT -->
    <div id="content">

        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <legend><%= (type == 'sys') ? '新建角色' : '新建自定义角色' %></legend>

                    <!-- row -->
                    <div class="row">
                        <form class="form-horizontal" method="post" action="/roles/doCreate" id="create-store">

                            <div class="col-xs-12">
                                <!--输入字段-->
                                <div class="col-xs-8">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label"><span class="requird"></span> 角色:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control validate[required]"
                                                   value="<%= DWY_last_request_param.name %>"
                                                   name="name">
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-xs-12">

                                <div class="col-xs-8">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label "><span class="requird"></span> 权限:
                                        </label>
                                        <div class="col-xs-8">
                                            <% permissionsList.forEach(function (element) { %>
                                            <label class="checkbox-inline to-block no-margin">
                                                <input type="checkbox" class="checkbox validate[minCheckbox[1]]"
                                                       name="permission" value="<%= element.id%>">
                                                <span><%= element.name%></span>
                                            </label>
                                            <%  }) %>


                                        </div>

                                    </div>
                                </div>

                            </div>

                            <input type="hidden" name="bid" value="<%= (type == 'sys') ? '':bid %>">
                            <input type="hidden" name="scope" value="<%= scope %>">
                            <input type="hidden" name="bidUrl" value="<%= bid %>">

                            <div class="col-xs-8">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">

                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-save"></i>
                                        确认添加
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->

                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->


    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

//        pageSetUp();

        $("#create-store").validationEngine();


    })

</script>


<%- include('../layouts/foot'); %>