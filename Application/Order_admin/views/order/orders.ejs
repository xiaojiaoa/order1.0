<%- include('layouts/head_top'); %>
<%- include('layouts/head_bottom'); %>
<%- include('layouts/header'); %>
<%- include('layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main" class="mainFlex">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>订单查询</li>
        </ol>

    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content" class="dis-flex">


        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>客户搜索</legend>-->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get" id="search-customer">

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">订单号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入订单号" type="text" value="<%= DWYRequest.query.tid %>" name="tid">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">客户手机:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[funcCall[custom_validate_fn.isMobile]]"
                                                   placeholder="请输入客户手机" type="text" value="<%= DWYRequest.query.mobile %>" name="mobile">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                    <label class="btn btn-default reset margin-left-20">
                                        重置
                                    </label>
                                    <label class="search margin-left-20">
                                        高级查询
                                        <i class="fa fa-chevron-up"></i>
                                    </label>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <% if(user.bid == 9999){  %>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">机构:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="factoryId">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                organizationsList.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.factoryId == element.id)?"selected":"" %>><%= element.name %></option>
                                                <%  }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <% } %>

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">门店:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="bid">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                storesList.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.bid == element.id)?"selected":"" %>><%= element.storeName %></option>
                                                <%  }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">预计发货时间:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text" value="<%= DWYRequest.query.startDeliveryDate%>"
                                                   name="startDeliveryDate">
                                        </div>
                                        <label class="from-to control-label "> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text" value="<%= DWYRequest.query.endDeliveryDate%>"
                                                   name="endDeliveryDate">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">订单品牌:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="brandId">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                brandInfo.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.brandId == element.id)?"selected":"" %> ><%= element.name %></option>
                                                <%  }) %>
                                            </select>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">订单状态:</label>
                                        <div class="col-xs-4">
                                            <select class="form-control" name="startCode">
                                                <option value="">- 起始 请选择 -</option>
                                                <%
                                                stcodeInfo.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.startCode == element.id)?"selected":"" %>><%= element.name %></option>
                                                <%  }) %>
                                            </select>
                                        </div>
                                        <label class="from-to control-label "> 至 </label>
                                        <div class="col-xs-4 ">
                                            <select class="form-control" name="endCode">
                                                <option value="">- 截止 请选择 -</option>
                                                <%
                                                stcodeInfo.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.endCode == element.id)?"selected":"" %>><%= element.name %></option>
                                                <%  }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">建单日期:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text" value="<%= DWYRequest.query.startDate%>"
                                                   name="startDate">
                                        </div>
                                        <label class="from-to control-label "> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text" value="<%= DWYRequest.query.endDate%>"
                                                   name="endDate">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well dis-flex">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>订单列表</h6>
                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row dis-flex">
                <div class="col-xs-12 dis-flex">
                    <div class="table-responsive dis-flex">
                        <table class="table table-bordered table-striped table-hover table-scroll dis-flex">
                            <thead>
                            <tr>
                                <th width="45">序号</th>
                                <th width="7%">客户姓名</th>
                                <th width="90">流水号</th>
                                <th width="13%">订单号</th>
                                <th width="6%">订单类型</th>
                                <th width="7%">品牌</th>
                                <th>产品信息</th>
                                <th width="7%">产品类型</th>
                                <th width="10%">空间类型</th>
                                <th width="12%">下单柜员</th>
                                <th width="90">预计发货</th>
                                <th width="7%">订单状态</th>
                                <th width="120px">货位号</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if(!DWY_Helper.isCanLoop(orderList.result)){%>
                            <tr>
                                <td colspan="12" align="center">暂无结果</td>
                            </tr>
                            <% }else{
                            orderList.result.forEach(function (element, index) { %>
                            <tr class=" <%= (element.stcode == 280) ? "mark-row":"" %>">
                                <td width="45"><%= index+1 %></td>
                                <td width="7%"><a href="/customer/detail/<%= element.cid %>"><%= element.name %></a></td>
                                <td width="90"><a href="/taskseq/index/<%= element.lid %>"><%= element.lid %></a></td>
                                <td width="13%"><a href="/order/detail/<%= element.tid %>"><%= element.tid %></a></td>
                                <td width="6%"><%= element.typeStr %></td>
                                <td width="7%"><%= DWY_Helper.getAssistVal(element.brandId,brandInfo) %></td>
                                <td><%= element.prodInfo %></td>
                                <td width="7%"><%= element.prodName %></td>
                                <td width="10%"><%= element.parentSpaceinfoName %>/<%= element.spaceName %></td>
                                <td width="12%"><%= element.bname %>/<%= element.gname %></td>
                                <td width="90"><%= DWY_Helper.getLocalDateYMD(element.deliveryDate) %></td>
                                <td width="7%"><%= DWY_Helper.getAssistVal(element.stcode,stcodeInfo) %></td>
                                <td width="120px"><%= element.cargoSpaceIds %></td>
                            </tr>
                            <%  })
                            } %>
                            </tbody>
                        </table>
                        <%- pagination %>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('layouts/footer'); %>
<%- include('layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

        pageSetUp();
        $("#search-customer").validationEngine();

        $(".fg-date-picker").flatpickr(data_time_picker.data_picker);  // jQuery

        //重置
        $(".reset").click(function(){
            $("#search-customer input,#search-customer select").val('');
        })

        $(".search").click(function(){
            var col = $(this).parents(".col-xs-12").siblings(".col-xs-12");
            col.slideToggle().toggleClass("cont");
            if(col.hasClass("cont")){
                $(this).find("i").removeClass("fa-chevron-up").addClass("fa-chevron-down");
            }else{
                $(this).find("i").removeClass("fa-chevron-down").addClass("fa-chevron-up");
            }
        })
    })

</script>


<%- include('layouts/foot'); %>