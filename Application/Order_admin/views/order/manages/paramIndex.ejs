<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>


<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li><a class="back-url" href="/storesManage">门店管理</a></li>
            <li><a class="back-url" href="/storesManage/detail/<%= cid%>">门店信息</a></li>
            <li>配置价格系数</li>
            <li><a class="back-url" href="javascript:history.go(-1)"><i class="fa fa-chevron-left"></i>返回</a></li>
        </ol>
        <!-- end breadcrumb -->



    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">

        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <legend>配置价格系数
                        <a class="label label-primary" href="javascript:void(0);" id="setBtn">
                            设置
                        </a>
                    </legend>
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="post" action="/storesManage/doParam" id="param-form">

                            <div class="col-xs-12">

                                <!--键值+下拉选择+输入组合-->
                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label ">审核价价格系数: </label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[custom[number],maxSize[4],groupRequired[someName]]"
                                                   value="<%= paramInfo.revCoefficient %>" name="revCoefficient"
                                                   type="text" readonly>
                                            <span code-data="" class="unit"></span>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label ">工厂价价格系数: </label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[custom[number],maxSize[4],groupRequired[someName]]"
                                                   value="<%= paramInfo.factoryCoefficient %>" name="factoryCoefficient"
                                                   type="text" readonly>
                                            <span code-data="" class="unit"></span>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <input type="hidden" name="bid" value="<%= cid%>"/>

                            <div class="col-xs-8">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">

                                    <button class="btn btn-primary display-none" type="submit" id="subBtn">
                                        <i class="fa fa-save"></i>
                                        确认设置
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->

                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->


    </div>
    <!-- END MAIN CONTENT -->
</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

        pageSetUp();
        $("#param-form").validationEngine();
        
        $("#setBtn").on({
            click:function () {
                if($("#subBtn").is(':hidden')){
                    $("#subBtn").removeClass("display-none");
                    $("#param-form").find("input[type=text]").removeAttr("readonly");
                }
            }
        });

    })

</script>


<%- include('../layouts/foot'); %>