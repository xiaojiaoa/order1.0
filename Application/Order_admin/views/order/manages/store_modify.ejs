<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>修改门店信息</li>
        </ol>
        <!-- end breadcrumb -->
    </div>
    <!-- END RIBBON -->

    <!-- MAIN CONTENT -->
    <div id="content">

        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <legend>修改门店信息</legend>

                    <!-- row -->
                    <div class="row">
                        <form class="form-horizontal" method="post" action="/storesManage/doModify" id="create-store">

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-8">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label"><span class="requird"></span> 门店名称:</label>
                                        <div class="col-xs-10">
                                            <input class="form-control validate[required]" placeholder="请输入门店名称"
                                                   value="<%= storeInfo.storeName %>"
                                                   name="storeName">
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-xs-12">

                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label "><span class="requird"></span> 店长姓名:
                                        </label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[required]"
                                                   value="<%= storeInfo.storeGid %>"
                                                   name="storeGid">
                                        </div>

                                    </div>
                                </div>

                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label "><span class="requird"></span> 店长手机:
                                        </label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[required,funcCall[custom_validate_fn.isMobile]]"
                                                   placeholder="输入号码" type="tel"
                                                   value="<%= storeInfo.mobile %>"
                                                   name="mobile">
                                        </div>
                                    </div>
                                </div>

                                <input type="hidden" name="storeId" value="<%= cid %>">



                            </div>

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>
                                            门店类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control validate[required]" name="addrType">
                                                <option value="">- 请选择 -</option>
                                                <% addrTypesList.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (storeInfo.addrType == element.id )?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>
                                            经营类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control validate[required]" name="storeType">
                                                <option value="">- 请选择 -</option>
                                                <% storeTypes.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (storeInfo.storeType == element.id )?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% }) %>

                                            </select>
                                        </div>
                                    </div>
                                </div>


                            </div>

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>
                                            是否自带仓库:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control validate[required]" name="isWarehouse">
                                                <option value="">- 请选择 -</option>
                                                <option value="1" <%= (storeInfo.isWarehouse == 1) ? 'selected' : '' %> >
                                                    是
                                                </option>
                                                <option value="2" <%= (storeInfo.isWarehouse == 2) ? 'selected' : '' %> >
                                                    否
                                                </option>

                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>
                                            最低保证金:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[required]"
                                                   value="<%= storeInfo.minFunds %>"
                                                   name="minFunds">
                                            <span code-data="元" class="unit"></span>
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label"><span class="requird"></span>
                                            预警资金:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate[required]"
                                                   value="<%= storeInfo.warnFunds %>"
                                                   name="warnFunds">
                                            <span code-data="元" class="unit"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">门店所在行政区:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control validate"
                                                   value="<%= storeInfo.areaStr %>"
                                                   name="" readonly>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-8">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label"><span class="requird"></span> 门店地址:</label>
                                        <div class="col-xs-10">
                                            <input class="form-control validate[required]" placeholder="请输入详细地址"
                                                   value="<%= storeInfo.address %>"
                                                   name="address">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-8">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">备注:</label>
                                        <div class="col-xs-10">
                                            <textarea name="remark" class="form-control"
                                                      cols="30" rows="5"><%= storeInfo.remark %></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-8">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">

                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-save"></i>
                                        确认添加
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->

                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->


    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {

//        pageSetUp();

        $("#create-store").validationEngine();


//        结合html5标准事件 oninput 和 IE 专属事件 onpropertychange 事件来动态监听输入框值变化
        $('#mobile').on('input propertychange', function () {
            var mobile = this.value;
            if ($("#mobile").validationEngine('validate')) {
                $.ajax({
                    url: '/getEmployeesByMobile/' + mobile,
                    success: function (data) {
                        console.log('employees3333',data)
                        if(data.result.length !=0){
                            location.href = "/employees/detail/" + data.result[0].id;
                        }
                    },
                    error: function (response) {
                        layer.close(index)
                        var data = JSON.parse(response.responseText);
                        $.smallBox({
                            title: "操作失败",
                            content: data.msg,
                            color: "#C46A69",
                            iconSmall: "fa fa-times fa-2x fadeInRight animated",
                            timeout: 3000
                        });
                    }
                });
            }
        });

        $(".fg-date-picker").flatpickr(data_time_picker.data_picker); // jQuery


    })

</script>


<%- include('../layouts/foot'); %>