        $(".fg-date-picker").flatpickr(data_time_picker.data_picker); // jQuery
        DWY_area.init({});


        var areaParentId = $('#areaParentId');
        var areaChilId = $('#areaChidId');
        areaParentId.change(function () {
            var ftyId = $(this).val();
            if (!ftyId) {
                areaChilId.html('<option value="">- 请选择 -</option>');
                return
            }

            var TypesList = <%-  JSON.stringify(TypesList) %>;
            areaChilId.empty();
            $(".select2-container ul li").empty();

            var htmls = $(".select2-container ul li").html();
            if(htmls=='undefined'||htmls==''||htmls==null){
                $(".select2-search-choice").removeClass("select2-search-choice");
                $(".select2-choices li").css("height","30px")
            }
            var html = '';
            if (TypesList[ftyId]) {
                var child = TypesList[ftyId];
                if(child.length == 0){
                    html = '<option value="">暂无分类</option>'
                }else {

                    for (var i = 0; i < child.length; i++) {

                        html += '<option value="' + child[i].id + '"  selected="selected">' + child[i].name + '</option>'

                    }
                }
                areaChilId.html(html);
            }else{
                areaChilId.html('<option value="">- 请选择 -</option>');
                return
            }


        })


    })

</script>


