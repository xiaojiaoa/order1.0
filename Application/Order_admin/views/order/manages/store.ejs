<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main" class="mainFlex">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>门店管理</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content" class="dis-flex">
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>订单搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">门店名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  type="text"
                                                   value="<%= DWYRequest.query.storeName %>"
                                                   name="storeName">
                                        </div>
                                    </div>
                                </div>

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">门店编号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  type="text"
                                                   value="<%= DWYRequest.query.bid %>"
                                                   name="bid">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">新建日期:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker" value="<%= DWYRequest.query.startDate %>"
                                                   name="startDate">
                                        </div>
                                        <label class="control-label " style="float: left"> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker" value="<%= DWYRequest.query.endDate %>"
                                                   name="endDate">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">门店类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="addrType">
                                                <option value="">- 请选择 -</option>
                                                <% addrTypesList.forEach(function (element) { %>
                                                    <option value="<%= element.id %>" <%= (DWYRequest.query.addrType == element.id )?"selected":"" %> ><%= element.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">经营类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="storeType">
                                                <option value="">- 请选择 -</option>
                                                <% storeTypes.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.storeType == element.id )?"selected":"" %> ><%= element.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">大区类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="regionTypeId">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                if(DWY_Helper.isCanLoop(TypesList)){
                                                TypesList.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.regionTypeId == element.id )?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <% })
                                                }%>

                                            </select>
                                        </div>
                                    </div>
                                </div>


                            </div>


                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <% if (DWY_Helper.hasPermission(Permission.store.create.id, permission) ){ %>
                                    <a class="btn btn-primary margin-right-5" href="/storesManage/create">
                                        <i class="fa fa-save"></i>
                                        新建门店
                                    </a>
                                    <% } %>
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well dis-flex">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>门店列表</h6>

                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row dis-flex">
                <div class="col-xs-12 dis-flex">
                    <div class="table-responsive dis-flex">
                        <table class="table table-bordered table-hover table-striped table-scroll dis-flex">
                            <thead>
                            <tr>
                                <th width="4%">序号</th>
                                <th>门店编号</th>
                                <th>门店名称</th>
                                <th width="7%">店长姓名</th>
                                <th width="105px">店长手机号</th>
                                <th width="20%">门店地址</th>
                                <th width="80px">门店类型</th>
                                <th width="80px">经营类型</th>
                                <th width="95px">是否自带仓库</th>
                                <th>新建日期</th>
                                <th>最低保证金(元)</th>
                                <th width="250px">查看</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(storeList.totalItems != 0  ){
                            storeList.result.forEach(function (element, index) { %>
                            <tr>
                                <td width="4%"><%= index+1 %></td>
                                <td><a href="/storesManage/detail/<%= element.bid %>"><%= element.bid %></a></td>
                                <td><%= element.storeName %></td>
                                <td width="7%"><%= element.storeGid %></td>
                                <td width="105px"><%= element.mobile %></td>
                                <td  width="20%"><%= element.provinceStr %> <%= element.cityStr %> <%= element.areaStr %> <%= element.address %></td>
                                <td width="80px"><%= DWY_Helper.getAssistVal(element.addrType, addrTypesList) %></td>
                                <td width="80px"><%= DWY_Helper.getAssistVal(element.storeType, storeTypes) %></td>
                                <td width="95px"><%= DWY_Helper.getWhether(element.isWarehouse) %></td>
                                <td><%= DWY_Helper.getLocalDate(element.addTime) %></td>
                                <td><%= element.minFunds %></td>
                                <td width="250px">
                                    <% if (DWY_Helper.hasPermission(Permission.store.queryDept.id, permission) ){ %>
                                    <a href="/department/stores/<%= element.bid %>" class="label label-primary">部门信息</a>
                                    <% } %>
                                    <% if (DWY_Helper.hasPermission(Permission.store.queryRole.id, permission) ){ %>
                                    <a href="/roles/<%= element.bid %>/9?type=stores" class="label label-primary">角色信息</a>
                                    <% } %>
                                    <% if (DWY_Helper.hasPermission(Permission.store.queryEmployee.id, permission) ){ %>
                                    <a href="/stores/employees?bid=<%= element.bid %>&type=stores" class="label label-primary">查看柜员</a>
                                    <% } %>
                                </td>
                            </tr>
                            <%  })
                            }else{ %>
                            <tr>
                                <td colspan="12" align="center">暂无结果</td>
                            </tr>
                            <% } %>

                            </tbody>
                        </table>
                        <%- pagination %>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {


        pageSetUp();

        $(".fg-date-time-picker").flatpickr(data_time_picker.data_picker); // jQuery
    })

</script>


<%- include('../layouts/foot'); %>