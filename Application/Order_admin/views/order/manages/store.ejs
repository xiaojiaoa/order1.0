<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>门店管理</li>
        </ol>
        <!-- end breadcrumb -->


    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>订单搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">门店名称:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  type="text"
                                                   value="<%= DWYRequest.query.name %>"
                                                   name="name">
                                        </div>
                                    </div>
                                </div>

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">门店编号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  type="text"
                                                   value="<%= DWYRequest.query.mobile %>"
                                                   name="mobile">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">建客日期:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker" placeholder="" type="text"  value="<%= DWYRequest.query.startDate %>"
                                                   name="startDate">
                                        </div>
                                        <label class="control-label " style="float: left"> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker" placeholder="" type="text"  value="<%= DWYRequest.query.endDate %>"
                                                   name="endDate">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">门店类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="ctype">
                                                <option value="">- 请选择 -</option>
                                                <option value="1" <%= (DWYRequest.query.ctype == 1)?"selected":"" %> >路边店</option>
                                                <option value="2" <%= (DWYRequest.query.ctype == 2)?"selected":"" %>>商超店</option>
                                                <option value="3" <%= (DWYRequest.query.ctype == 3)?"selected":"" %>>卖场店</option>
                                                <option value="4" <%= (DWYRequest.query.ctype == 4)?"selected":"" %>>仓储店</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">经营类型:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="ctype">
                                                <option value="">- 请选择 -</option>
                                                <option value="1" <%= (DWYRequest.query.ctype == 1)?"selected":"" %> >自营店</option>
                                                <option value="2" <%= (DWYRequest.query.ctype == 2)?"selected":"" %>>加盟店</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>


                            </div>


                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <a class="btn btn-primary margin-right-5" href="/storesManage/create">
                                        <i class="fa fa-save"></i>
                                        新建门店
                                    </a>
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>门店列表</h6>

                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>门店编号</th>
                                <th>门店名称</th>
                                <th>店长姓名</th>
                                <th>店长手机号</th>
                                <th>门店地址</th>
                                <th>门店类型</th>
                                <th>经营类型</th>
                                <th>是否自带仓库</th>
                                <th>新建日期</th>
                                <th>最低保证金</th>
                                <th>查看</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>1</td>
                                <td><a href="/storesManage/detail/5555">5555</a></td>
                                <td>湖滨银泰店</td>
                                <td>湖滨银泰店</td>
                                <td>湖滨银泰店</td>
                                <td>湖滨银泰店</td>
                                <td>湖滨银泰店</td>
                                <td>湖滨银泰店</td>
                                <td>湖滨银泰店</td>
                                <td>湖滨银泰店</td>
                                <td>湖滨银泰店</td>
                                <td><a href="/department">部门信息</a> <a href="/roles" class="margin-left-20">角色信息</a></td>
                            </tr>


                            </tbody>
                        </table>
                        <!--pagination-->

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


