<script>

    $(function () {
        $('ul.menu-list').scrollTop(localStorage.getItem('menuScroll-height'));


//      $('.mainFlex').css('height',window.innerHeight-80);

//        $(".table-scroll ").niceScroll();
//        $(".menu-list").niceScroll({styler:"fb",cursorcolor:"#65cea7", cursorwidth: '3', cursorborderradius: '0px',background: '#424f63', spacebarenabled:false, cursorborder: '1px solid #fff'});

        var type = window.location.pathname;
        $('ul.menu-list li:has(a[href="' + type + '"])').addClass('active');

        $('ul.menu-list li').click(function () {
            var innerHeight =  $('ul.menu-list').scrollTop();
//            var height = $(this).offset().top;

            localStorage.setItem('menuScroll-height',innerHeight);
        });

        // 自适应固定表头
        if($(".table-scroll2").length>0){
            // Create the measurement node
            var scrollDiv = document.createElement("div");
            scrollDiv.style.overflow = 'scroll';
            document.body.appendChild(scrollDiv);
            var scrollbarWidth = scrollDiv.offsetWidth - scrollDiv.clientWidth;
            document.body.removeChild(scrollDiv);
            if(scrollbarWidth < 100){
                $('.table-scroll thead').css('width','calc( 100% - '+scrollbarWidth+'px )')
            }

            $(".table-scroll2").freezeHeader();
        }

        //列表查询--高级查询
        if($(".topFindBtn").length>0){
            $(".topFindBtn").on({
                click:function () {
//                    查询内容的展示与隐藏
                  $(".topFindShow").toggleClass("display-block");
//                  高级查询的样式切换
                   if($(".fa-chevron-up").length>0){
                       $(this).find("i").removeClass("fa-chevron-up").addClass('fa-chevron-down');
                   }
                   else{
                       $(this).find("i").removeClass("fa-chevron-down").addClass('fa-chevron-up');
                   }
                }
            });
        }
        // 列表查询--重置表单
        if($(".resetForm").length>0){
            $(".resetForm").on({
                click:function () {
                    var formId=$(this).data("form");
                    //请空表单内容
                    $(':input','#'+formId)
                        .not(':button, :submit, :reset, :hidden')
                        .val('')
                        .removeAttr('checked')
                        .removeAttr('selected');
                    //再次提交表单
//                    $("#"+formId).submit();
                }
            });
        }

    })
</script>