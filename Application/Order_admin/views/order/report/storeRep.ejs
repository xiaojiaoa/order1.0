                                    <%}%>
                                    <% if(type==99999997){%>
                                    家居顾问
                                    <%}%>
                                </th>
                                <th>期间量尺数</th>
                                <th>成交客户数</th>
                                <th>成交率(%)</th>
                                <th>平均成交时间(天)</th>
                                <th>单客户平均成交金额</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(DWY_Helper.isCanLoop(storeRepList.result)){
                            storeRepList.result.forEach(function (element,index) { %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td><%= element.storeName %></td>
                                <td><%= element.name %></td>
                                <% if(type==99999996){%>
                                <td><a href="/showTaskseq/designer/measured/<%= element.gid%>?startDate=<%= DWYRequest.query.startDate %>&endDate=<%= DWYRequest.query.endDate %>"><%= element.meased %></a></td>
                                <td><a href="/showTaskseq/designer/deal/<%= element.gid%>?startDate=<%= DWYRequest.query.startDate %>&endDate=<%= DWYRequest.query.endDate %>"><%= element.conStcode %></a></td>
                                <%}%>
                                <% if(type==99999997){%>
                                <td><a href="/showTaskseq/advisor/measured/<%= element.gid%>?startDate=<%= DWYRequest.query.startDate %>&endDate=<%= DWYRequest.query.endDate %>"><%= element.meased %></a></td>
                                <td><a href="/showTaskseq/advisor/deal/<%= element.gid%>?startDate=<%= DWYRequest.query.startDate %>&endDate=<%= DWYRequest.query.endDate %>"><%= element.conStcode %></a></td>
                                <%}%>
                                <td><%= element.percent %></td>
                                <td><%= element.dealTime %></td>
                                <td><%= element.ordersum %></td>
                            </tr>
                            <%})
                            }else{ %>
                            <tr>
                                <td colspan="100" align="center">暂无结果</td>
                            </tr>
                            <% } %>

                            </tbody>
                            <%}%>
                        </table>
                    </div>
                    <%- pagination %>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
