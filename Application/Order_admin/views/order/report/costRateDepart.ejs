<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main" class="mainFlex">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>报表管理</li>
        </ol>

    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content" class="dis-flex">

        <%- include('./reportManage'); %>
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>客户搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get" id="search-customer">


                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">部门名:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入部门名" value="<%= DWYRequest.query.departmentName %>" type="text" name="departmentName">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="col-xs-3 control-label">日期范围:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker"
                                                   value="<%= DWYRequest.query.startDate %>"
                                                   name="startDate">
                                        </div>
                                        <label class="control-label " style="float: left"> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker"
                                                   value="<%= DWYRequest.query.endDate %>"
                                                   name="endDate">
                                        </div>
                                    </div>
                                </div>
                                <% if(DWY_GLOBAL.ButtonOpen!=1){ %>
                                <div class="col-xs-3 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                    <label class="btn btn-default reset margin-left-20">
                                        重置
                                    </label>
                                    <label class="search margin-left-20">
                                        高级查询
                                        <i class="fa fa-chevron-down"></i>
                                    </label>
                                </div>
                                <%}%>
                                <% if(DWY_GLOBAL.ButtonOpen!=1){ %>
                                <div class="slideToggle display-none">
                                    <%}%>
                                    <div class="col-xs-3">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label">结算价:</label>
                                            <div class="col-xs-8">
                                                <div class="col-xs-6">
                                                    <select class="form-control" name="settlementPriceFilter">
                                                        <option value="1" <%= (DWYRequest.query.settlementPriceFilter == 1)?"selected":"" %>>></option>
                                                        <option value="2" <%= (DWYRequest.query.settlementPriceFilter == 2)?"selected":"" %>>>=</option>
                                                        <option value="3" <%= (DWYRequest.query.settlementPriceFilter == 3)?"selected":"" %>>=</option>
                                                        <option value="4" <%= (DWYRequest.query.settlementPriceFilter == 4)?"selected":"" %>><</option>
                                                        <option value="5" <%= (DWYRequest.query.settlementPriceFilter == 5)?"selected":"" %>><=</option>
                                                    </select>
                                                </div>
                                                <div class="col-xs-6">
                                                    <input class="form-control" placeholder="请输入结算价" value="<%= DWYRequest.query.settlementPrice %>" type="text" name="settlementPrice">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-3">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label">应收款:</label>
                                            <div class="col-xs-8">
                                                <div class="col-xs-6">
                                                    <select class="form-control" name="finalPriceFilter">
                                                        <option value="1" <%= (DWYRequest.query.finalPriceFilter == 1)?"selected":"" %>>></option>
                                                        <option value="2" <%= (DWYRequest.query.finalPriceFilter == 2)?"selected":"" %>>>=</option>
                                                        <option value="3" <%= (DWYRequest.query.finalPriceFilter == 3)?"selected":"" %>>=</option>
                                                        <option value="4" <%= (DWYRequest.query.finalPriceFilter == 4)?"selected":"" %>><</option>
                                                        <option value="5" <%= (DWYRequest.query.finalPriceFilter == 5)?"selected":"" %>><=</option>
                                                    </select>
                                                </div>
                                                <div class="col-xs-6">
                                                    <input class="form-control" placeholder="请输入应收款" value="<%= DWYRequest.query.finalPrice %>" type="text" name="finalPrice">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-3">
                                        <div class="form-group">
                                            <label class="col-xs-4 control-label">门店名:</label>
                                            <div class="col-xs-8">
                                                <input class="form-control" placeholder="请输入门店名" value="<%= DWYRequest.query.storeName %>" type="text" name="storeName">
                                            </div>
                                        </div>
                                    </div>
                                    <% if(DWY_GLOBAL.ButtonOpen!=1){ %>
                                </div>
                                <%}%>
                            </div>
                            <% if(DWY_GLOBAL.ButtonOpen==1){ %>
                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <input type="hidden" value="<%= DWYRequest.query.ifInitTime?DWYRequest.query.ifInitTime:'' %>" name="ifInitTime">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>

                                </div>
                            </div>
                            <%}%>
                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well dis-flex">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>门店相关报表
                        <form class="" method="post" action="/report/store/export/departmentResupplyRate" style="display: inline-block;">
                            <input type="hidden" name="mytest" value="<%= JSON.stringify( DWYRequest.query)%>">
                            <button class="label <%= (DWY_Helper.isCanLoop(dataList.result)?'label-primary':'label-grey')%>" type="submit" <%= (DWY_Helper.isCanLoop(dataList.result)?'':'disabled')%>>
                                导出清单
                            </button>
                        </form>
                    </h6>
                    <hr class="simple">
                </div>
            </div>
            <%- include('./common_links3'); %>
            <!-- row -->
            <div class="row dis-flex">
                <div class="col-xs-12 dis-flex">
                    <div class="table-responsive dis-flex">
                        <table class="table table-bordered table-striped table-hover table-scroll2">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>部门名</th>
                                <th>店名</th>
                                <th>结算价</th>
                                <th>应收款</th>
                                <th class="display-none">成本率</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(DWY_Helper.isCanLoop(dataList.result)){
                            dataList.result.forEach(function (element,index) { %>
                            <tr>
                                <td><%= DWY_Helper.incrementNum(DWYRequest.query.pageNo,index)%></td>
                                <td><%= element.departmentName %></td>
                                <td><%= element.storeName %></td>
                                <td><%= element.settlementPrice %></td>
                                <td><%= element.finalPrice %></td>
                                <td class="display-none"><%= element.rate %></td>
                            </tr>
                            <%})
                            }else{ %>
                            <tr>
                                <td colspan="100" align="center">暂无结果</td>
                            </tr>
                            <% } %>

                            </tbody>
                        </table>
                    </div>
                    <%- pagination %>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>
<%- include('./common_js'); %>

<script type="text/javascript">

    $(document).ready(function () {
        $("#search-customer").validationEngine();
        $(".fg-date-picker").flatpickr(data_time_picker.data_picker); // jQuery

        $("input[name='res']").click();
    })

</script>


<%- include('../layouts/foot'); %>
