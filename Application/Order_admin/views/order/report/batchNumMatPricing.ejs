<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main" class="mainFlex">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>报表管理</li>
        </ol>

    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content" class="dis-flex">


        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>客户搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get" id="search-customer">

                            <div class="col-xs-12">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">建单时间:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-picker" placeholder="" type="text"  value="<%= DWYRequest.query.addTime %>"
                                                   name="addTime">
                                        </div>
                                    </div>
                                </div>


                            </div>



                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">

                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well dis-flex">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>报表列表</h6>
                    <hr class="simple">
                </div>
            </div>
            <div class="orderItemLayerTit">
                <ul class="orderItemMenu">
                    <a href="/orderMatPricing">
                        <li class="padding-10 ">
                            订单物料计价
                        </li>
                    </a>
                    <a href="/batchNumMatPricing">
                        <li class="padding-10 materielBak">
                            批次物料计价
                        </li>
                    </a>
                    <a href="/orderCount">
                        <li class="padding-10 ">
                            订单计数
                        </li>
                    </a>
                </ul>

            </div>
            <!-- row -->
            <div class="row dis-flex">
                <div class="col-xs-12 dis-flex">
                    <div class="table-responsive dis-flex">
                        <table class="table table-bordered table-striped table-hover table-scroll dis-flex">
                            <thead>
                            <tr>
                                <th width="4%">序号</th>
                                <th>批次号</th>
                                <th>物料号</th>
                                <th>订单每种物料采购价 </th>
                                <th>订单每种物料出厂价 </th>
                                <th>每种物料总数</th>
                                <th>建单时间</th>
                                <th>生成时间</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(DWY_Helper.isCanLoop(batchNumMatPricingList.result)){
                            batchNumMatPricingList.result.forEach(function (element,index) { %>
                            <tr>
                                <td width="4%"><%= index+1 %></td>
                                <td><%= element.batchNumber %></td>
                                <td><%= element.mid %></td>
                                <td><%= element.totalPrice %></td>
                                <td><%= element.totalUnitPrice %></td>
                                <td><%= element.amount %></td>
                                <td><%= DWY_Helper.getLocalDateYMD(element.addTime) %></td>
                                <td><%= DWY_Helper.getLocalDateYMD(element.createTime) %></td>
                            </tr>
                            <%})
                            }else{ %>
                            <tr>
                                <td colspan="100" align="center">暂无结果</td>
                            </tr>
                            <% } %>

                            </tbody>
                        </table>
                        <%- pagination %>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {
        $("#search-customer").validationEngine();
        $(".fg-date-picker").flatpickr(data_time_picker.data_picker); // jQuery
    })

</script>


<%- include('../layouts/foot'); %>