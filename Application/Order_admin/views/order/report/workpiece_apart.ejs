<%- include('../layouts/head_top'); %>
<%- include('../layouts/head_bottom'); %>
<%- include('../layouts/header'); %>
<%- include('../layouts/nav'); %>


<!-- MAIN PANEL -->
<div id="main" role="main" class="mainFlex">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>报表管理</li>
        </ol>

    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content" class="dis-flex">

        <%- include('./reportManage'); %>
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>客户搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get" id="search-customer">


                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-2">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">批次号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入批次号" value="<%= DWYRequest.query.batchNumber %>" type="text" name="batchNumber">
                                        </div>
                                    </div>
                                </div>
                                <% if(DWY_GLOBAL.ButtonOpen==1){ %>
                                <div class="col-xs-3 text-center">
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                    <label class="btn btn-default reset margin-left-20">
                                        重置
                                    </label>
                                    <label class="search margin-left-20">
                                        高级查询
                                        <i class="fa fa-chevron-down"></i>
                                    </label>
                                </div>
                                <%}%>
                                <% if(DWY_GLOBAL.ButtonOpen==1){ %>
                                <div class="slideToggle display-none">
                                    <%}%>
                                    <div class="col-xs-4">
                                        <div class="form-group">
                                            <label class="col-xs-2 control-label">排料日期:</label>
                                            <div class="col-xs-4">
                                                <input class="form-control fg-date-picker" placeholder="" type="text"  value="<%= DWYRequest.query.startTime %>"
                                                       name="startTime">
                                            </div>
                                            <label class="control-label " style="float: left"> 至 </label>
                                            <div class="col-xs-4">
                                                <input class="form-control fg-date-picker" placeholder="" type="text"  value="<%= DWYRequest.query.endTime %>"
                                                       name="endTime">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-xs-2 control-label">改价日期:</label>
                                            <div class="col-xs-4">
                                                <input class="form-control fg-date-picker" placeholder="" type="text"  value="<%= DWYRequest.query.startPriceTime %>"
                                                       name="startPriceTime">
                                            </div>
                                            <label class="control-label " style="float: left"> 至 </label>
                                            <div class="col-xs-4">
                                                <input class="form-control fg-date-picker" placeholder="" type="text"  value="<%= DWYRequest.query.endPriceTime %>"
                                                       name="endPriceTime">
                                            </div>
                                        </div>
                                    </div>
                                    <% if(DWY_GLOBAL.ButtonOpen!=1){ %>
                                    <div class="col-xs-3">
                                        <div class="col-xs-12 text-center">
                                            <button class="btn btn-primary " type="submit">
                                                <i class="fa fa-search"></i>
                                                查询
                                            </button>

                                        </div>
                                    </div>
                                    <%}%>
                                    <% if(DWY_GLOBAL.ButtonOpen==1){ %>
                                </div>
                                <%}%>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well dis-flex">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6 class="receipt">
                        <h6>工厂相关报表
                            <form class="" method="post" action="/report/factory/export/workpiece_apart" style="display: inline-block;">
                                <input type="hidden" name="mytest" value="<%= JSON.stringify( DWYRequest.query)%>">
                                <button class="label label-primary " type="submit">
                                    导出清单
                                </button>
                            </form>
                        </h6>
                    </h6>
                </div>
            </div>
            <%- include('./common_links'); %>
            <!-- row -->
            <div class="row dis-flex">
                <div class="col-xs-12 dis-flex">
                    <div class="table-responsive dis-flex">
                        <table class="table table-bordered table-striped table-hover table-scroll2">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>改价时间</th>
                                <th>物料编码</th>
                                <th>物料名称</th>
                                <th>工件名</th>
                                <th>长</th>
                                <th>宽</th>
                                <th>面积</th>
                                <th>纹理方向</th>
                                <th>封边信息</th>
                                <th>排孔信息</th>
                                <th>数量</th>
                                <th>批次号</th>
                                <th>订单号</th>
                                <th>排料时间</th>
                                <th>拆单时间</th>
                                <th>订单状态</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            if(DWY_Helper.isCanLoop(dataList.result)){
                            dataList.result.forEach(function (element,index) { %>
                            <tr>
                                <td><%= DWY_Helper.incrementNum(DWYRequest.query.pageNo,index)%></td>
                                <td><%=DWY_Helper.getLocalDateYMD(element.modifyPriceTime)  %></td>
                                <td><%= element.mateId %></td>
                                <td><%= element.mateName %></td>
                                <td><%= element.name %></td>
                                <td><%= element.length %></td>
                                <td><%= element.width %></td>
                                <td><%= element.area %></td>
                                <td><%= element.textureOrientation %></td>
                                <td><%= element.edgeInformation %></td>
                                <td><%= element.holeInformation %></td>
                                <td><%= element.amount %></td>
                                <td><%= element.batchNumber %></td>
                                <td><%= element.tid %></td>
                                <td><%=DWY_Helper.getLocalDateYMD(element.scheduleTime)  %></td>
                                <td><%=DWY_Helper.getLocalDateYMD(element.apartTime)  %></td>
                                <td><%= element.statusName %></td>
                            </tr>
                            <%})
                            }else{ %>
                            <tr>
                                <td colspan="100" align="center">暂无结果</td>
                            </tr>
                            <% } %>

                            </tbody>
                        </table>
                    </div>
                    <%- pagination %>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('../layouts/footer'); %>
<%- include('../layouts/footer_common_script'); %>
<%- include('./common_js'); %>

<script type="text/javascript">

    $(document).ready(function () {
        $("#search-customer").validationEngine();
        $(".fg-date-picker").flatpickr(data_time_picker.data_picker); // jQuery
    })

</script>


<%- include('../layouts/foot'); %>
