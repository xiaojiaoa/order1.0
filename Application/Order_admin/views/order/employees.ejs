<%- include('layouts/head_top'); %>
<%- include('layouts/head_bottom'); %>
<%- include('layouts/header'); %>
<%- include('layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>基础页面</li>
        </ol>
        <!-- end breadcrumb -->



    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>订单搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">员工姓名:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入员工姓名" type="text" value="<%= DWYRequest.query.name %>"
                                                   name="name">
                                        </div>
                                    </div>
                                </div>

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">柜员手机:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入柜员手机" type="text" value="<%= DWYRequest.query.mobile %>"
                                                   name="mobile">
                                        </div>
                                    </div>
                                </div>

                                <!--下拉选择 有键值-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">所属部门:</label>
                                        <div class="col-xs-8">

                                            <select class="form-control" name="did">
                                                <option value="">- 请选择 -</option>

                                                <% departmentsInfo.forEach(function (element, index) {
                                                if(element.subDeparts.length != 0){%>
                                                <optgroup label="<%= element.name %>">
                                                    <% element.subDeparts.forEach(function (element) {  %>
                                                    <option value="<%= element.id %>" <%= (DWYRequest.query.did == element.id)?"selected":"" %> >
                                                        <%= element.name %>
                                                    </option>
                                                    <%  }) %>
                                                </optgroup>
                                                <%  }else{ %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.did == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <%  }
                                                }) %>

                                            </select>

                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">
                                    <a class="btn btn-primary margin-right-5" href="/employees/create">
                                        <i class="fa fa-save"></i>
                                        新增柜员
                                    </a>
                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>
                        员工列表
                        <a class="label label-primary" href="/department">
                            查看所有部门信息
                        </a>
                    </h6>

                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>员工编号</th>
                                <th>员工名称</th>
                                <th>手机号</th>
                                <th>员工属性</th>
                                <th>所属部门</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            var num = 1;
                            userList.result.forEach(function (element) { %>
                            <tr>
                                <td><%= num %></td>
                                <td><a href="/employees/detail/<%= element.id %>"><%= element.id %></a></td>
                                <td><%= element.name %></td>
                                <td><%= element.mobile %></td>
                                <% if(element.empType == 10){ %> <td>企业</td> <% }else{ %> <td>加盟店</td> <%} %>
                                <td><%= element.deptNme %></td>
                            </tr>
                            <% num++ }) %>

                            </tbody>
                        </table>
                        <%- pagination %>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('layouts/footer'); %>
<%- include('layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {


        pageSetUp();



    })

</script>


<%- include('layouts/foot'); %>