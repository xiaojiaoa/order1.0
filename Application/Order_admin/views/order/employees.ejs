<%- include('layouts/head_top'); %>
<%- include('layouts/head_bottom'); %>
<%- include('layouts/header'); %>
<%- include('layouts/nav'); %>

<!-- MAIN PANEL -->
<div id="main" role="main">

    <!-- RIBBON -->
    <div id="ribbon">

        <!-- breadcrumb -->
        <ol class="breadcrumb">
            <li>后台管理</li>
            <li>柜员管理</li>
        </ol>
        <!-- end breadcrumb -->



    </div>
    <!-- END RIBBON -->


    <!-- MAIN CONTENT -->
    <div id="content">
        <!-- well -->
        <div class="well">
            <!-- row -->
            <div class="row">
                <!-- col -->
                <div class="col-xs-12">
                    <!--<legend>订单搜索</legend>-->
                    <!-- row -->
                    <div class="row search-form">
                        <form class="form-horizontal" method="get">

                            <div class="col-xs-12">

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <% switch (type) {
                                            case 'stores': %>
                                            <label class="col-xs-4 control-label">门店号:</label>
                                        <%        break;
                                            case 'organizations': %>
                                        <label class="col-xs-4 control-label">机构号:</label>
                                        <%        break;
                                        } %>

                                        <div class="col-xs-8">
                                            <input class="form-control" value="<%=  bid %>" name="bid" readonly >
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">机构号:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="bid">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                organizationsList.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.bid == element.id)?"selected":"" %>><%= element.name %></option>
                                                <%  }) %>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">柜员号:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" value="<%= DWYRequest.query.id %>"
                                                   name="id">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">柜员手机:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control" placeholder="请输入柜员手机" type="text" value="<%= DWYRequest.query.mobile %>"
                                                   name="mobile">
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-xs-12">

                                <!--输入字段-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">柜员姓名:</label>
                                        <div class="col-xs-8">
                                            <input class="form-control"  value="<%= DWYRequest.query.name %>"
                                                   name="name">
                                        </div>
                                    </div>
                                </div>

                                <!--输入字段-->


                                <!--下拉选择 有键值-->
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">所属部门:</label>
                                        <div class="col-xs-8">

                                            <select class="form-control" name="did">
                                                <option value="">- 请选择 -</option>
                                                <% departmentsInfo.forEach(function (element, index) {
                                                if(element.subDeparts.length != 0){%>
                                                <optgroup label="<%= element.name %>">
                                                    <% element.subDeparts.forEach(function (element) {  %>
                                                    <option value="<%= element.id %>" <%= (DWYRequest.query.did == element.id)?"selected":"" %> >
                                                        <%= element.name %>
                                                    </option>
                                                    <%  }) %>
                                                </optgroup>
                                                <%  }else{ %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.did == element.id)?"selected":"" %> >
                                                    <%= element.name %>
                                                </option>
                                                <%  }
                                                }) %>
                                            </select>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">建立日期:</label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker" placeholder="" type="text" value="<%= DWYRequest.query.startDate%>"
                                                   name="startDate">
                                        </div>
                                        <label class="from-to control-label "> 至 </label>
                                        <div class="col-xs-4">
                                            <input class="form-control fg-date-time-picker" placeholder="" type="text" value="<%= DWYRequest.query.endDate%>"
                                                   name="endDate">
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-xs-12">
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label class="col-xs-4 control-label">角色:</label>
                                        <div class="col-xs-8">
                                            <select class="form-control" name="roleId">
                                                <option value="">- 请选择 -</option>
                                                <%
                                                roleList.forEach(function (element) { %>
                                                <option value="<%= element.id %>" <%= (DWYRequest.query.roleId == element.id)?"selected":"" %>><%= element.name %></option>
                                                <%  }) %>
                                            </select>

                                        </div>
                                    </div>
                                </div>

                            </div>



                            <div class="col-xs-12">
                                <hr class="simple">
                                <div class="col-xs-12 text-center">

                                    <% if(type == 'stores'){ %>
                                    <!--<a class="btn btn-primary">-->
                                        <!--<i class="fa fa-save"></i>-->
                                        <!--&lt;!&ndash;href="/stores/employees/create/bid"&ndash;&gt;-->
                                        <!--门店可否 新增柜员 未定？？？-->
                                    <!--</a>-->

                                    <%  }else{ %>
                                    <a class="btn btn-primary" href="/<%= type %>/employees/create/<%=  bid %>">
                                        <i class="fa fa-save"></i>
                                        新增柜员
                                    </a>

                                    <%  } %>

                                    <button class="btn btn-primary " type="submit">
                                        <i class="fa fa-search"></i>
                                        查询
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- end row -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end well -->

        <div class="well">

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <h6>
                        员工列表
                        <!--type<%=  type %>  bid<%=  bid %>  did<%=  did %>-->

                        <% switch (type) {
                        case 'stores': %>
                        <a class="label label-primary" href="/department/stores/<%=  bid %>">
                            查看所有部门信息
                        </a>
                        <%        break;
                        case 'organizations': %>
                        <a class="label label-primary" href="/department/organizations/<%=  user.bid %>">
                            查看所有部门信息
                        </a>
                        <%        break;
                        } %>
                    </h6>

                    <hr class="simple">
                </div>
            </div>

            <!-- row -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>序号</th>
                                <th>员工编号</th>
                                <th>员工名称</th>
                                <th>手机号</th>
                                <th>角色信息</th>
                                <th>所属部门</th>
                                <th>账号状态</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                                if(employeesList.totalItems != 0){
                                employeesList.result.forEach(function (element, index) { %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td><a href="/<%=  type %>/employees/detail/<%=  bid %>/<%= element.id %>"><%= element.id %></a></td>
                                <td><%= element.name %></td>
                                <td><%= element.mobile %></td>
                                <td>
                                    <% if(element.roleList){
                                    element.roleList.forEach(function (element) { %>
                                    <span class="separation"><%= element.name %></span>
                                    <%  })

                                    } %>
                                </td>
                                <td><%= element.deptName %></td>
                                <td>
                                <% if(element.stcode == 1){%>开启 <%} %>
                                <% if(element.stcode == 2){%> 关闭<%} %>
                                <% if(element.stcode == 0){%>锁定 <%} %>
                                </td>
                            </tr>
                            <% })
                                }else{ %>
                            <td colspan="7" class="text-align-center">暂无结果</td>
                            <%  }%>


                            </tbody>
                        </table>
                        <%- pagination %>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN CONTENT -->

</div>
<!-- END MAIN PANEL -->

<%- include('layouts/footer'); %>
<%- include('layouts/footer_common_script'); %>


<script type="text/javascript">

    $(document).ready(function () {


        pageSetUp();

        $(".fg-date-time-picker").flatpickr(data_time_picker.data_picker);  // jQuery

    })

</script>


<%- include('layouts/foot'); %>